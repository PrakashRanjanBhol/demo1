<!-- For General feature -->
<label for="feature-general" class="feature-label">
    <span class="feature-checkbox">
        <svg class="checkmark" viewBox="0 0 12 12">
            <polyline points="2,6 5,9 10,3" />
        </svg>
    </span>
    <span class="feature-name">General</span>
    <span class="feature-badge">1</span>
</label>

<!-- For other features -->
<label [for]="'feature-' + feature.id" class="feature-label" (click)="toggleFeature(feature.id); $event.preventDefault()">
    <span class="feature-checkbox">
        <svg class="checkmark" viewBox="0 0 12 12">
            <polyline points="2,6 5,9 10,3" />
        </svg>
    </span>
    <span class="feature-name">{{ feature.name }}</span>
    <span class="feature-badge" *ngIf="isFeatureEnabled(feature.id)">{{ getFeatureSequence(feature.id) }}</span>
</label>








getFeatureSequence(featureId: string): number {
  const index = this.selectedFeatures.indexOf(featureId);
  return index + 2; // +2 because General is 1, and array is 0-indexed
}






.feature-label {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 1.5px solid var(--app-settings-theme-border);
    background: var(--app-settings-bg);
    min-height: 42px;
    position: relative;
}

.feature-badge {
    position: absolute;
    top: 6px;
    right: 6px;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--app-settings-selected-border);
    color: white;
    font-size: 10px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
}
