interface GeneralContentProps {
  data: GeneralData;
}

const GeneralContent: React.FC<GeneralContentProps> = ({ data }) => {
  const [settings, setSettings] = useState<ToggleSetting[]>(data.settings);

  const toggle = (index: number): void => {
    const updated = [...settings];
    updated[index] = { ...updated[index], enabled: !updated[index].enabled };
    setSettings(updated);
  };

  return (
    <div style={{ display: "flex", flexDirection: "column", gap: "12px" }}>
      {settings.map((s, i) => (
        <div
          key={i}
          style={{
            display: "flex",
            alignItems: "center",
            justifyContent: "space-between",
            padding: "16px 20px",
            borderRadius: "12px",
            border: "1.5px solid #e2e8f0",
            background: "#f8fafc",
          }}
        >
          <span style={{ fontSize: "14px", fontWeight: 500, color: "#374151" }}>{s.label}</span>
          <div
            onClick={() => toggle(i)}
            role="switch"
            aria-checked={s.enabled}
            style={{
              width: 44,
              height: 24,
              borderRadius: "999px",
              cursor: "pointer",
              background: s.enabled
                ? "linear-gradient(135deg, #6366f1, #8b5cf6)"
                : "#cbd5e1",
              position: "relative",
              transition: "background 0.3s",
            }}
          >
            <div
              style={{
                position: "absolute",
                top: 3,
                left: s.enabled ? 22 : 3,
                width: 18,
                height: 18,
                borderRadius: "50%",
                background: "#fff",
                boxShadow: "0 1px 4px rgba(0,0,0,0.2)",
                transition: "left 0.3s",
              }}
            />
          </div>
        </div>
      ))}
    </div>
  );
};

