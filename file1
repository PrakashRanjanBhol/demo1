if (e.key === 'PageUp') {
    // prevent only if already at the very top
    if (target.scrollTop === 0) {
      e.preventDefault();
    }
  }

  if (e.key === 'PageDown') {
    // prevent only if already at the very bottom
    const atBottom = target.scrollTop + target.clientHeight >= target.scrollHeight;
    if (atBottom) {
      e.preventDefault();
    }
  }
