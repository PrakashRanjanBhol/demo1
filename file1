ngAfterViewInit() {
    // Example usage:
    this.createDrawioDownloadCard("myContainer");
  }

  createDrawioDownloadCard(targetId: any) {
    const target = document.getElementById(targetId);
    if (!target) return;

    // Card container
    const card = document.createElement("div");
    card.className = "drawio-download-card";

    // Header
    const header = document.createElement("div");
    header.className = "download-header";

    const icon = document.createElement("i");
    icon.className = "pi pi-sitemap";

    const headerTextContainer = document.createElement("div");
    const h3 = document.createElement("h3");
    h3.textContent = "Your Diagram is Ready!";

    const p = document.createElement("p");
    p.innerHTML = `Download the <code>.drawio</code> file and import it into Jira or Confluence to start editing instantly.`;

    headerTextContainer.appendChild(h3);
    headerTextContainer.appendChild(p);

    header.appendChild(icon);
    header.appendChild(headerTextContainer);

    // Actions row
    const actionsRow = document.createElement("div");
    actionsRow.className = "actions-row";

    // Download button
    const button = document.createElement("button");
    button.className = "download-btn";
    button.addEventListener("click", () => {
      console.log("Download clicked");
      // downloadDrawIO(); // Call your actual function here
    });

    const btnIcon = document.createElement("i");
    btnIcon.className = "pi pi-download";

    const btnText = document.createTextNode(" Download Diagram");

    button.appendChild(btnIcon);
    button.appendChild(btnText);

    // Usage guide
    const details = document.createElement("details");
    details.className = "usage-guide";

    const summary = document.createElement("summary");
    const summaryIcon = document.createElement("i");
    summaryIcon.className = "pi pi-info-circle";
    summary.appendChild(summaryIcon);
    summary.appendChild(document.createTextNode(" How to Use in Jira/Confluence"));

    const ol = document.createElement("ol");
    const steps = [
      "Click Download Diagram to save the file.",
      "In Jira or Confluence, open the page editor.",
      "Insert a diagram (Draw.io Macro) and choose Import.",
      "Select the downloaded file and start editing."
    ];
    steps.forEach(stepText => {
      const li = document.createElement("li");
      li.innerHTML = stepText.replace("Download Diagram", "<b>Download Diagram</b>")
        .replace("Import", "<b>Import</b>");
      ol.appendChild(li);
    });

    details.appendChild(summary);
    details.appendChild(ol);

    // Append elements together
    actionsRow.appendChild(button);
    actionsRow.appendChild(details);

    card.appendChild(header);
    card.appendChild(actionsRow);

    // Add to target
    target.appendChild(card);
  }






