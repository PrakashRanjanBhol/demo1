import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { LucideAngularModule, MessageSquare, BarChart2, Download, Settings, LayoutDashboard, FlaskConical, Users, BookOpen } from 'lucide-angular';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [CommonModule, LucideAngularModule],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {
  isDarkMode = false;

  // Lucide icons
  readonly MessageSquare = MessageSquare;
  readonly BarChart2 = BarChart2;
  readonly Download = Download;
  readonly Settings = Settings;
  readonly LayoutDashboard = LayoutDashboard;
  readonly FlaskConical = FlaskConical;
  readonly Users = Users;
  readonly BookOpen = BookOpen;

  cards = [
    {
      icon: 'message-square',
      title: 'Chat Playground',
      description: 'Interact with our advanced AI models in real-time. Experiment with prompts, test different scenarios, and explore the full capabilities of our LLM technology.',
      gradient: 'gradient-1'
    },
    {
      icon: 'bar-chart-2',
      title: 'Statistics',
      description: 'Monitor your usage analytics, track API performance, and gain insights into your AI interactions. View detailed metrics and optimize your workflow.',
      gradient: 'gradient-2'
    },
    {
      icon: 'download',
      title: 'Download',
      description: 'Export your conversation history, download trained models, and save your custom configurations. Access all your data in multiple formats.',
      gradient: 'gradient-3'
    },
    {
      icon: 'settings',
      title: 'Operations',
      description: 'Manage your AI operations efficiently. Configure model parameters, set up automation workflows, and monitor system performance in real-time.',
      gradient: 'gradient-4'
    },
    {
      icon: 'layout-dashboard',
      title: 'Dashboard',
      description: 'Get a comprehensive overview of your AI platform. Monitor active sessions, review recent activity, and access quick actions from a centralized hub.',
      gradient: 'gradient-5'
    },
    {
      icon: 'flask-conical',
      title: 'Laboratory',
      description: 'Experiment with cutting-edge AI features. Fine-tune models, test new algorithms, and prototype innovative solutions in a safe sandbox environment.',
      gradient: 'gradient-6'
    },
    {
      icon: 'users',
      title: 'Community',
      description: 'Connect with fellow AI enthusiasts, share insights, and collaborate on projects. Access forums, discussions, and community-driven resources.',
      gradient: 'gradient-7'
    },
    {
      icon: 'book-open',
      title: 'User Guidance',
      description: 'Access comprehensive tutorials, documentation, and best practices. Get step-by-step guidance to make the most of our AI platform and achieve your goals.',
      gradient: 'gradient-8'
    }
  ];

  navLinks = ['Features', 'Pricing', 'Documentation', 'API'];

  footerSections = [
    {
      title: 'Product',
      links: ['Features', 'Pricing', 'API Access', 'Integrations']
    },
    {
      title: 'Resources',
      links: ['Documentation', 'Tutorials', 'Community', 'Blog']
    },
    {
      title: 'Company',
      links: ['About Us', 'Careers', 'Contact', 'Partners']
    },
    {
      title: 'Legal',
      links: ['Privacy Policy', 'Terms of Service', 'Data Security', 'Compliance']
    }
  ];

  toggleTheme(): void {
    this.isDarkMode = !this.isDarkMode;
    document.body.classList.toggle('dark-mode', this.isDarkMode);
  }
}


