                        </svg>
                        <p>No CRS tickets found</p>
                        <span>Try adjusting your search</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ticket Cards Container -->
    <div class="ticket-container">
        <div *ngFor="let ticket of tickets" class="ticket-card card-{{ticket.type}}"
