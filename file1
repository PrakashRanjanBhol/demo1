export class ThemeSettingsComponent implements OnInit {
  currentTheme: ThemeMode = 'system';
  currentAccent: AccentColor = 'blue';
  effectiveTheme: 'light' | 'dark' = 'light';

  constructor(private themeService: ThemeService) {}

  ngOnInit(): void {
    this.currentTheme = this.themeService.getCurrentThemeMode();
    this.currentAccent = this.themeService.getCurrentAccentColor();
    this.effectiveTheme = this.themeService.getCurrentEffectiveTheme();

    // Subscribe to theme changes
    this.themeService.themeMode$.subscribe(mode => {
      this.currentTheme = mode;
    });

    this.themeService.accentColor$.subscribe(color => {
      this.currentAccent = color;
    });

    this.themeService.effectiveTheme$.subscribe(theme => {
      this.effectiveTheme = theme;
    });
  }

  setTheme(mode: ThemeMode): void {
    this.themeService.setThemeMode(mode);
  }

  setAccent(color: AccentColor): void {
    this.themeService.setAccentColor(color);
  }
}












