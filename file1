<body>
    <div class="container">
        <header>
            <h1>üé® Mermaid Diagram Renderer</h1>
            <p class="subtitle">Create beautiful diagrams with live preview</p>
        </header>

        <div class="content">
            <div class="panel">
                <h2>üìù Input</h2>
                <textarea id="input" placeholder="Enter your mermaid diagram code here...">graph TD
    A[Start] --> B{Is it working?}
    B -->|Yes| C[Great!]
    B -->|No| D[Debug]
    D --> B
    C --> E[End]
    
    style A fill:#4CAF50,stroke:#2E7D32,stroke-width:2px
    style E fill:#4CAF50,stroke:#2E7D32,stroke-width:2px
    style B fill:#2196F3,stroke:#1565C0,stroke-width:2px
    style C fill:#FF9800,stroke:#E65100,stroke-width:2px
    style D fill:#f44336,stroke:#c62828,stroke-width:2px</textarea>

                <div class="button-group">
                    <button class="render-btn" onclick="renderDiagram()">üöÄ Render Diagram</button>
                    <button class="clear-btn" onclick="clearAll()">üóëÔ∏è Clear</button>
                </div>

                <div class="examples">
                    <h3>üìö Load Example:</h3>
                    <select id="exampleSelect" onchange="loadExample()">
                        <option value="">-- Select an example --</option>
                        <option value="flowchart">Flowchart</option>
                        <option value="sequence">Sequence Diagram</option>
                        <option value="class">Class Diagram</option>
                        <option value="state">State Diagram</option>
                        <option value="gantt">Gantt Chart</option>
                        <option value="pie">Pie Chart</option>
                        <option value="er">Entity Relationship</option>
                    </select>
                </div>

                <div class="info-box">
                    üí° <strong>Tip:</strong> Edit the code and click "Render Diagram" to see your changes!
                </div>
            </div>

            <div class="panel">
                <h2>üëÅÔ∏è Output</h2>
                <div id="output">
                    <div class="placeholder">Your diagram will appear here...</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Initialize mermaid
        mermaid.initialize({
            startOnLoad: false,
            theme: 'default',
            securityLevel: 'loose',
        });

        // Counter for unique IDs
        let diagramCounter = 0;

        // Render the diagram
        async function renderDiagram() {
            const input = document.getElementById('input').value.trim();
            const output = document.getElementById('output');

            if (!input) {
                output.innerHTML = '<div class="error">‚ö†Ô∏è Please enter some mermaid code!</div>';
                return;
            }

            try {
                // Clear previous content
                output.innerHTML = '';

                // Create a unique ID for this diagram
                const id = `mermaid-${diagramCounter++}`;

                // Render the diagram
                const { svg } = await mermaid.render(id, input);

                // Display the rendered SVG
                output.innerHTML = svg;

            } catch (error) {
                output.innerHTML = `<div class="error">
                    <strong>‚ùå Error rendering diagram:</strong><br>
                    ${error.message || 'Invalid mermaid syntax'}
                </div>`;
                console.error('Mermaid error:', error);
            }
        }

        // Clear all content
        function clearAll() {
            document.getElementById('input').value = '';
            document.getElementById('output').innerHTML = '<div class="placeholder">Your diagram will appear here...</div>';
            document.getElementById('exampleSelect').value = '';
        }

        // Load example diagrams
        function loadExample() {
            const select = document.getElementById('exampleSelect');
            const input = document.getElementById('input');

            const examples = {
                flowchart: `graph TD
    A[Christmas] -->|Get money| B(Go shopping)
    B --> C{Let me think}
    C -->|One| D[Laptop]
    C -->|Two| E[iPhone]
    C -->|Three| F[Car]
    
    style A fill:#ff6b6b,stroke:#c92a2a,stroke-width:3px
    style D fill:#51cf66,stroke:#2f9e44,stroke-width:2px
    style E fill:#51cf66,stroke:#2f9e44,stroke-width:2px
    style F fill:#51cf66,stroke:#2f9e44,stroke-width:2px`,

                sequence: `sequenceDiagram
    participant User
    participant Browser
    participant Server
    participant Database
    
    User->>Browser: Enter URL
    Browser->>Server: HTTP Request
    Server->>Database: Query Data
    Database-->>Server: Return Data
    Server-->>Browser: HTTP Response
    Browser-->>User: Display Page`,

                class: `classDiagram
    class Animal {
        +String name
        +int age
        +makeSound()
        +eat()
    }
    class Dog {
        +String breed
        +bark()
        +fetch()
    }
    class Cat {
        +String color
        +meow()
        +scratch()
    }
    Animal <|-- Dog
    Animal <|-- Cat`,

                state: `stateDiagram-v2
    [*] --> Idle
    Idle --> Processing: Start
    Processing --> Success: Complete
    Processing --> Error: Fail
    Success --> [*]
    Error --> Retry: Retry
    Retry --> Processing
    Error --> [*]: Give Up`,

                gantt: `gantt
    title Project Timeline
    dateFormat YYYY-MM-DD
    section Planning
    Research           :a1, 2024-01-01, 10d
    Requirements       :a2, after a1, 5d
    section Development
    Design             :a3, after a2, 15d
    Implementation     :a4, after a3, 30d
    Testing            :a5, after a4, 10d
    section Deployment
    Staging            :a6, after a5, 5d
    Production         :a7, after a6, 3d`,

                pie: `pie title Pet Preference Survey
    "Dogs" : 45
    "Cats" : 30
    "Birds" : 15
    "Fish" : 10`,

                er: `erDiagram
    CUSTOMER ||--o{ ORDER : places
    ORDER ||--|{ LINE-ITEM : contains
    CUSTOMER }|..|{ DELIVERY-ADDRESS : uses
    CUSTOMER {
        string name
        string email
        string phone
    }
    ORDER {
        int orderID
        date orderDate
        float total
    }
    LINE-ITEM {
        int quantity
        float price
    }`
            };

            if (select.value && examples[select.value]) {
                input.value = examples[select.value];
                // Auto-render when example is loaded
                renderDiagram();
            }
        }

        // Render the initial example on load
        window.onload = function () {
            renderDiagram();
        };

        // Allow Ctrl+Enter to render
        document.getElementById('input').addEventListener('keydown', function (e) {
            if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
                renderDiagram();
            }
        });
    </script>
