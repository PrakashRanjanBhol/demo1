<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chunked JSON Parser Demo</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        
        button {
            background-color: #4CAF50;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
        }
        
        button:hover {
            background-color: #45a049;
        }

        #status {
            margin-top: 10px;
            color: #666;
        }
    </style>
</head>
<body>
    <button onclick="runDemo()">Run Demo</button>
    <div id="status"></div>

    <script>
        class ChunkedJSONParser {
            constructor() {
                this.buffer = '';
            }

            processChunk(chunk) {
                this.buffer += chunk;

                try {
                    const parsed = JSON.parse(this.buffer);
                    const result = { success: true, data: parsed };
                    this.buffer = '';
                    return result;
                } catch (error) {
                    return { success: false, data: null };
                }
            }

            reset() {
                this.buffer = '';
            }
        }

        async function runDemo() {
            console.clear();
            console.log('ðŸš€ Starting streaming demo...\n');
            document.getElementById('status').textContent = 'Fetching and streaming...';

            try {
                // Fetch real JSON data
                const response = await fetch('https://jsonplaceholder.typicode.com/users/1');
                const jsonString = await response.text();
                
                console.log('Total data length:', jsonString.length, 'characters\n');

                const parser = new ChunkedJSONParser();

                // Stream character by character
                for (let i = 0; i < jsonString.length; i++) {
                    const char = jsonString[i];
                    console.log(`[${i+1}/${jsonString.length}] Character: "${char}" | Buffer: "${parser.buffer + char}"`);
                    
                    const result = parser.processChunk(char);
                    
                    if (result.success) {
                        console.log('\nâœ… VALID JSON PARSED:');
                        console.log(result.data);
                        console.log('');
                    }

                    // Delay to simulate real streaming
                    await new Promise(resolve => setTimeout(resolve, 30));
                }

                console.log('âœ… Streaming complete!');
                document.getElementById('status').textContent = 'Complete! Check console.';
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('status').textContent = 'Error: ' + error.message;
            }
        }
    </script>
</body>
</html>
