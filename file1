}

.chevron-icon {
    width: 20px;
    height: 20px;
    color: var(--adk-agents-text-secondary);
    transition: transform 0.3s ease;
    transform: rotate(-90deg);
}

.chevron-icon.expanded {
    transform: rotate(0deg);
}

.accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
}

.accordion-content.expanded {
    max-height: 2000px;
}

