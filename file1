onKeyDown(e: KeyboardEvent) {
  const target = e.target as HTMLTextAreaElement;
  if (!target) return;

  if (e.key === 'PageUp') {
    e.preventDefault(); // stop global scroll

    // simulate PageUp inside textarea
    target.scrollTop = Math.max(0, target.scrollTop - target.clientHeight);
  }

  if (e.key === 'PageDown') {
    e.preventDefault(); // stop global scroll

    // simulate PageDown inside textarea
    target.scrollTop = Math.min(
      target.scrollHeight,
      target.scrollTop + target.clientHeight
    );
  }
}
