<!-- Open button -->
<button (click)="openSidebar()">Open Sidebar</button>

<!-- Sidebar -->
<div class="sidebar-overlay" 
     [class.open]="isOpen" 
     [class.full-width]="sidebarMode === 'full'" 
     [class.collapsed]="sidebarMode === 'collapsed'" 
     [class.minimized]="sidebarMode === 'minimized'">

    <div class="sidebar-header">
        <!-- Minimized (320px) -->
        <button class="icon-btn" *ngIf="sidebarMode !== 'minimized'" 
                (click)="setSidebarMode('minimized')" title="Minimize">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Default (100% - 320px) -->
        <button class="icon-btn" *ngIf="sidebarMode !== 'collapsed'" 
                (click)="setSidebarMode('collapsed')" title="Default">
            <i class="fas fa-expand-arrows-alt"></i>
        </button>

        <!-- Full width -->
        <button class="icon-btn" *ngIf="sidebarMode !== 'full'" 
                (click)="setSidebarMode('full')" title="Full Width">
            <i class="fas fa-expand"></i>
        </button>

        <!-- Close -->
        <button class="icon-btn close-btn" (click)="closeSidebar()" title="Close">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <div class="sidebar-content">
        <h2>Sidebar Content</h2>
        <p>This is your overlay sidebar. Add your content here.</p>
    </div>
</div>











.sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    background: #1e1e2f;
    color: white;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.4);
    overflow-y: auto;
    transition: transform 0.4s ease, width 0.3s ease;
    z-index: 1000;

    /* Start hidden off-screen */
    transform: translateX(-100%);
    width: calc(100% - 320px);
}

/* Slide-in */
.sidebar-overlay.open {
    transform: translateX(0);
}

/* Modes */
.sidebar-overlay.collapsed {
    width: calc(100% - 320px);
}

.sidebar-overlay.full-width {
    width: 100%;
}

.sidebar-overlay.minimized {
    width: 320px;
}

/* Header (icons bar) */
.sidebar-header {
    position: absolute;
    top: 10px;
    right: 10px;
    display: flex;
    align-items: center;
    gap: 8px;
    background: rgba(0, 0, 0, 0.3);
    padding: 6px 8px;
    border-radius: 8px;
    z-index: 1010; /* keep above content */
}

.icon-btn {
    background: transparent;
    border: none;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease, color 0.2s ease;
    padding: 4px;
    border-radius: 4px;
}

.icon-btn:hover {
    transform: scale(1.1);
    color: #42a5f5;
}

.close-btn {
    font-size: 20px;
}

/* Font Awesome icon styling */
.fas {
    font-size: 1.2rem;
    line-height: 1;
}

/* Sidebar content */
.sidebar-content {
    padding: 20px;
    padding-top: 50px; /* space below header */
}














import { Component } from '@angular/core';

@Component({
  selector: 'app-settings',
  templateUrl: './settings.component.html',
  styleUrls: ['./settings.component.scss']
})
export class SettingsComponent {
  isOpen = false;
  sidebarMode: 'collapsed' | 'full' | 'minimized' = 'collapsed'; // default mode

  setSidebarMode(mode: 'collapsed' | 'full' | 'minimized') {
    this.sidebarMode = mode;
  }

  closeSidebar() {
    this.isOpen = false;
  }

  openSidebar() {
    this.isOpen = true;
  }
}

