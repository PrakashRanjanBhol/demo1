isOptionsAnimating = false;
private animationTimeout: any;


toggleActionOptions(itemId: string, actionType: 'copy' | 'download', event: Event): void {
  event.stopPropagation();

  if (this.activeActionItem === itemId && this.activeActionType === actionType) {
    this.activeActionItem = '';
    this.activeActionType = '';
    this.isOptionsAnimating = false;
  } else {
    this.activeActionItem = '';
    this.activeActionType = '';
    this.isOptionsAnimating = false;

    clearTimeout(this.animationTimeout);
    this.animationTimeout = setTimeout(() => {
      this.activeActionItem   = itemId;
      this.activeActionType   = actionType;
      this.isOptionsAnimating = true;

      // stop animation flag after all cards finish
      clearTimeout(this.animationTimeout);
      this.animationTimeout = setTimeout(() => {
        this.isOptionsAnimating = false;
      }, 400);
    }, 10);
  }
}







ngOnDestroy(): void {
  this.destroy$.next();
  this.destroy$.complete();
  clearTimeout(this.animationTimeout);
}






<div class="action-options-row"
    [class.expanded]="activeActionItem === item.id"
    [class.animating]="isOptionsAnimating && activeActionItem === item.id"
    (click)="$event.stopPropagation()">









.option-card {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 7px 10px;
    background: var(--bg-color);
    border: 1px solid rgba(139, 92, 246, 0.15);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    width: 100%;
    min-width: 0;
    text-align: left;
    position: relative;
    overflow: hidden;
    /* no animation by default */
}

/* only animate when explicitly triggered */
.action-options-row.animating .option-card {
    animation: cardSlideIn 0.25s ease-out both;
}

.action-options-row.animating .option-card:nth-child(1) { animation-delay: 0.03s; }
.action-options-row.animating .option-card:nth-child(2) { animation-delay: 0.06s; }
.action-options-row.animating .option-card:nth-child(3) { animation-delay: 0.09s; }
.action-options-row.animating .option-card:nth-child(4) { animation-delay: 0.12s; }

@keyframes cardSlideIn {
    from {
        opacity: 0;
        transform: translateY(-6px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}
