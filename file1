import { Injectable } from '@angular/core';
import { BehaviorSubject } from 'rxjs';

export type ThemeMode = 'light' | 'dark' | 'system';
export type AccentColor = 'blue' | 'purple' | 'emerald' | 'orange' | 'pink';

@Injectable({
  providedIn: 'root'
})
export class ThemeService {
  private readonly THEME_KEY = 'app-theme-mode';
  private readonly ACCENT_KEY = 'app-accent-color';
  
  private themeModeSubject = new BehaviorSubject<ThemeMode>(this.getStoredTheme());
  private accentColorSubject = new BehaviorSubject<AccentColor>(this.getStoredAccent());
  private effectiveThemeSubject = new BehaviorSubject<'light' | 'dark'>('light');
  
  themeMode$ = this.themeModeSubject.asObservable();
  accentColor$ = this.accentColorSubject.asObservable();
  effectiveTheme$ = this.effectiveThemeSubject.asObservable();
  
  private mediaQuery: MediaQueryList;

  constructor() {
    this.mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
    this.initializeTheme();
    this.listenToSystemThemeChanges();
  }

  private initializeTheme(): void {
    const mode = this.themeModeSubject.value;
    const accent = this.accentColorSubject.value;
    this.applyTheme(mode);
    this.applyAccent(accent);
  }

  private listenToSystemThemeChanges(): void {
    this.mediaQuery.addEventListener('change', (e) => {
      if (this.themeModeSubject.value === 'system') {
        const effectiveTheme = e.matches ? 'dark' : 'light';
        this.effectiveThemeSubject.next(effectiveTheme);
        this.updateDocumentTheme(effectiveTheme);
      }
    });
  }

  private getStoredTheme(): ThemeMode {
    const stored = localStorage.getItem(this.THEME_KEY);
    return (stored as ThemeMode) || 'system';
  }

  private getStoredAccent(): AccentColor {
    const stored = localStorage.getItem(this.ACCENT_KEY);
    return (stored as AccentColor) || 'blue';
  }

  setThemeMode(mode: ThemeMode): void {
    localStorage.setItem(this.THEME_KEY, mode);
    this.themeModeSubject.next(mode);
    this.applyTheme(mode);
  }

  setAccentColor(color: AccentColor): void {
    localStorage.setItem(this.ACCENT_KEY, color);
    this.accentColorSubject.next(color);
    this.applyAccent(color);
  }

  private applyTheme(mode: ThemeMode): void {
    let effectiveTheme: 'light' | 'dark';
    
    if (mode === 'system') {
      effectiveTheme = this.mediaQuery.matches ? 'dark' : 'light';
    } else {
      effectiveTheme = mode;
    }
    
    this.effectiveThemeSubject.next(effectiveTheme);
    this.updateDocumentTheme(effectiveTheme);
  }

  private updateDocumentTheme(theme: 'light' | 'dark'): void {
    const root = document.documentElement;
    
    if (theme === 'dark') {
      root.classList.add('dark-theme');
      root.classList.remove('light-theme');
    } else {
      root.classList.add('light-theme');
      root.classList.remove('dark-theme');
    }
  }

  private applyAccent(color: AccentColor): void {
    const root = document.documentElement;
    
    // Remove all accent classes
    root.classList.remove('accent-blue', 'accent-purple', 'accent-emerald', 'accent-orange', 'accent-pink');
    
    // Add the selected accent class
    root.classList.add(`accent-${color}`);
  }

  getCurrentThemeMode(): ThemeMode {
    return this.themeModeSubject.value;
  }

  getCurrentAccentColor(): AccentColor {
    return this.accentColorSubject.value;
  }

  getCurrentEffectiveTheme(): 'light' | 'dark' {
    return this.effectiveThemeSubject.value;
  }
}









