// ADD TO history.component.ts

/**
 * Get the sequential index/number for a history item
 * Items are numbered from 1 based on filtered list
 */
getItemIndex(item: HistoryItem): number {
  const index = this.filteredHistory.findIndex(h => h.id === item.id);
  return index + 1; // Convert to 1-based index
}








<!-- MODIFIED - upload-generate.component.html (line 195) -->

