.form-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 600px;
}

.form-row {
    display: flex;
    gap: 2rem;
    justify-content: flex-start;
}

.field {
    display: flex;
    align-items: center;
    flex: 1;
}

label {
    font-size: 1rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

input[type="radio"] {
    transform: scale(1.2);
    cursor: pointer;
}





<div class="form-container">
    <div class="form-row" *ngFor="let row of fieldRows">
        <div class="field" *ngFor="let field of row">
            <label>
                <input type="radio" [name]="field.group" [value]="field.value">
                {{ field.label }}
            </label>
        </div>
    </div>
</div>





 fields = [
    { label: 'Option 1', value: 'opt1', group: 'group1' },
    { label: 'Option 2', value: 'opt2', group: 'group1' },
    { label: 'Option 3', value: 'opt3', group: 'group2' },
    { label: 'Option 4', value: 'opt4', group: 'group2' },
    { label: 'Option 5', value: 'opt5', group: 'group3' },
    { label: 'Option 6', value: 'opt6', group: 'group3' },
  ];

  // Group into pairs of two for rendering
  get fieldRows() {
    const rows = [];
    for (let i = 0; i < this.fields.length; i += 2) {
      rows.push(this.fields.slice(i, i + 2));
    }
    return rows;
  }








