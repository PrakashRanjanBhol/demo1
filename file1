/* Responsive breakpoint for larger screens */
@media (min-width: 1600px) {
  .sidebar {
    width: 380px;
  }

  .sidebar-content {
    min-width: 380px;
  }
}

/* Responsive Design for tablets and mobile */
@media (max-width: 1024px) {
