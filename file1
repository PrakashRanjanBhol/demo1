                                            [disabled]="isActionDisabled(line.newComment)"
                                            (click)="modifyComment(line.newComment)">
                                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path
                                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                                                    stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                    stroke-linejoin="round" />
                                            </svg>
                                            <span>Modify</span>
                                        </button>
                                        <button class="comment-btn save" *ngIf="isEditing(line.newComment)"
                                            [disabled]="isProcessing(line.newComment)"
                                            (click)="saveComment(line.newComment)">
                                            <span *ngIf="!isProcessingAction(line.newComment, 'save')">
                                                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path
                                                        d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"
                                                        stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                                        stroke-linejoin="round" />
                                                </svg>
                                                <span>Save</span>
                                            </span>
                                            <span *ngIf="isProcessingAction(line.newComment, 'save')"
                                                class="spinner-container">
                                                <span class="spinner"></span>
                                                <span>Saving...</span>
                                            </span>
                                        </button>
                                        <button class="comment-btn cancel" *ngIf="isEditing(line.newComment)"
                                            [disabled]="isProcessing(line.newComment)"
                                            (click)="cancelModify(line.newComment)">
                                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M6 18L18 6M6 6l12 12" stroke="currentColor" stroke-width="2"
                                                    stroke-linecap="round" stroke-linejoin="round" />
                                            </svg>
                                            <span>Cancel</span>
                                        </button>

                                        <div class="comment-nav">
                                            <button class="comment-btn nav prev-comment"
                                                [disabled]="isFirstComment(line.newComment) || isProcessing(line.newComment)"
                                                (click)="goToPreviousComment(line.newComment)" title="Previous Comment">
                                                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M15 19l-7-7 7-7" stroke="currentColor" stroke-width="2.5"
                                                        stroke-linecap="round" stroke-linejoin="round" />
                                                </svg>
                                            </button>
                                            <button class="comment-btn nav next-comment"
                                                [disabled]="isLastComment(line.newComment) || isProcessing(line.newComment)"
                                                (click)="goToNextComment(line.newComment)" title="Next Comment">
                                                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M9 5l7 7-7 7" stroke="currentColor" stroke-width="2.5"
                                                        stroke-linecap="round" stroke-linejoin="round" />
                                                </svg>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </ng-container>
                </div>
            </div>
        </ng-container>
    </div>

    <div class="stats" *ngIf="stats">
        <div class="stat-item">
            <span>Changes:</span>
            <span class="stat-added">+{{ stats.addedLines }}</span>
            <span class="stat-deleted">-{{ stats.deletedLines }}</span>
        </div>
        <div class="stat-item">
            <span>{{ stats.commentsCount }} AI Comment{{ stats.commentsCount !== 1 ? 's' : '' }}</span>
        </div>
        <div class="stat-item export-btn-container">
            <button class="action-btn export-btn" (click)="exportComments()">
                Export Comment Decisions
            </button>
        </div>
    </div>
</div>

















