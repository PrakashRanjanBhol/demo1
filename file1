<!-- âœ… Show Documentation button only for root folder -->
<button 
    *ngIf="node.isRoot"
    class="doc-btn"
    (click)="openDocumentation(node); $event.stopPropagation()">
    Documentation
</button>







.doc-btn {
    margin-left: auto;
    background: #1e90ff;
    color: white;
    border: none;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 12px;
    cursor: pointer;
}

.doc-btn:hover {
    background: #3ba0ff;
}
