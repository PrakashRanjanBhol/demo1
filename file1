// diff-viewer.component.ts
import { Component, OnInit } from '@angular/core';
import * as Diff from 'diff';
import hljs from 'highlight.js';

// Interfaces
interface DiffFile {
  file_path: string;
  old_lines: string[];
  new_lines: string[];
  ai_comments: AIComment[];
}

interface AIComment {
  file_path: string;
  line: number;
  side: 'TO' | 'FROM';
  comment_text: string;
  severity: 'error' | 'warning' | 'suggestion';
  suggested_patch: string | null;
}

interface CommentState {
  status: 'pending' | 'accepted' | 'rejected';
  modifiedText: string | null;
}

interface DiffLine {
  type: 'added' | 'deleted' | 'context';
  oldLineNum?: number;
  newLineNum?: number;
  content: string;
  comment?: AIComment;
  oldComment?: AIComment; // For FROM side comments on context lines
  newComment?: AIComment; // For TO side comments on context lines
}

interface DiffStats {
  addedLines: number;
  deletedLines: number;
  commentsCount: number;
}

@Component({
  selector: 'app-diff-viewer',
  templateUrl: './diff-viewer.component.html',
  styleUrls: ['./diff-viewer.component.scss']
})
export class DiffViewerComponent implements OnInit {
  files: DiffFile[] = [];
  selectedFile: DiffFile | null = null;
  selectedFileIndex: number = -1;
  currentView: 'unified' | 'side-by-side' = 'unified';
  diffLines: DiffLine[] = [];
  stats: DiffStats | null = null;

  // Track editing state and comment states
  editingComments = new Map<string, string>(); // commentId -> editText
  commentStates = new Map<string, CommentState>();
  processingComments = new Map<string, 'accept' | 'reject' | 'save'>(); // Track which comments are being processed
  isDarkMode = false; // Track theme mode
  searchQuery: string = ''; // For file search

  ngOnInit(): void {
    this.loadMockData();
    // Load theme preference from localStorage
    const savedTheme = localStorage.getItem('bitbucket-pr-review-theme');
    this.isDarkMode = savedTheme === 'dark';

    // Configure highlight.js
    hljs.configure({
      ignoreUnescapedHTML: true,
      languages: ['typescript', 'javascript', 'python', 'java', 'csharp', 'cpp', 'go', 'rust', 'ruby', 'php', 'swift', 'kotlin', 'scala']
    });
  }

  toggleTheme(): void {
    this.isDarkMode = !this.isDarkMode;
    localStorage.setItem('bitbucket-pr-review-theme', this.isDarkMode ? 'dark' : 'light');
  }

  // Get filtered files based on search query
  get filteredFiles(): DiffFile[] {
    if (!this.searchQuery.trim()) {
      return this.files;
    }
    const query = this.searchQuery.toLowerCase();
    return this.files.filter(file =>
      file.file_path.toLowerCase().includes(query)
    );
  }

  // Get comment count for a file
  getFileCommentCount(file: DiffFile): number {
    return file.ai_comments.length;
  }

  // Calculate file stats
  calculateFileStats(file: DiffFile): { addedLines: number, deletedLines: number } {
    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    const diff = Diff.diffLines(oldText, newText);

    let addedLines = 0;
    let deletedLines = 0;

    diff.forEach(part => {
      const lines = part.value.split('\n');
      if (lines[lines.length - 1] === '') {
        lines.pop();
      }

      if (part.added) {
        addedLines += lines.length;
      } else if (part.removed) {
        deletedLines += lines.length;
      }
    });

    return { addedLines, deletedLines };
  }

  private loadMockData(): void {
