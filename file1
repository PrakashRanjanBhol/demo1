Copy
Edit
@ViewChild('editor') editorComponent: any;

ngAfterViewInit() {
  const cm = this.editorComponent.codeMirror; // CodeMirror instance
  cm.on('change', (instance: any) => {
    console.log("Live typing:", instance.getValue());
  });
}
