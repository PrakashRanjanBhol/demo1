.code-rag-modal-backdrop {
    position: fixed;
    top: 60px;
    left: 320px;
    right: 320px;
    bottom: 34px;
    background: var(--vibe-coding-modal-backdrop);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    padding: 0;
    animation: fadeIn 0.3s ease;
    overflow-y: auto;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.code-rag-modal-container {
    background: var(--vibe-coding-modal-bg);
    border-radius: 12px;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: var(--vibe-coding-shadow-xl);
    animation: slideInFromLeft 0.4s ease-out;
}

@keyframes slideInFromLeft {
    from {
        transform: translateX(-100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}















closeModal(): void {
  // Add closing class for animation
  const backdrop = document.querySelector('.code-rag-modal-backdrop');
  const container = document.querySelector('.code-rag-modal-container');
  
  if (backdrop && container) {
    backdrop.classList.add('closing');
    container.classList.add('closing');
    
    // Wait for animation to complete before emitting close
    setTimeout(() => {
      this.close.emit();
    }, 300);
  } else {
    this.close.emit();
  }
}











.code-rag-modal-backdrop.closing {
    animation: fadeOut 0.3s ease;
}

.code-rag-modal-container.closing {
    animation: slideOutToLeft 0.3s ease-out;
}

@keyframes fadeOut {
    from {
        opacity: 1;
    }
    to {
        opacity: 0;
    }
}

@keyframes slideOutToLeft {
    from {
        transform: translateX(0);
        opacity: 1;
    }
    to {
        transform: translateX(-100%);
        opacity: 0;
    }
}
