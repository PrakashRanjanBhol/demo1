<div class="toggle-container">
    <div class="switches-container">
        <input type="radio" id="switchGeneral" name="switchGroup" value="General"
            [checked]="selectedOption === 'General'" (change)="toggleOption('General')" />
        <input type="radio" id="switchCodeRAG" name="switchGroup" value="Code RAG"
            [checked]="selectedOption === 'Code RAG'" (change)="toggleOption('Code RAG')" />
        <input type="radio" id="switchJira" name="switchGroup" value="Jira"
            [checked]="selectedOption === 'Jira'" (change)="toggleOption('Jira')" />
        <input type="radio" id="switchConfluence" name="switchGroup" value="Confluence"
            [checked]="selectedOption === 'Confluence'" (change)="toggleOption('Confluence')" />
        <input type="radio" id="switchReusable" name="switchGroup" value="Reusable Component"
            [checked]="selectedOption === 'Reusable Component'" (change)="toggleOption('Reusable Component')" />

        <label for="switchGeneral">General</label>
        <label for="switchCodeRAG">Code RAG</label>
        <label for="switchJira">Jira</label>
        <label for="switchConfluence">Confluence</label>
        <label for="switchReusable">Reusable</label>

        <div class="switch-wrapper"
            [ngStyle]="{'transform': getTranslateValue()}">
            <div class="switch">
                <div>{{ selectedOption }}</div>
            </div>
        </div>
    </div>
</div>


















