<div class="file-selector">
  <div class="custom-dropdown" [class.open]="isDropdownOpen">
    <div class="dropdown-selected" (click)="toggleDropdown()">
      <div class="selected-content">
        <span class="file-icon">ðŸ“„</span>
        <span class="file-name">
          {{ selectedFile ? selectedFile.file_path : 'Select a file to view diff...' }}
        </span>
        <span class="comment-badge" *ngIf="selectedFile && selectedFile.ai_comments.length > 0">
          {{ selectedFile.ai_comments.length }} 
          <span class="badge-text">comment{{ selectedFile.ai_comments.length !== 1 ? 's' : '' }}</span>
        </span>
      </div>
      <svg class="dropdown-arrow" [class.rotated]="isDropdownOpen" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/>
      </svg>
    </div>
    
    <div class="dropdown-options" *ngIf="isDropdownOpen">
      <div class="dropdown-search">
        <svg class="search-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
        </svg>
        <input 
          type="text" 
          placeholder="Search files..." 
          [(ngModel)]="fileSearchQuery"
          (input)="filterFiles()"
          (click)="$event.stopPropagation()">
      </div>
      
      <div class="dropdown-list">
        <div 
          *ngFor="let file of filteredFiles; let i = index" 
          class="dropdown-option"
          [class.selected]="selectedFileIndex === getOriginalIndex(file)"
          (click)="selectFile(file); closeDropdown()">
          <div class="option-content">
            <span class="file-icon">ðŸ“„</span>
            <span class="file-path">{{ file.file_path }}</span>
          </div>
          <div class="option-badges">
            <span class="comment-badge" *ngIf="file.ai_comments.length > 0">
              <svg class="badge-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
              </svg>
              {{ file.ai_comments.length }}
            </span>
            <span class="stats-badge">
              <span class="added">+{{ getFileStats(file).added }}</span>
              <span class="deleted">-{{ getFileStats(file).deleted }}</span>
            </span>
          </div>
        </div>
        
        <div class="no-results" *ngIf="filteredFiles.length === 0">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
          </svg>
          <p>No files found</p>
        </div>
      </div>
    </div>
  </div>
</div>

























// Add these properties
isDropdownOpen = false;
fileSearchQuery = '';
filteredFiles: DiffFile[] = [];

// Update ngOnInit
ngOnInit(): void {
  this.loadMockData();
  this.filteredFiles = [...this.files]; // Initialize filtered files
  
  // Load theme preference from localStorage
  const savedTheme = localStorage.getItem('bitbucket-pr-review-theme');
  this.isDarkMode = savedTheme === 'dark';
  
  // Configure highlight.js
  hljs.configure({
    ignoreUnescapedHTML: true,
    languages: ['typescript', 'javascript', 'python', 'java', 'csharp', 'cpp', 'go', 'rust', 'ruby', 'php', 'swift', 'kotlin', 'scala']
  });
  
  // Close dropdown when clicking outside
  document.addEventListener('click', (event) => {
    const target = event.target as HTMLElement;
    if (!target.closest('.custom-dropdown')) {
      this.closeDropdown();
    }
  });
}

// Add these new methods
toggleDropdown(): void {
  this.isDropdownOpen = !this.isDropdownOpen;
  if (this.isDropdownOpen) {
    this.fileSearchQuery = '';
    this.filteredFiles = [...this.files];
  }
}

closeDropdown(): void {
  this.isDropdownOpen = false;
}

filterFiles(): void {
  const query = this.fileSearchQuery.toLowerCase().trim();
  if (!query) {
    this.filteredFiles = [...this.files];
  } else {
    this.filteredFiles = this.files.filter(file => 
      file.file_path.toLowerCase().includes(query)
    );
  }
}

selectFile(file: DiffFile): void {
  const index = this.files.indexOf(file);
  this.onFileSelect(index);
}

getOriginalIndex(file: DiffFile): number {
  return this.files.indexOf(file);
}

getFileStats(file: DiffFile): { added: number; deleted: number } {
  const oldText = file.old_lines.join('\n');
  const newText = file.new_lines.join('\n');
  const diff = Diff.diffLines(oldText, newText);

  let added = 0;
  let deleted = 0;

  diff.forEach(part => {
    const lines = part.value.split('\n');
    if (lines[lines.length - 1] === '') {
      lines.pop();
    }

    if (part.added) {
      added += lines.length;
    } else if (part.removed) {
      deleted += lines.length;
    }
  });

  return { added, deleted };
}

// Update resetComponentState to include dropdown
resetComponentState(): void {
  this.files = [];
  this.selectedFile = null;
  this.selectedFileIndex = -1;
  this.diffLines = [];
  this.stats = null;
  
  this.editingComments.clear();
  this.commentStates.clear();
  this.processingComments.clear();
  
  this.clearCommentCache();
  
  this.currentView = 'unified';
  this.isDropdownOpen = false;
  this.fileSearchQuery = '';
  this.filteredFiles = [];
}



















