<body>

<h1>üìù MCQ JSON Formatter</h1>
<p class="sub">Paste your JSON below, click Format, then Copy to Clipboard and paste into Word.</p>

<div class="editor-area">
  <label for="jsonInput">Paste JSON here:</label>
  <textarea id="jsonInput" placeholder='[{"question":"...","options":{"A":"...","B":"..."},"correct_answer":"A","explanation":"..."}]'></textarea>
  <div id="error">‚ö†Ô∏è Invalid JSON. Please check the format and try again.</div>
  <div class="btn-row">
    <button id="btnFormat" onclick="formatJSON()">Format Questions</button>
    <button id="btnCopy" onclick="copyOutput()">Copy to Clipboard</button>
    <button id="btnClear" onclick="clearAll()">Clear</button>
  </div>
</div>

<div id="output"></div>

<script>
  function sanitize(str) {
    return String(str)
      .replace(/&/g, "&amp;")
      .replace(/</g, "&lt;")
      .replace(/>/g, "&gt;");
  }

  function fixJSON(raw) {
    // Handle unquoted keys like { question: "..." }
    return raw
      .replace(/([{,]\s*)([a-zA-Z_][a-zA-Z0-9_]*)(\s*:)/g, '$1"$2"$3')
      .replace(/'/g, '"');
  }

  function formatJSON() {
    const input = document.getElementById('jsonInput').value.trim();
    const err = document.getElementById('error');
    const output = document.getElementById('output');
    err.style.display = 'none';

    if (!input) {
      output.innerHTML = '';
      return;
    }

    let data;
    try {
      data = JSON.parse(input);
    } catch(e) {
      try {
        data = JSON.parse(fixJSON(input));
      } catch(e2) {
        err.style.display = 'block';
        return;
      }
    }

    if (!Array.isArray(data)) data = [data];

    let html = '';
    data.forEach((q, i) => {
      const options = q.options || {};
      const correct = (q.correct_answer || '').toUpperCase();

      let optionsHTML = '';
      for (const [key, val] of Object.entries(options)) {
        const isCorrect = key.toUpperCase() === correct;
        optionsHTML += `
          <div class="option${isCorrect ? ' correct' : ''}">
            <span class="option-key">${sanitize(key)}.</span>
            <span>${sanitize(val)}</span>
          </div>`;
      }

      html += `
        <div class="q-card">
          <div class="q-number">Question ${i + 1}</div>
          <div class="q-text">${sanitize(q.question || '')}</div>
          <div class="options">${optionsHTML}</div>
          ${q.explanation ? `<div class="explanation"><strong>‚úÖ Answer: ${sanitize(correct)} &nbsp;|&nbsp; Explanation:</strong> ${sanitize(q.explanation)}</div>` : ''}
        </div>`;
    });

    output.innerHTML = html;
  }

  function copyOutput() {
    const output = document.getElementById('output');
    if (!output.innerText.trim()) {
      alert('Nothing to copy yet. Format your JSON first.');
      return;
    }
    const range = document.createRange();
    range.selectNode(output);
    window.getSelection().removeAllRanges();
    window.getSelection().addRange(range);
    document.execCommand('copy');
    window.getSelection().removeAllRanges();
    alert('Copied! Now paste into Word with Ctrl+V (or Cmd+V on Mac). Formatting will be preserved.');
  }

  function clearAll() {
    document.getElementById('jsonInput').value = '';
    document.getElementById('output').innerHTML = '';
    document.getElementById('error').style.display = 'none';
  }

  // Pre-load example
  document.getElementById('jsonInput').value = `[{
  "question": "What is the capital of France?",
  "options": {
    "A": "London",
    "B": "Berlin",
    "C": "Paris",
    "D": "Madrid"
  },
  "correct_answer": "C",
  "explanation": "Paris is the capital and most populous city of France."
}]`;
</script>

