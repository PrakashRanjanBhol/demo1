  onFileSelect(index: number): void {
    if (index >= 0 && index < this.files.length) {
      this.selectedFileIndex = index;
      this.selectedFile = this.files[index];
      this.renderDiff();
    }
  }

  switchView(view: 'unified' | 'side-by-side'): void {
    this.currentView = view;
    if (this.selectedFile) {
      this.renderDiff();
    }
  }

  private renderDiff(): void {
    if (!this.selectedFile) return;

    this.diffLines = this.generateUnifiedDiff(this.selectedFile);
    this.stats = this.calculateStats(this.selectedFile);
  }

  private generateUnifiedDiff(file: DiffFile): DiffLine[] {
    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    const diff = Diff.diffLines(oldText, newText);

    const lines: DiffLine[] = [];
    let oldLineNum = 1;
    let newLineNum = 1;

    diff.forEach(part => {
      const lineTexts = part.value.split('\n');
      if (lineTexts[lineTexts.length - 1] === '') {
        lineTexts.pop();
      }

      lineTexts.forEach(lineText => {
        if (part.added) {
          const comment = this.findCommentForLine(file, newLineNum, 'TO');
          lines.push({
            type: 'added',
            newLineNum,
            content: this.highlightSyntax(lineText, file.file_path),
            comment
          });
          newLineNum++;
        } else if (part.removed) {
          const comment = this.findCommentForLine(file, oldLineNum, 'FROM');
          lines.push({
            type: 'deleted',
            oldLineNum,
            content: this.highlightSyntax(lineText, file.file_path),
            comment
          });
          oldLineNum++;
        } else {
          lines.push({
            type: 'context',
            oldLineNum,
            newLineNum,
            content: this.highlightSyntax(lineText, file.file_path)
          });
          oldLineNum++;
          newLineNum++;
        }
      });
    });

    return lines;
  }

  private highlightSyntax(code: string, filePath: string): string {
    try {
      // Detect language from file extension
      const language = this.detectLanguage(filePath);
      
      // Use highlight.js for syntax highlighting
      if (language) {
        const result = hljs.highlight(code, { language, ignoreIllegals: true });
        return result.value;
      } else {
        // Auto-detect if no specific language found
        const result = hljs.highlightAuto(code);
        return result.value;
      }
    } catch (error) {
      // Fallback to plain text if highlighting fails
      return this.escapeHtml(code);
    }
  }

  private detectLanguage(filePath: string): string {
    const extension = filePath.split('.').pop()?.toLowerCase() || '';
    
    const languageMap: { [key: string]: string } = {
      'ts': 'typescript',
      'tsx': 'typescript',
      'js': 'javascript',
      'jsx': 'javascript',
      'py': 'python',
      'java': 'java',
      'cs': 'csharp',
      'cpp': 'cpp',
      'cc': 'cpp',
      'cxx': 'cpp',
      'c': 'c',
      'h': 'cpp',
      'hpp': 'cpp',
      'go': 'go',
      'rs': 'rust',
      'rb': 'ruby',
      'php': 'php',
      'swift': 'swift',
      'kt': 'kotlin',
      'kts': 'kotlin',
      'scala': 'scala',
      'sc': 'scala',
      'html': 'html',
      'xml': 'xml',
      'css': 'css',
      'scss': 'scss',
      'sass': 'sass',
      'less': 'less',
      'json': 'json',
      'yaml': 'yaml',
      'yml': 'yaml',
      'md': 'markdown',
      'sql': 'sql',
      'sh': 'bash',
      'bash': 'bash',
      'ps1': 'powershell',
      'r': 'r',
      'dart': 'dart',
      'vue': 'vue',
      'lua': 'lua',
      'perl': 'perl',
      'pl': 'perl'
    };
    
    return languageMap[extension] || '';
  }

  private escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  private calculateStats(file: DiffFile): DiffStats {
    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    const diff = Diff.diffLines(oldText, newText);

    let addedLines = 0;
    let deletedLines = 0;

    diff.forEach(part => {
      const lines = part.value.split('\n');
      if (lines[lines.length - 1] === '') {
        lines.pop();
      }

      if (part.added) {
        addedLines += lines.length;
      } else if (part.removed) {
        deletedLines += lines.length;
      }
    });

    return {
      addedLines,
      deletedLines,
      commentsCount: file.ai_comments.length
    };
  }

  private findCommentForLine(file: DiffFile, lineNum: number, side: 'TO' | 'FROM'): AIComment | undefined {
    return file.ai_comments.find(comment =>
      comment.line === lineNum && comment.side === side
    );
  }

  // Comment State Management
  private getCommentKey(filePath: string, line: number, side: string): string {
    return `${filePath}-${line}-${side}`;
  }

  getCommentState(comment: AIComment): CommentState {
    if (!this.selectedFile) return { status: 'pending', modifiedText: null };
    const key = this.getCommentKey(this.selectedFile.file_path, comment.line, comment.side);
    return this.commentStates.get(key) || { status: 'pending', modifiedText: null };
  }

  private saveCommentState(filePath: string, line: number, side: string, status: 'pending' | 'accepted' | 'rejected', modifiedText: string | null): void {
    const key = this.getCommentKey(filePath, line, side);
    this.commentStates.set(key, { status, modifiedText });
  }

  getCommentId(comment: AIComment): string {
    return `comment-${comment.line}-${comment.side}`;
  }

  getDisplayText(comment: AIComment): string {
    const state = this.getCommentState(comment);
    return state.modifiedText || comment.comment_text;
  }

  isEditing(comment: AIComment): boolean {
    return this.editingComments.has(this.getCommentId(comment));
  }

  getEditText(comment: AIComment): string {
    return this.editingComments.get(this.getCommentId(comment)) || '';
  }

  setEditText(comment: AIComment, text: string): void {
    this.editingComments.set(this.getCommentId(comment), text);
  }

  isActionDisabled(comment: AIComment): boolean {
    const state = this.getCommentState(comment);
    return state.status === 'accepted' || state.status === 'rejected' || this.isProcessing(comment);
  }

  isProcessing(comment: AIComment): boolean {
    return this.processingComments.has(this.getCommentId(comment));
  }

  acceptComment(comment: AIComment): void {
    if (!this.selectedFile || this.isActionDisabled(comment)) return;
    
    const commentId = this.getCommentId(comment);
    this.processingComments.add(commentId);
    
    // Simulate API call delay
    setTimeout(() => {
      const displayText = this.getDisplayText(comment);
      this.saveCommentState(
        this.selectedFile!.file_path,
        comment.line,
        comment.side,
        'accepted',
        displayText
      );
      this.processingComments.delete(commentId);
    }, 800);
  }

  rejectComment(comment: AIComment): void {
    if (!this.selectedFile || this.isActionDisabled(comment)) return;
    
    const commentId = this.getCommentId(comment);
    this.processingComments.add(commentId);
    
    // Simulate API call delay
    setTimeout(() => {
      const displayText = this.getDisplayText(comment);
      this.saveCommentState(
        this.selectedFile!.file_path,
        comment.line,
        comment.side,
        'rejected',
        displayText
      );
      this.processingComments.delete(commentId);
    }, 800);
  }

  modifyComment(comment: AIComment): void {
    if (this.isActionDisabled(comment)) return;
    const displayText = this.getDisplayText(comment);
    this.editingComments.set(this.getCommentId(comment), displayText);
  }

  saveComment(comment: AIComment): void {
    if (!this.selectedFile) return;
    
    const commentId = this.getCommentId(comment);
    this.processingComments.add(commentId);
    
    // Simulate API call delay
    setTimeout(() => {
      const newText = this.getEditText(comment);
      const state = this.getCommentState(comment);
      this.saveCommentState(
        this.selectedFile!.file_path,
        comment.line,
        comment.side,
        state.status,
        newText
      );
      this.editingComments.delete(commentId);
      this.processingComments.delete(commentId);
    }, 800);
  }

  cancelModify(comment: AIComment): void {
    this.editingComments.delete(this.getCommentId(comment));
  }

  scrollToComment(index: number): void {
    setTimeout(() => {
      const commentElements = document.querySelectorAll('.ai-comment');
      if (commentElements[index]) {
        commentElements[index].scrollIntoView({ behavior: 'smooth', block: 'center' });
        
        const element = commentElements[index] as HTMLElement;
        element.style.transition = 'box-shadow 0.3s';
        element.style.boxShadow = '0 0 10px rgba(59, 130, 246, 0.5)';
        setTimeout(() => {
          element.style.boxShadow = '';
        }, 1000);
      }
    }, 100);
  }

  goToFirstComment(): void {
    this.scrollToComment(0);
  }

  goToNextComment(currentComment: AIComment): void {
    if (!this.selectedFile) return;
    
    const currentIndex = this.selectedFile.ai_comments.indexOf(currentComment);
    if (currentIndex >= 0 && currentIndex < this.selectedFile.ai_comments.length - 1) {
      this.scrollToComment(currentIndex + 1);
    }
  }

  goToPreviousComment(currentComment: AIComment): void {
    if (!this.selectedFile) return;
    
    const currentIndex = this.selectedFile.ai_comments.indexOf(currentComment);
    if (currentIndex > 0) {
      this.scrollToComment(currentIndex - 1);
    }
  }

  isFirstComment(comment: AIComment): boolean {
    if (!this.selectedFile) return false;
    return this.selectedFile.ai_comments.indexOf(comment) === 0;
  }

  isLastComment(comment: AIComment): boolean {
    if (!this.selectedFile) return false;
    const index = this.selectedFile.ai_comments.indexOf(comment);
    return index === this.selectedFile.ai_comments.length - 1;
  }

  exportComments(): void {
    const data: any[] = [];

    this.commentStates.forEach((state, key) => {
      const [filePath, line, side] = key.split('-');
      const file = this.files.find(f => f.file_path === filePath);

      if (file) {
        const comment = file.ai_comments.find(c =>
          c.line === parseInt(line) && c.side === side
        );

        if (comment) {
          data.push({
            file: filePath,
            line: parseInt(line),
            side: side,
            status: state.status,
            originalText: comment.comment_text,
            modifiedText: state.modifiedText,
            severity: comment.severity,
            suggestedPatch: comment.suggested_patch
          });
        }
      }
    });

    const accepted = data.filter(d => d.status === 'accepted').length;
    const rejected = data.filter(d => d.status === 'rejected').length;
    const pending = data.filter(d => d.status === 'pending').length;

    const jsonStr = JSON.stringify(data, null, 2);
    const blob = new Blob([jsonStr], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'comment-review-results.json';
    a.click();
    URL.revokeObjectURL(url);
    
    alert(
      `Comment data exported!\n\n` +
      `Total: ${data.length}\n` +
      `Accepted: ${accepted}\n` +
      `Rejected: ${rejected}\n` +
      `Pending: ${pending}\n\n` +
      `File downloaded: comment-review-results.json`
    );
  }

  hasComments(): boolean {
    return this.selectedFile ? this.selectedFile.ai_comments.length > 0 : false;
  }
}













