 const prompt = this.getRandomPrompt();         // Get the full prompt
  const fullTextArray = prompt.split('');        // Split into characters
  this.displayedText = '';
  this.currentWordIndex = 0;

  const interval = setInterval(() => {
    if (this.currentWordIndex < fullTextArray.length) {
      this.displayedText += fullTextArray[this.currentWordIndex];
      this.currentWordIndex++;
    } else {
      clearInterval(interval);
    }
  }, 50);
