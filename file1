// Before — always wiped prompts:
if (tab === 'generate' && this.requestFile) { ... } // only guarded parent files
this.summaryPrompt = '';  // always executed for locally-selected files
this.faqPrompt = '';

// After — preserves prompts when a file is active:
if (tab === 'generate' && (this.requestFile || this.selectedGenerateFile)) { return; }
if (!this.selectedGenerateFile) {
  this.summaryPrompt = '';
  this.faqPrompt = '';
}
