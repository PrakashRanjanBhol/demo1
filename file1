<!-- ❌ OLD -->
<span *ngFor="let item of currentPath; let i = index">
    <span (click)="navigateToPath(i)">
        {{ getBreadcrumbItem(i) }}
    </span>
</span>

<!-- ✅ NEW - Use 'item' directly -->
<span *ngFor="let item of currentPath; let i = index; trackBy: trackByIndex">
    <span class="breadcrumb-item" 
          [class.active]="i === currentPath.length - 1"
          (click)="navigateToPath(i)">
        {{ item }}
    </span>
    <span class="breadcrumb-separator" *ngIf="i < currentPath.length - 1">›</span>
</span>
