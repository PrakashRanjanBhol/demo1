import React, { useState } from 'react';
import { Dialog } from 'primereact/dialog';
import ImageGalleryPreview from './ImageGalleryPreview';
import styles from './ChatImageStrip.module.css';

const ChatImageStrip = ({ images }) => {
  const [showModal, setShowModal] = useState(false);

  const previewLimit = 4;
  const hasMore = images.length > previewLimit;
  const visibleImages = images.slice(0, previewLimit);
  const extraCount = images.length - previewLimit;

  return (
    <>
      <div className={styles.imageGridWrapper}>
        {visibleImages.map((img, idx) => (
          <div key={idx} className={styles.imageCell}>
            <img
              src={`data:image/jpeg;base64,${img.base64Image}`}
              alt={img.fileName}
              className={styles.thumbnail}
              draggable={false}
            />
          </div>
        ))}

        {hasMore && (
          <div className={styles.moreButtonWrapper} onClick={() => setShowModal(true)}>
            <button className={styles.moreButton}>+{extraCount} more</button>
          </div>
        )}
      </div>

      <Dialog
        header="All Images"
        visible={showModal}
        onHide={() => setShowModal(false)}
        style={{ width: '70vw', background: '#181818', color: '#fff' }}
        contentStyle={{ background: '#181818' }}
      >
        <ImageGalleryPreview images={images} />
      </Dialog>
    </>
  );
};

export default ChatImageStrip;




.imageGridWrapper {
  display: grid;
  grid-template-columns: repeat(2, 90px);
  grid-template-rows: repeat(2, 90px);
  gap: 10px;
  position: relative;
}

.imageCell {
  width: 90px;
  height: 90px;
  overflow: hidden;
  border-radius: 6px;
  background-color: #1f1f1f;
}

.thumbnail {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 6px;
}

.moreButtonWrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.moreButton {
  background: linear-gradient(to right, #007bff, #00d4ff);
  color: white;
  border: none;
  border-radius: 20px;
  padding: 6px 16px;
  font-size: 0.85rem;
  font-weight: 600;
  cursor: pointer;
}











import React from 'react';
import { Image } from 'primereact/image';
import styles from './ChatImageStrip.module.css';

const ImageGalleryPreview = ({ images }) => {
  return (
    <div className={styles.modalGrid}>
      {images.map((img, idx) => (
        <div key={idx} className={styles.modalImageWrapper}>
          <Image
            src={`data:image/jpeg;base64,${img.base64Image}`}
            alt={img.fileName}
            preview
            zoomSrc={`data:image/jpeg;base64,${img.base64Image}`}
            className={styles.modalImage}
          />
          <div className={styles.caption}>{img.fileName}</div>
        </div>
      ))}
    </div>
  );
};

export default ImageGalleryPreview;




.modalGrid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  gap: 16px;
  padding-top: 1rem;
}

.modalImageWrapper {
  background: #252525;
  border-radius: 8px;
  padding: 8px;
  text-align: center;
}

.modalImage {
  width: 100%;
  height: 100px;
  object-fit: cover;
  border-radius: 6px;
}

.caption {
  margin-top: 6px;
  font-size: 0.8rem;
  color: #ccc;
}
