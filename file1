/* ===================================================================
   UTILITY CLASS FOR DARK MODE TOGGLE
   =================================================================== */
/* 
  Usage:
  Add 'dark-mode' class to body or root element:
  
  TypeScript:
  document.body.classList.toggle('dark-mode');
  
  Or use data attribute:
  document.documentElement.setAttribute('data-theme', 'dark');
  document.documentElement.setAttribute('data-theme', 'light');
*/

/* ===================================================================
   PREFERS COLOR SCHEME MEDIA QUERY (Auto Dark Mode)
   =================================================================== */
@media (prefers-color-scheme: dark) {
  :root:not([data-theme="light"]) {
    /* Copy all dark mode variables here if you want auto dark mode based on system preference */
    /* Uncomment the block below to enable auto dark mode */
    
    /*
    --vibe-coding-primary-bg: #1c1c1e;
    --vibe-coding-secondary-bg: #2c2c2e;
    ... (all dark mode variables)
    */
  }
}
