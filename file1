// agentic-ai-upload.component.ts
import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';

@Component({
  selector: 'app-agentic-ai-upload',
  standalone: true,
  imports: [CommonModule],
  template: `
    <div class="ai-upload-container">
      <!-- Hidden attachment input -->
      <input
        #attachmentInput
        type="file"
        (change)="onAttachmentSelected($event)"
        accept="image/*,video/*,audio/*,.pdf,.doc,.docx,.txt"
        style="display: none"
        multiple
      />
      
      <!-- Input area with attachments display -->
      <div class="input-wrapper">
        <div class="ai-input-area" (click)="attachmentInput.click()">
          <span *ngFor="let attachment of uploadedAttachments; let i = index" class="attachment-chip">
            {{ attachment.name }}
            <span class="remove-btn" (click)="removeAttachment(i, $event)">Ã—</span>
          </span>
        </div>
      </div>
    </div>
  `,
  styles: [`
    .ai-upload-container {
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    .input-wrapper {
      width: 100%;
    }

    .ai-input-area {
      height: 48px;
      overflow-x: auto;
      overflow-y: hidden;
      border: 1px solid #ccc;
      border-radius: 4px;
      padding: 8px;
      cursor: pointer;
      background-color: #fff;
      display: flex;
      flex-wrap: nowrap;
      gap: 6px;
      align-items: center;
      white-space: nowrap;
    }

    .ai-input-area::-webkit-scrollbar {
      height: 6px;
    }

    .ai-input-area::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 3px;
    }

    .ai-input-area::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 3px;
    }

    .ai-input-area::-webkit-scrollbar-thumb:hover {
      background: #555;
    }

    .attachment-chip {
      display: inline-flex;
      align-items: center;
      background-color: #e3f2fd;
      padding: 4px 8px;
      border-radius: 16px;
      font-size: 13px;
      white-space: nowrap;
      flex-shrink: 0;
      max-width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .remove-btn {
      margin-left: 6px;
      cursor: pointer;
      font-weight: bold;
      color: #666;
      font-size: 18px;
      line-height: 1;
    }

    .remove-btn:hover {
      color: #333;
    }

    .show-all {
      display: inline-flex;
      align-items: center;
      background-color: #f5f5f5;
      padding: 4px 12px;
      border-radius: 16px;
      font-size: 13px;
      color: #007bff;
      cursor: pointer;
      font-weight: 500;
    }

    .show-all:hover {
      background-color: #e0e0e0;
    }
  `]
})
export class AgenticAiUploadComponent {
  uploadedAttachments: File[] = [];

  onAttachmentSelected(event: Event): void {
    const input = event.target as HTMLInputElement;
    
    if (input.files && input.files.length > 0) {
      this.uploadedAttachments = [...this.uploadedAttachments, ...Array.from(input.files)];
      console.log('Uploaded attachments:', this.uploadedAttachments);
    }
  }

  removeAttachment(index: number, event: Event): void {
    event.stopPropagation();
    this.uploadedAttachments.splice(index, 1);
  }

  formatAttachmentSize(bytes: number): string {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
  }
}
