/**
 * Check if summary HTML content is long (based on character count of original markdown)
 */
isSummaryContentLong(item: ResultItem): boolean {
  if (item.type === 'summary' && item.content) {
    return item.content.length > this.CHAR_LIMIT;
  }
  return false;
}

/**
 * Check if content should show ellipsis
 */
shouldShowEllipsis(item: ResultItem): boolean {
  return item.type !== 'keywords';
}

/**
 * Check if content is long enough to need read more
 */
isContentLong(content: string): boolean {
  return content.length > this.CHAR_LIMIT;
}







<!-- SUMMARY - Show with markdown rendering and collapse feature -->
<div *ngIf="item.type === 'summary'" class="summary-markdown-content">
    <div class="markdown-content-inline" 
         [class.summary-collapsed]="!isExpanded(item.id) && isSummaryContentLong(item)"
         [innerHTML]="item.htmlContent">
    </div>
    
    <!-- Read more/less button for summary -->
    <button class="read-more-btn" 
            *ngIf="isSummaryContentLong(item)"
            (click)="toggleExpand(item.id)">
        {{ isExpanded(item.id) ? 'Read less' : 'Read more' }}
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" [class.rotate-180]="isExpanded(item.id)">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
    </button>
</div>











