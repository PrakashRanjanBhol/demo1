import { Component } from '@angular/core';

@Component({
  selector: 'app-content-analytics',
  templateUrl: './content-analytics.component.html',
  styleUrls: ['./content-analytics.component.css']
})
export class ContentAnalyticsComponent {
  // File upload
  selectedFile: File | null = null;
  selectedFileName: string = '';
  isDragging: boolean = false;

  // Optional prompts
  optionalPrompts: string = '';

  // Workspace tabs (Result and Settings only - History moved to Upload section)
  activeTab: 'result' | 'settings' = 'result';

  // Upload view toggle (upload or history)
  uploadView: 'upload' | 'history' = 'upload';

  // Header expand/collapse
  isHeaderExpanded: boolean = false;

  toggleHeader(): void {
    this.isHeaderExpanded = !this.isHeaderExpanded;
  }

  onFileSelected(event: any): void {
    const file = event.target.files[0];
    if (file) {
      this.selectedFile = file;
      this.selectedFileName = file.name;
    }
  }

  onFileDrop(event: DragEvent): void {
    event.preventDefault();
    this.isDragging = false;

    const files = event.dataTransfer?.files;
    if (files && files.length > 0) {
      this.selectedFile = files[0];
      this.selectedFileName = files[0].name;
    }
  }

  onDragOver(event: DragEvent): void {
    event.preventDefault();
    this.isDragging = true;
  }

  onDragLeave(event: DragEvent): void {
    event.preventDefault();
    this.isDragging = false;
  }

  removeFile(): void {
    this.selectedFile = null;
    this.selectedFileName = '';
  }

  onGenerate(): void {
    if (this.selectedFile) {
      console.log('Generating analysis for:', this.selectedFileName);
      console.log('Optional prompts:', this.optionalPrompts);
      // Add your generation logic here
      // Switch to result tab to show the generated results
      this.activeTab = 'result';
    }
  }

  onReset(): void {
    this.selectedFile = null;
    this.selectedFileName = '';
    this.optionalPrompts = '';
    this.isDragging = false;
  }

  onHistoryItemClick(itemId: string): void {
    console.log('History item clicked:', itemId);
    // Load the historical data for this item
    // Update the workspace result tab with the historical results
    this.activeTab = 'result';

    // Here you would typically:
    // 1. Fetch the historical data based on itemId
    // 2. Update the result content in the workspace
    // 3. Optionally switch back to upload view or stay in history

    // Example: You might want to stay in history view or switch back
    // this.uploadView = 'upload'; // Uncomment if you want to switch back to upload view
  }
}




















