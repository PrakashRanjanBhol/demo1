// codebase-tabs.component.ts
import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';

@Component({
  selector: 'app-codebase-tabs',
  standalone: true,
  imports: [CommonModule],
  templateUrl: './codebase-tabs.component.html',
  styleUrls: ['./codebase-tabs.component.css']
})
export class CodebaseTabsComponent {
  activeTab: 'my-codebase' | 'reusable-codebase' = 'my-codebase';
  isDarkMode = false; // Toggle this to switch between light and dark mode

  setActiveTab(tab: 'my-codebase' | 'reusable-codebase'): void {
    this.activeTab = tab;
  }

  toggleTheme(): void {
    this.isDarkMode = !this.isDarkMode;
  }
}

