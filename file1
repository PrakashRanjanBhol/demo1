<div class="radio-grid">
    <div class="radio-row" *ngFor="let pair of options | slice:0:6; let i = index">
        <ng-container *ngIf="i % 2 === 0">
            <div class="radio-item" *ngIf="options[i]">
                <p-radioButton name="group" [value]="options[i].value" [(ngModel)]="selectedOption"></p-radioButton>
                <label>{{ options[i].label }}</label>
            </div>

            <div class="radio-item" *ngIf="options[i + 1]">
                <p-radioButton name="group" [value]="options[i + 1].value" [(ngModel)]="selectedOption"></p-radioButton>
                <label>{{ options[i + 1].label }}</label>
            </div>
        </ng-container>
    </div>

    <!-- âœ… Input shown in a separate row -->
    <div class="custom-input-wrapper" *ngIf="selectedOption === '6'">
        <input type="text" pInputText [(ngModel)]="customText" placeholder="Enter custom value" />
    </div>
</div>



.radio-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.radio-row {
    display: flex;
    gap: 2rem;
    align-items: center;
}

.radio-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.custom-input-wrapper {
    margin-left: 0.5rem;
}






 selectedOption: string = '';
  customText: string = ''; // For Option 6 input
  options = [
    { label: 'Option 1', value: '1' },
    { label: 'Option 2', value: '2' },
    { label: 'Option 3', value: '3' },
    { label: 'Option 4', value: '4' },
    { label: 'Option 5', value: '5' },
    { label: 'Option 6', value: '6' },
  ];
