// agentic-ai-upload.component.ts
import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';

@Component({
  selector: 'app-agentic-ai-upload',
  standalone: true,
  imports: [CommonModule],
  template: `
    <div class="ai-upload-container">
      <!-- Hidden attachment input -->
      <input
        #attachmentInput
        type="file"
        (change)="onAttachmentSelected($event)"
        accept="image/*,video/*,audio/*,.pdf,.doc,.docx,.txt"
        style="display: none"
        multiple
      />
      
      <!-- Input area with attachments display -->
      <div class="input-wrapper">
        <div #attachmentContainer class="ai-input-area" (click)="attachmentInput.click()">
          <span *ngFor="let attachment of displayedAttachments; let i = index" class="attachment-chip">
            {{ attachment.name }}
            <span class="remove-btn" (click)="removeAttachment(i, $event)">Ã—</span>
          </span>
          <span *ngIf="hasOverflowAttachments" class="show-all" (click)="toggleExpandAttachments($event)">
            {{ isExpanded ? 'Show Less' : 'Show All (' + overflowCount + ')' }}
          </span>
        </div>
      </div>
    </div>
  `,
  styles: [`
    .ai-upload-container {
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    .input-wrapper {
      width: 100%;
    }

    .ai-input-area {
      min-height: 48px;
      max-height: 48px;
      overflow: hidden;
      border: 1px solid #ccc;
      border-radius: 4px;
      padding: 8px;
      cursor: pointer;
      background-color: #fff;
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      align-items: flex-start;
      transition: max-height 0.3s ease;
    }

    .ai-input-area.expanded {
      max-height: 200px;
      overflow-y: auto;
    }

    .attachment-chip {
      display: inline-flex;
      align-items: center;
      background-color: #e3f2fd;
      padding: 4px 8px;
      border-radius: 16px;
      font-size: 13px;
      white-space: nowrap;
      max-width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .remove-btn {
      margin-left: 6px;
      cursor: pointer;
      font-weight: bold;
      color: #666;
      font-size: 18px;
      line-height: 1;
    }

    .remove-btn:hover {
      color: #333;
    }

    .show-all {
      display: inline-flex;
      align-items: center;
      background-color: #f5f5f5;
      padding: 4px 12px;
      border-radius: 16px;
      font-size: 13px;
      color: #007bff;
      cursor: pointer;
      font-weight: 500;
    }

    .show-all:hover {
      background-color: #e0e0e0;
    }
  `]
})
export class AgenticAiUploadComponent {
  uploadedAttachments: File[] = [];
  displayedAttachments: File[] = [];
  hasOverflowAttachments = false;
  isExpanded = false;
  overflowCount = 0;
  private maxVisibleCount = 5; // Adjust this number based on your needs

  onAttachmentSelected(event: Event): void {
    const input = event.target as HTMLInputElement;
    
    if (input.files && input.files.length > 0) {
      this.uploadedAttachments = [...this.uploadedAttachments, ...Array.from(input.files)];
      console.log('Uploaded attachments:', this.uploadedAttachments);
      
      this.updateDisplayedAttachments();
    }
  }

  updateDisplayedAttachments(): void {
    if (this.isExpanded) {
      this.displayedAttachments = this.uploadedAttachments;
      this.hasOverflowAttachments = false;
    } else {
      if (this.uploadedAttachments.length > this.maxVisibleCount) {
        this.displayedAttachments = this.uploadedAttachments.slice(0, this.maxVisibleCount);
        this.overflowCount = this.uploadedAttachments.length - this.maxVisibleCount;
        this.hasOverflowAttachments = true;
      } else {
        this.displayedAttachments = this.uploadedAttachments;
        this.hasOverflowAttachments = false;
      }
    }
  }

  removeAttachment(index: number, event: Event): void {
    event.stopPropagation();
    const actualIndex = this.uploadedAttachments.indexOf(this.displayedAttachments[index]);
    this.uploadedAttachments.splice(actualIndex, 1);
    this.updateDisplayedAttachments();
  }

  toggleExpandAttachments(event: Event): void {
    event.stopPropagation();
    this.isExpanded = !this.isExpanded;
    this.updateDisplayedAttachments();
  }

  formatAttachmentSize(bytes: number): string {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
  }
}
