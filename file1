            <path stroke-linecap="round" stroke-linejoin="round"
                d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 01-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 011.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 00-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 01-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 00-3.375-3.375h-1.5a1.125 1.125 0 01-1.125-1.125v-1.5a3.375 3.375 0 00-3.375-3.375H9.75" />
        </svg>
    </button>
    <button class="result-action-icon-btn" title="Download" (click)="downloadContent(item)">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
        </svg>
    </button>
</div>














<div class="detail-sidebar-content">
    <!-- EDIT MODE -->
    <div *ngIf="isEditMode" class="edit-mode-container">
        <div class="edit-columns">
            <!-- Column 1: Preview -->
            <div class="edit-column preview-column">
                <div class="column-header">
                    <h4 class="column-title">Preview</h4>
                    <span class="column-badge">Markdown Rendered</span>
                </div>
                <div class="column-content">
                    <div class="markdown-content" [innerHTML]="previewContent"></div>
                </div>
            </div>

            <!-- Column 2: Editor -->
            <div class="edit-column editor-column">
                <div class="column-header">
                    <h4 class="column-title">Edit Content</h4>
                    <span class="column-badge">
                        {{ editingItemType === 'summary' ? 'Markdown' : 'One per line' }}
                    </span>
                </div>
                <div class="column-content">
                    <textarea 
                        class="content-editor"
                        [(ngModel)]="editedContent"
                        (ngModelChange)="onContentChange($event)"
                        [placeholder]="editingItemType === 'summary' ? 'Enter markdown content...' : 'Enter keywords (one per line)...'"
                        spellcheck="false">
                    </textarea>
                    <div class="editor-actions">
                        <button class="cancel-btn" (click)="cancelEdit()">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                            Cancel
                        </button>
                        <button class="save-btn" (click)="saveEditedContent()">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                            </svg>
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- VIEW MODE (Existing content) -->
    <ng-container *ngIf="!isEditMode">
        <!-- SUMMARY Content -->
        <div *ngIf="selectedDetailItem?.type === 'summary'" class="detail-markdown-wrapper">
            <div class="markdown-content" [innerHTML]="selectedItemContent"></div>
        </div>

        <!-- KEYWORDS Content -->
        <div *ngIf="selectedDetailItem?.type === 'keywords'" class="detail-keywords-wrapper">
            <div class="keywords-chips-container">
                <div class="keyword-chip" 
                     *ngFor="let keyword of getDetailKeywordsArray(); let i = index"
                     [style.background]="getChipBackground(i)" 
                     [style.border-color]="getChipBorderColor(i)">
                    <span class="chip-text">{{ keyword }}</span>
                    <button class="chip-remove-btn" 
                            (click)="removeDetailKeyword(keyword)"
                            title="Remove keyword">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                            stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <p class="no-keywords-message" *ngIf="getDetailKeywordsArray().length === 0">
                    No keywords available
                </p>
            </div>
        </div>

        <!-- ASSESSMENT QUESTIONS Content -->
        <div *ngIf="selectedDetailItem?.type === 'questions' && getDetailAssessmentQuestions().length > 0" 
             class="detail-assessment-wrapper">
            <!-- (Keep existing assessment code) -->
        </div>

        <!-- DEFAULT/OTHER Content -->
        <div *ngIf="!selectedDetailItem || (selectedDetailItem.type !== 'summary' && selectedDetailItem.type !== 'keywords' && selectedDetailItem.type !== 'questions')" 
             class="detail-markdown-wrapper">
            <div class="markdown-content" [innerHTML]="selectedItemContent"></div>
        </div>
    </ng-container>
</div>








