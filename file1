/* === Glow Effect for Active === */
.icon-wrapper {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.glow-circle {
  position: absolute;
  width: 1.75rem;
  height: 1.75rem;
  border-radius: 50%;
  background-color: rgba(0, 153, 255, 0.12);
  box-shadow: 0 0 6px 3px rgba(0, 153, 255, 0.35);
  z-index: 0;
  animation: pulseGlow 1.5s infinite ease-in-out;
}

/* === Arrow for Inactive === */
.sidebar-arrow {
  font-size: 1rem;
  color: #888;
  transition: transform 0.2s ease, color 0.2s ease;
}

.sidebar-header:not(.active) .pi-chevron-right {
  margin-left: auto;
}

.sidebar-header:not(.active) .pi-chevron-left {
  margin-right: auto;
}

.sidebar-header:not(.active):hover .pi-chevron-right {
  transform: translateX(4px);
  color: #0099ff;
}

.sidebar-header:not(.active):hover .pi-chevron-left {
  transform: translateX(-4px);
  color: #0099ff;
}

.sidebar-header.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  height: 1px;
  /* Slimmer line */
  background: linear-gradient(90deg, #ff6a00, #ffcc00);
  /* Different color gradient */
  width: 100%;
  transform: scaleX(1);
  transform-origin: left;
  transition: transform 0.3s ease;
}

.sidebar-header::after {
  transform: scaleX(0);
}

@keyframes growLine {
  from {
    width: 0;
  }

  to {
    width: 100%;
  }
}

/* Pulse Glow Animation */
@keyframes pulseGlow {
  0% {
    box-shadow: 0 0 6px 3px rgba(0, 153, 255, 0.35);
    background-color: rgba(0, 153, 255, 0.12);
  }

  50% {
    box-shadow: 0 0 10px 5px rgba(0, 153, 255, 0.5);
    background-color: rgba(0, 153, 255, 0.18);
  }

  100% {
    box-shadow: 0 0 6px 3px rgba(0, 153, 255, 0.35);
    background-color: rgba(0, 153, 255, 0.12);
  }
}

/* Icon Bounce Animation */
.sidebar-header.active .icon {
  animation: iconBounce 0.4s ease;
}

@keyframes iconBounce {
  0% {
    transform: scale(1);
  }

  30% {
    transform: scale(1.2);
  }

  60% {
    transform: scale(0.95);
  }

  100% {
    transform: scale(1);
  }
}






