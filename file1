// Update these methods to always return true
hasPreviousComment(): boolean {
  return this.visibleComments.length > 1; // Always enabled if there are multiple comments
}

hasNextComment(): boolean {
  return this.visibleComments.length > 1; // Always enabled if there are multiple comments
}

// Update navigation methods to handle wrap-around
goToPreviousComment(): void {
  if (this.visibleComments.length === 0) return;
  
  if (this.currentCommentIndex <= 0) {
    // Wrap to last comment
    const last = this.visibleComments[this.visibleComments.length - 1];
    this.goToComment(last.fileIndex, last.commentIndex);
  } else {
    const prev = this.visibleComments[this.currentCommentIndex - 1];
    this.goToComment(prev.fileIndex, prev.commentIndex);
  }
}

goToNextComment(): void {
  if (this.visibleComments.length === 0) return;
  
  if (this.currentCommentIndex >= this.visibleComments.length - 1) {
    // Wrap to first comment
    const first = this.visibleComments[0];
    this.goToComment(first.fileIndex, first.commentIndex);
  } else {
    const next = this.visibleComments[this.currentCommentIndex + 1];
    this.goToComment(next.fileIndex, next.commentIndex);
  }
}














<!-- Navigation Buttons - Always Enabled (No [disabled] attribute) -->

<!-- In Pending State -->
<button 
    class="action-btn btn-nav btn-prev" 
    (click)="goToPreviousComment()"
    [title]="'Previous comment (' + getCurrentCommentPosition() + ')'">
    <span class="btn-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
    </span>
</button>
<button 
