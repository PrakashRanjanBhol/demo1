/* Smooth fade-in animation for content */
.regular-text {
    animation: fadeIn 0.3s ease-in;
}

.code-block {
    animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Optional: Smoother transition for streaming content */
.regular-text, .code-block {
    transition: opacity 0.3s ease-in, transform 0.3s ease-in;
}










/* Subtle fade-in animation */
.regular-text {
    animation: fadeInSubtle 0.2s ease-out;
}

.code-block {
    animation: fadeInSubtle 0.2s ease-out;
}

@keyframes fadeInSubtle {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}








/* Staggered fade-in for streaming effect */
.regular-text, .code-block {
    animation: slideInFade 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes slideInFade {
    from {
        opacity: 0;
        transform: translateY(8px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
