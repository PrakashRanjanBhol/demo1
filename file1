                            <!-- NEW UPLOAD MODE -->
                            <div *ngIf="uploadMode === 'new'">
                                <!-- Step Indicator -->
                                <div class="step-indicator">
                                    <div class="step-item" [class.active]="currentStep === 1"
                                        [class.completed]="currentStep > 1">
                                        <div class="step-number">1</div>
                                        <div class="step-label">Upload</div>
                                    </div>
