// === Footer ===
        JPanel footerPanel = new JPanel(new BorderLayout(10, 0));
        footerPanel.setBorder(BorderFactory.createEmptyBorder(5, 10, 5, 10));

// === Input text area ===
        textArea = new JBTextArea(1, 40);   // 1 row tall
        textArea.setLineWrap(true);
        textArea.setWrapStyleWord(true);
        textArea.setFont(new Font("Poppins", Font.PLAIN, 14));
        textArea.setMargin(new Insets(5, 5, 5, 5));

// === Placeholder ===
        String placeholder = "Ask Question";
        textArea.setText(placeholder);
        textArea.setForeground(Color.GRAY);

        textArea.addFocusListener(new FocusAdapter() {
            @Override
            public void focusGained(FocusEvent e) {
                if (textArea.getText().equals(placeholder)) {
                    textArea.setText("");
                    textArea.setForeground(Color.WHITE);
                }
            }
            @Override
            public void focusLost(FocusEvent e) {
                if (textArea.getText().isEmpty()) {
                    textArea.setText(placeholder);
                    textArea.setForeground(Color.GRAY);
                }
            }
        });

// === Wrap in scroll ===
        JScrollPane inputScroll = new JScrollPane(textArea);
        inputScroll.setVerticalScrollBarPolicy(ScrollPaneConstants.VERTICAL_SCROLLBAR_AS_NEEDED);

// ðŸ”‘ Reduce height here
        inputScroll.setPreferredSize(new Dimension(0, 35));  // ~1 row tall
        footerPanel.setPreferredSize(new Dimension(0, 50));  // shrink footer too



// Send button
        sendButton = new JButton("Send");
        sendButton.setPreferredSize(new Dimension(100, 40));
        sendButton.setFont(new Font("Poppins", Font.BOLD, 14));

// Stop button
        stopLabel = createIconLabel("/icons/copy.png", "Stop", project);
        stopLabel.setVisible(false);
        stopLabel.setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));

// Right side panel (for Send + Stop)
        JPanel rightPanel = new JPanel(new GridBagLayout()); // âœ… center vertically
        rightPanel.setOpaque(false);

        GridBagConstraints gbc = new GridBagConstraints();
        gbc.gridx = 0;
        gbc.gridy = 0;
        gbc.insets = new Insets(0, 0, 0, 5);
        rightPanel.add(sendButton, gbc);

        gbc.gridx = 1;
        rightPanel.add(stopLabel, gbc);

// Add components
        footerPanel.add(inputScroll, BorderLayout.CENTER);
        footerPanel.add(rightPanel, BorderLayout.EAST);
        footerPanel.setPreferredSize(new Dimension(0, 80));



        bottomWrapper = new JPanel();
        bottomWrapper.setLayout(new BoxLayout(bottomWrapper, BoxLayout.Y_AXIS));
        bottomWrapper.add(buttonContainer);
        bottomWrapper.add(footerPanel);
