getMarkdownContent(item: ResultItem): SafeHtml {
  // CREATE UNIQUE CACHE KEY
  const fileId = this.selectedHistoryItem?.id || 'unknown';
  const cacheKey = `${fileId}-${item.id}`;  // ‚Üê "100-summary", "101-summary"
  
  // CHECK CACHE
  if (this.markdownCache.has(cacheKey)) {
    return this.markdownCache.get(cacheKey)!;
  }

  // CONVERT MARKDOWN
  const htmlContent: any = marked(item.content);
  const safeHtml = this.sanitizer.bypassSecurityTrustHtml(htmlContent);
  
  // CACHE WITH UNIQUE KEY
  this.markdownCache.set(cacheKey, safeHtml);
  
  return safeHtml;
}
