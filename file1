// Add to your component TypeScript file
isSettingsPanelOpen = false;
selectedAccent = 'linear-gradient(135deg, #8b5cf6, #a78bfa)';

accentColors = [
  { name: 'Violet Dream', value: 'linear-gradient(135deg, #8b5cf6, #a78bfa)' },
  { name: 'Purple Pink', value: 'linear-gradient(135deg, #7c3aed, #db2777)' },
  { name: 'Ocean Blue', value: 'linear-gradient(135deg, #0ea5e9, #2563eb)' },
  { name: 'Sunset Orange', value: 'linear-gradient(135deg, #f97316, #fb923c)' },
  { name: 'Emerald Green', value: 'linear-gradient(135deg, #059669, #10b981)' },
  { name: 'Rose Pink', value: 'linear-gradient(135deg, #f43f5e, #fb7185)' },
  { name: 'Coral Reef', value: 'linear-gradient(135deg, #ef4444, #f97316)' },
  { name: 'Mint Fresh', value: 'linear-gradient(135deg, #14b8a6, #22d3ee)' },
  { name: 'Golden Hour', value: 'linear-gradient(135deg, #f59e0b, #fbbf24)' },
  { name: 'Royal Blue', value: 'linear-gradient(135deg, #3b82f6, #6366f1)' },
  { name: 'Berry Blast', value: 'linear-gradient(135deg, #be185d, #db2777)' },
  { name: 'Forest Night', value: 'linear-gradient(135deg, #065f46, #047857)' },
  { name: 'Neon Cyber', value: 'linear-gradient(135deg, #06b6d4, #8b5cf6)' },
  { name: 'Peach Glow', value: 'linear-gradient(135deg, #fb923c, #fbbf24)' },
  { name: 'Arctic Ice', value: 'linear-gradient(135deg, #0284c7, #06b6d4)' },
  { name: 'Magenta Fire', value: 'linear-gradient(135deg, #c026d3, #e879f9)' },
  { name: 'Lime Zest', value: 'linear-gradient(135deg, #65a30d, #84cc16)' },
  { name: 'Crimson Flame', value: 'linear-gradient(135deg, #dc2626, #ef4444)' }
];

ngOnInit() {
  // Load saved accent color from localStorage
  const savedAccent = localStorage.getItem('selectedAccent');
  if (savedAccent) {
    this.selectedAccent = savedAccent;
    this.applyAccent(savedAccent);
  }
}

toggleSettingsPanel() {
  this.isSettingsPanelOpen = !this.isSettingsPanelOpen;
}

selectAccent(accent: string) {
  this.selectedAccent = accent;
  this.applyAccent(accent);
  localStorage.setItem('selectedAccent', accent);
}

applyAccent(accent: string) {
  // Extract colors from gradient
  const colorMatches = accent.match(/#[0-9a-fA-F]{6}/g);
  if (colorMatches && colorMatches.length >= 2) {
    const color1 = colorMatches[0];
    const color2 = colorMatches[1];
    
    // Apply the primary gradient
    document.documentElement.style.setProperty('--primary-gradient', accent);
    document.documentElement.style.setProperty('--primary-gradient-animated', `linear-gradient(90deg, ${color1}, ${color2}, ${color1})`);
    document.documentElement.style.setProperty('--primary-color', color1);
    
    // Convert hex to rgba for variations
    const hexToRgba = (hex: string, alpha: number) => {
      const r = parseInt(hex.slice(1, 3), 16);
      const g = parseInt(hex.slice(3, 5), 16);
      const b = parseInt(hex.slice(5, 7), 16);
      return `rgba(${r}, ${g}, ${b}, ${alpha})`;
    };
    
    // Set gradient variations
    document.documentElement.style.setProperty('--primary-gradient-lighter-start', hexToRgba(color1, 0.02));
    document.documentElement.style.setProperty('--primary-gradient-lighter-end', hexToRgba(color2, 0.02));
    document.documentElement.style.setProperty('--primary-gradient-light-start', hexToRgba(color1, 0.08));
    document.documentElement.style.setProperty('--primary-gradient-light-end', hexToRgba(color2, 0.08));
    document.documentElement.style.setProperty('--primary-gradient-medium-start', hexToRgba(color1, 0.15));
    document.documentElement.style.setProperty('--primary-gradient-medium-end', hexToRgba(color2, 0.15));
    
    // Set border and shadow variations
    document.documentElement.style.setProperty('--primary-border-color', hexToRgba(color1, 0.2));
    document.documentElement.style.setProperty('--primary-shadow-lighter', hexToRgba(color1, 0.15));
    document.documentElement.style.setProperty('--primary-shadow-light', hexToRgba(color1, 0.2));
    document.documentElement.style.setProperty('--primary-shadow', hexToRgba(color1, 0.3));
    document.documentElement.style.setProperty('--primary-focus-shadow', hexToRgba(color1, 0.1));
    
    // Set glow effects
    document.documentElement.style.setProperty('--primary-glow-lighter', hexToRgba(color1, 0.1));
    document.documentElement.style.setProperty('--primary-glow-light', hexToRgba(color1, 0.2));
    document.documentElement.style.setProperty('--primary-glow-medium', hexToRgba(color1, 0.3));
    document.documentElement.style.setProperty('--primary-glow-strong', hexToRgba(color1, 0.4));
    
    // Set scrollbar and progress
    document.documentElement.style.setProperty('--scrollbar-track-bg', hexToRgba(color1, 0.05));
    document.documentElement.style.setProperty('--scrollbar-thumb-bg', hexToRgba(color1, 0.3));
    document.documentElement.style.setProperty('--primary-progress-track', hexToRgba(color1, 0.1));
  }
}
