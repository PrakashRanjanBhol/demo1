resetFilters(): void {
    // Reset search query
    this.searchQuery = '';
    
    // Reset date range
    this.startDate = '';
    this.endDate = '';
    this.appliedStartDate = '';
    this.appliedEndDate = '';
    
    // Reset sort to default (status)
    this.currentSort = 'status';
    
    // Reset sort order to default (open first)
    this.currentOrder = 'open';
    
    // Reset activity order to default (low to high)
    this.activityOrder = 'asc';
    
    // Reset selected PR
    this.selectedPRId = null;
    
    // Optionally: Reset to initial date range (last 3 months)
    // Uncomment the line below if you want to set the initial date range instead of clearing it
    // this.initializeDateRange();
    
    // Update the PR list
    this.updatePRList();
  }
