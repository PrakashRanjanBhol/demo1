export class CenterContentComponent {
  // ... existing code ...

  // Method to close/clear the current view
  closeView(): void {
    this.selectedPR = null;
    this.selectedFile = null;
    this.activeView = null;
  }
}












/* Close Button */
.close-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: var(--bitbucket-file-bg-tertiary);
  border: 1px solid var(--bitbucket-file-border-primary);
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  padding: 0;
}

.close-button:hover {
  background: var(--bitbucket-file-bg-hover);
  border-color: var(--bitbucket-file-border-secondary);
  transform: translateY(-1px);
}

.close-button:active {
  transform: translateY(0);
}

.close-icon {
  width: 18px;
  height: 18px;
  color: var(--bitbucket-file-text-tertiary);
  transition: color 0.2s;
}

.close-button:hover .close-icon {
  color: var(--bitbucket-file-text-primary);
}
