  onFileSelect(index: number): void {
    if (index >= 0 && index < this.files.length) {
      this.selectedFileIndex = index;
      this.selectedFile = this.files[index];
      this.renderDiff();
    }
  }

  switchView(view: 'unified' | 'side-by-side'): void {
    this.currentView = view;
    if (this.selectedFile) {
      this.renderDiff();
    }
  }

  private renderDiff(): void {
    if (!this.selectedFile) return;

    this.diffLines = this.generateUnifiedDiff(this.selectedFile);
    this.stats = this.calculateStats(this.selectedFile);
  }

  private generateUnifiedDiff(file: DiffFile): DiffLine[] {
    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    const diff = Diff.diffLines(oldText, newText);

    const lines: DiffLine[] = [];
    let oldLineNum = 1;
    let newLineNum = 1;

    diff.forEach(part => {
      const lineTexts = part.value.split('\n');
      if (lineTexts[lineTexts.length - 1] === '') {
        lineTexts.pop();
      }

      lineTexts.forEach(lineText => {
        if (part.added) {
          const comment = this.findCommentForLine(file, newLineNum, 'TO');
          lines.push({
            type: 'added',
            newLineNum,
            content: lineText,
            comment
          });
          newLineNum++;
        } else if (part.removed) {
          const comment = this.findCommentForLine(file, oldLineNum, 'FROM');
          lines.push({
            type: 'deleted',
            oldLineNum,
            content: lineText,
            comment
          });
          oldLineNum++;
        } else {
          lines.push({
            type: 'context',
            oldLineNum,
            newLineNum,
            content: lineText
          });
          oldLineNum++;
          newLineNum++;
        }
      });
    });

    return lines;
  }

  private calculateStats(file: DiffFile): DiffStats {
    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    const diff = Diff.diffLines(oldText, newText);

    let addedLines = 0;
    let deletedLines = 0;

    diff.forEach(part => {
      const lines = part.value.split('\n');
      if (lines[lines.length - 1] === '') {
        lines.pop();
      }

      if (part.added) {
        addedLines += lines.length;
      } else if (part.removed) {
        deletedLines += lines.length;
      }
    });

    return {
      addedLines,
      deletedLines,
      commentsCount: file.ai_comments.length
    };
  }

  private findCommentForLine(file: DiffFile, lineNum: number, side: 'TO' | 'FROM'): AIComment | undefined {
    return file.ai_comments.find(comment =>
      comment.line === lineNum && comment.side === side
    );
  }

  // Comment State Management
  private getCommentKey(filePath: string, line: number, side: string): string {
    return `${filePath}-${line}-${side}`;
  }

  getCommentState(comment: AIComment): CommentState {
    if (!this.selectedFile) return { status: 'pending', modifiedText: null };
    const key = this.getCommentKey(this.selectedFile.file_path, comment.line, comment.side);
    return this.commentStates.get(key) || { status: 'pending', modifiedText: null };
  }

  private saveCommentState(filePath: string, line: number, side: string, status: 'pending' | 'accepted' | 'rejected', modifiedText: string | null): void {
    const key = this.getCommentKey(filePath, line, side);
    this.commentStates.set(key, { status, modifiedText });
  }

  getCommentId(comment: AIComment): string {
    return `comment-${comment.line}-${comment.side}`;
  }

  getDisplayText(comment: AIComment): string {
    const state = this.getCommentState(comment);
    return state.modifiedText || comment.comment_text;
  }

  isEditing(comment: AIComment): boolean {
    return this.editingComments.has(this.getCommentId(comment));
  }

  getEditText(comment: AIComment): string {
    return this.editingComments.get(this.getCommentId(comment)) || '';
  }

  setEditText(comment: AIComment, text: string): void {
    this.editingComments.set(this.getCommentId(comment), text);
  }

  isActionDisabled(comment: AIComment): boolean {
    const state = this.getCommentState(comment);
    return state.status === 'accepted' || state.status === 'rejected';
  }

  acceptComment(comment: AIComment): void {
    if (!this.selectedFile || this.isActionDisabled(comment)) return;

    const displayText = this.getDisplayText(comment);
    this.saveCommentState(
      this.selectedFile.file_path,
      comment.line,
      comment.side,
      'accepted',
      displayText
    );
  }

  rejectComment(comment: AIComment): void {
    if (!this.selectedFile || this.isActionDisabled(comment)) return;

    const displayText = this.getDisplayText(comment);
    this.saveCommentState(
      this.selectedFile.file_path,
      comment.line,
      comment.side,
      'rejected',
      displayText
    );
  }

  modifyComment(comment: AIComment): void {
    if (this.isActionDisabled(comment)) return;
    const displayText = this.getDisplayText(comment);
    this.editingComments.set(this.getCommentId(comment), displayText);
  }

  saveComment(comment: AIComment): void {
    if (!this.selectedFile) return;

    const newText = this.getEditText(comment);
    const state = this.getCommentState(comment);
    this.saveCommentState(
      this.selectedFile.file_path,
      comment.line,
      comment.side,
      state.status,
      newText
    );
    this.editingComments.delete(this.getCommentId(comment));
  }

  cancelModify(comment: AIComment): void {
    this.editingComments.delete(this.getCommentId(comment));
  }

  scrollToComment(index: number): void {
    setTimeout(() => {
      const commentElements = document.querySelectorAll('.ai-comment');
      if (commentElements[index]) {
        commentElements[index].scrollIntoView({ behavior: 'smooth', block: 'center' });

        const element = commentElements[index] as HTMLElement;
        element.style.transition = 'box-shadow 0.3s';
        element.style.boxShadow = '0 0 10px rgba(59, 130, 246, 0.5)';
        setTimeout(() => {
          element.style.boxShadow = '';
        }, 1000);
      }
    }, 100);
  }

  goToFirstComment(): void {
    this.scrollToComment(0);
  }

  goToNextComment(currentComment: AIComment): void {
    if (!this.selectedFile) return;

    const currentIndex = this.selectedFile.ai_comments.indexOf(currentComment);
    if (currentIndex >= 0 && currentIndex < this.selectedFile.ai_comments.length - 1) {
      this.scrollToComment(currentIndex + 1);
    }
  }

  goToPreviousComment(currentComment: AIComment): void {
    if (!this.selectedFile) return;

    const currentIndex = this.selectedFile.ai_comments.indexOf(currentComment);
    if (currentIndex > 0) {
      this.scrollToComment(currentIndex - 1);
    }
  }

  isFirstComment(comment: AIComment): boolean {
    if (!this.selectedFile) return false;
    return this.selectedFile.ai_comments.indexOf(comment) === 0;
  }

  isLastComment(comment: AIComment): boolean {
    if (!this.selectedFile) return false;
    const index = this.selectedFile.ai_comments.indexOf(comment);
    return index === this.selectedFile.ai_comments.length - 1;
  }

  exportComments(): void {
    const data: any[] = [];

    this.commentStates.forEach((state, key) => {
      const [filePath, line, side] = key.split('-');
      const file = this.files.find(f => f.file_path === filePath);

      if (file) {
        const comment = file.ai_comments.find(c =>
          c.line === parseInt(line) && c.side === side
        );

        if (comment) {
          data.push({
            file: filePath,
            line: parseInt(line),
            side: side,
            status: state.status,
            originalText: comment.comment_text,
            modifiedText: state.modifiedText,
            severity: comment.severity,
            suggestedPatch: comment.suggested_patch
          });
        }
      }
    });

    const accepted = data.filter(d => d.status === 'accepted').length;
    const rejected = data.filter(d => d.status === 'rejected').length;
    const pending = data.filter(d => d.status === 'pending').length;

    const jsonStr = JSON.stringify(data, null, 2);
    const blob = new Blob([jsonStr], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'comment-review-results.json';
    a.click();
    URL.revokeObjectURL(url);

    alert(
      `Comment data exported!\n\n` +
      `Total: ${data.length}\n` +
      `Accepted: ${accepted}\n` +
      `Rejected: ${rejected}\n` +
      `Pending: ${pending}\n\n` +
      `File downloaded: comment-review-results.json`
    );
  }

  hasComments(): boolean {
    return this.selectedFile ? this.selectedFile.ai_comments.length > 0 : false;
  }
}


















<!-- diff-viewer.component.html -->
<div class="container">
    <div class="header">
        <h1>Code Diff Viewer</h1>
        <div class="header-actions">
            <button *ngIf="hasComments()" class="toggle-btn" (click)="goToFirstComment()">
                ‚¨Ü First Comment
            </button>
            <div class="view-toggle">
                <button class="toggle-btn" [class.active]="currentView === 'unified'" (click)="switchView('unified')">
                    Unified
                </button>
                <button class="toggle-btn" [class.active]="currentView === 'side-by-side'"
                    (click)="switchView('side-by-side')">
                    Side by Side
                </button>
            </div>
        </div>
    </div>

    <div class="file-selector">
        <select [(ngModel)]="selectedFileIndex" (change)="onFileSelect(selectedFileIndex)">
            <option [value]="-1">Select a file to view diff...</option>
            <option *ngFor="let file of files; let i = index" [value]="i">
                {{ file.file_path }}
            </option>
        </select>
    </div>

    <div class="diff-container">
        <ng-container *ngIf="!selectedFile">
            <p class="empty-state">Please select a file to view the diff</p>
        </ng-container>

        <ng-container *ngIf="selectedFile">
            <!-- Unified View -->
            <div *ngIf="currentView === 'unified'">
                <div class="file-header">üìÑ {{ selectedFile.file_path }}</div>
                <div class="unified-view">
                    <ng-container *ngFor="let line of diffLines">
                        <div class="diff-line" [ngClass]="line.type">
                            <div class="line-numbers">
                                <div class="line-number">{{ line.oldLineNum || '' }}</div>
                                <div class="line-number">{{ line.newLineNum || '' }}</div>
                            </div>
                            <div class="line-content">{{ line.content }}</div>
                        </div>

                        <!-- Inline Comment Box -->
                        <div *ngIf="line.comment" class="ai-comment" [id]="getCommentId(line.comment)" [ngClass]="{
                'accepted': getCommentState(line.comment).status === 'accepted',
                'rejected': getCommentState(line.comment).status === 'rejected'
              }">

                            <div class="comment-header">
                                <div>
                                    <span class="comment-severity" [ngClass]="line.comment.severity">
                                        {{ line.comment.severity }}
                                    </span>
                                    <span class="comment-status"
                                        *ngIf="getCommentState(line.comment).status !== 'pending'"
                                        [ngClass]="getCommentState(line.comment).status">
                                        {{ getCommentState(line.comment).status.toUpperCase() }}
                                    </span>
                                </div>
                                <span class="comment-line-info">Line {{ line.comment.line }}</span>
                            </div>

                            <div class="comment-text-display" *ngIf="!isEditing(line.comment)">
                                {{ getDisplayText(line.comment) }}
                            </div>

                            <textarea class="comment-text-input" *ngIf="isEditing(line.comment)"
                                [value]="getEditText(line.comment)"
                                (input)="setEditText(line.comment, $any($event.target).value)" rows="4">
              </textarea>

                            <div class="suggested-patch" *ngIf="line.comment.suggested_patch">
                                <div class="suggested-patch-label">üí° Suggested Fix:</div>
                                <pre>{{ line.comment.suggested_patch }}</pre>
                            </div>

                            <div class="comment-actions">
                                <button class="comment-btn accept" *ngIf="!isEditing(line.comment)"
                                    [disabled]="isActionDisabled(line.comment)" (click)="acceptComment(line.comment)">
                                    ‚úì Accept
                                </button>
                                <button class="comment-btn reject" *ngIf="!isEditing(line.comment)"
                                    [disabled]="isActionDisabled(line.comment)" (click)="rejectComment(line.comment)">
                                    ‚úó Reject
                                </button>
                                <button class="comment-btn modify" *ngIf="!isEditing(line.comment)"
                                    [disabled]="isActionDisabled(line.comment)" (click)="modifyComment(line.comment)">
                                    ‚úé Modify
                                </button>
                                <button class="comment-btn save" *ngIf="isEditing(line.comment)"
                                    (click)="saveComment(line.comment)">
                                    üíæ Save
                                </button>
                                <button class="comment-btn cancel" *ngIf="isEditing(line.comment)"
                                    (click)="cancelModify(line.comment)">
                                    Cancel
                                </button>

                                <div class="comment-nav">
                                    <button class="comment-btn nav prev-comment"
                                        [disabled]="isFirstComment(line.comment)"
                                        (click)="goToPreviousComment(line.comment)">
                                        ‚Üê Previous
                                    </button>
                                    <button class="comment-btn nav next-comment"
                                        [disabled]="isLastComment(line.comment)"
                                        (click)="goToNextComment(line.comment)">
                                        Next ‚Üí
                                    </button>
                                </div>
                            </div>
                        </div>
                    </ng-container>
                </div>
            </div>

            <!-- Side by Side View -->
            <div *ngIf="currentView === 'side-by-side'">
                <div class="file-header">üìÑ {{ selectedFile.file_path }}</div>
                <div class="side-by-side-view">
                    <div class="side-header-row">
                        <div class="side-header">Original</div>
                        <div class="side-header">Modified</div>
                    </div>

                    <ng-container *ngFor="let line of diffLines">
                        <div class="side-row">
                            <!-- Left side (Original) -->
                            <div class="side-cell" [ngClass]="{
                     'deleted': line.type === 'deleted',
                     'empty': line.type === 'added'
                   }">
                                <div class="side-cell-inner">
                                    <div class="side-line-number">{{ line.oldLineNum || '' }}</div>
                                    <div class="side-line-content">{{ line.type !== 'added' ? line.content : '' }}</div>
                                </div>

                                <!-- Comment on left side (FROM) -->
                                <div *ngIf="line.comment && line.comment.side === 'FROM'" class="ai-comment"
                                    [id]="getCommentId(line.comment)" [ngClass]="{
                    'accepted': getCommentState(line.comment).status === 'accepted',
                    'rejected': getCommentState(line.comment).status === 'rejected'
                  }">

                                    <div class="comment-header">
                                        <div>
                                            <span class="comment-severity" [ngClass]="line.comment.severity">
                                                {{ line.comment.severity }}
                                            </span>
                                            <span class="comment-status"
                                                *ngIf="getCommentState(line.comment).status !== 'pending'"
                                                [ngClass]="getCommentState(line.comment).status">
                                                {{ getCommentState(line.comment).status.toUpperCase() }}
                                            </span>
                                        </div>
                                        <span class="comment-line-info">Line {{ line.comment.line }}</span>
                                    </div>

                                    <div class="comment-text-display" *ngIf="!isEditing(line.comment)">
                                        {{ getDisplayText(line.comment) }}
                                    </div>

                                    <textarea class="comment-text-input" *ngIf="isEditing(line.comment)"
                                        [value]="getEditText(line.comment)"
                                        (input)="setEditText(line.comment, $any($event.target).value)" rows="4">
                  </textarea>

                                    <div class="suggested-patch" *ngIf="line.comment.suggested_patch">
                                        <div class="suggested-patch-label">üí° Suggested Fix:</div>
                                        <pre>{{ line.comment.suggested_patch }}</pre>
                                    </div>

                                    <div class="comment-actions">
                                        <button class="comment-btn accept" *ngIf="!isEditing(line.comment)"
                                            [disabled]="isActionDisabled(line.comment)"
                                            (click)="acceptComment(line.comment)">
                                            ‚úì Accept
                                        </button>
                                        <button class="comment-btn reject" *ngIf="!isEditing(line.comment)"
                                            [disabled]="isActionDisabled(line.comment)"
                                            (click)="rejectComment(line.comment)">
                                            ‚úó Reject
                                        </button>
                                        <button class="comment-btn modify" *ngIf="!isEditing(line.comment)"
                                            [disabled]="isActionDisabled(line.comment)"
                                            (click)="modifyComment(line.comment)">
                                            ‚úé Modify
                                        </button>
                                        <button class="comment-btn save" *ngIf="isEditing(line.comment)"
                                            (click)="saveComment(line.comment)">
                                            üíæ Save
                                        </button>
                                        <button class="comment-btn cancel" *ngIf="isEditing(line.comment)"
                                            (click)="cancelModify(line.comment)">
                                            Cancel
                                        </button>

                                        <div class="comment-nav">
                                            <button class="comment-btn nav prev-comment"
                                                [disabled]="isFirstComment(line.comment)"
                                                (click)="goToPreviousComment(line.comment)">
                                                ‚Üê Previous
                                            </button>
                                            <button class="comment-btn nav next-comment"
                                                [disabled]="isLastComment(line.comment)"
                                                (click)="goToNextComment(line.comment)">
                                                Next ‚Üí
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Right side (Modified) -->
                            <div class="side-cell" [ngClass]="{
                     'added': line.type === 'added',
                     'empty': line.type === 'deleted'
                   }">
                                <div class="side-cell-inner">
                                    <div class="side-line-number">{{ line.newLineNum || '' }}</div>
                                    <div class="side-line-content">{{ line.type !== 'deleted' ? line.content : '' }}
                                    </div>
                                </div>

                                <!-- Comment on right side (TO) -->
                                <div *ngIf="line.comment && line.comment.side === 'TO'" class="ai-comment"
                                    [id]="getCommentId(line.comment)" [ngClass]="{
                    'accepted': getCommentState(line.comment).status === 'accepted',
                    'rejected': getCommentState(line.comment).status === 'rejected'
                  }">

                                    <div class="comment-header">
                                        <div>
                                            <span class="comment-severity" [ngClass]="line.comment.severity">
                                                {{ line.comment.severity }}
                                            </span>
                                            <span class="comment-status"
                                                *ngIf="getCommentState(line.comment).status !== 'pending'"
                                                [ngClass]="getCommentState(line.comment).status">
                                                {{ getCommentState(line.comment).status.toUpperCase() }}
                                            </span>
                                        </div>
                                        <span class="comment-line-info">Line {{ line.comment.line }}</span>
                                    </div>

                                    <div class="comment-text-display" *ngIf="!isEditing(line.comment)">
                                        {{ getDisplayText(line.comment) }}
                                    </div>

                                    <textarea class="comment-text-input" *ngIf="isEditing(line.comment)"
                                        [value]="getEditText(line.comment)"
                                        (input)="setEditText(line.comment, $any($event.target).value)" rows="4">
                  </textarea>

                                    <div class="suggested-patch" *ngIf="line.comment.suggested_patch">
                                        <div class="suggested-patch-label">üí° Suggested Fix:</div>
                                        <pre>{{ line.comment.suggested_patch }}</pre>
                                    </div>

                                    <div class="comment-actions">
                                        <button class="comment-btn accept" *ngIf="!isEditing(line.comment)"
                                            [disabled]="isActionDisabled(line.comment)"
                                            (click)="acceptComment(line.comment)">
                                            ‚úì Accept
                                        </button>
                                        <button class="comment-btn reject" *ngIf="!isEditing(line.comment)"
                                            [disabled]="isActionDisabled(line.comment)"
                                            (click)="rejectComment(line.comment)">
                                            ‚úó Reject
                                        </button>
                                        <button class="comment-btn modify" *ngIf="!isEditing(line.comment)"
                                            [disabled]="isActionDisabled(line.comment)"
                                            (click)="modifyComment(line.comment)">
                                            ‚úé Modify
                                        </button>
                                        <button class="comment-btn save" *ngIf="isEditing(line.comment)"
                                            (click)="saveComment(line.comment)">
                                            üíæ Save
                                        </button>
                                        <button class="comment-btn cancel" *ngIf="isEditing(line.comment)"
                                            (click)="cancelModify(line.comment)">
                                            Cancel
                                        </button>

                                        <div class="comment-nav">
                                            <button class="comment-btn nav prev-comment"
                                                [disabled]="isFirstComment(line.comment)"
                                                (click)="goToPreviousComment(line.comment)">
                                                ‚Üê Previous
                                            </button>
                                            <button class="comment-btn nav next-comment"
                                                [disabled]="isLastComment(line.comment)"
                                                (click)="goToNextComment(line.comment)">
                                                Next ‚Üí
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </ng-container>
                </div>
            </div>
        </ng-container>
    </div>

    <div class="stats" *ngIf="stats">
        <div class="stat-item">
            <span>Changes:</span>
            <span class="stat-added">+{{ stats.addedLines }}</span>
            <span class="stat-deleted">-{{ stats.deletedLines }}</span>
        </div>
        <div class="stat-item">
            <span>{{ stats.commentsCount }} AI Comment{{ stats.commentsCount !== 1 ? 's' : '' }}</span>
        </div>
        <div class="stat-item export-btn-container">
            <button class="toggle-btn export-btn" (click)="exportComments()">
                Export Comment Decisions
            </button>
        </div>
    </div>
</div>















