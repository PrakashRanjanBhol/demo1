import React from "react";

interface RagModel {
  name: string;
  status: "active" | "inactive";
  docs: number;
}

const models: RagModel[] = [
  { name: "GPT-4 Turbo", status: "active",   docs: 1248 },
  { name: "Claude 3.5",  status: "active",   docs: 856  },
  { name: "Mistral 7B",  status: "inactive", docs: 320  },
];

const ACCENT = "#10b981";

const RagManagement: React.FC = () => (
  <div className="settings-content-anim">
    {/* Page Details */}
    <div className="settings-section-card">
      <div className="settings-section-title">
        <div style={iconBox(ACCENT)}>
          <i className="pi pi-database" style={{ color: ACCENT, fontSize: "13px" }} />
        </div>
        Page Details
      </div>
      <p style={{ fontSize: "13px", color: "#64748b", lineHeight: 1.6 }}>
        Configure retrieval-augmented generation models, manage document indexes, and connect new AI backends.
      </p>
      <MetaRow items={[["Models Connected", "2"], ["Docs Indexed", "2,424"], ["Status", "Active"]]} />
    </div>

    {/* Models */}
    <div className="settings-section-card">
      <div className="settings-section-title">
        <div style={iconBox(ACCENT)}>
          <i className="pi pi-list" style={{ color: ACCENT, fontSize: "13px" }} />
        </div>
        RAG Management
      </div>

      <p style={{ fontSize: "13px", color: "#64748b", marginBottom: "16px" }}>Connected Models</p>

      <div style={{ display: "flex", flexDirection: "column", gap: "12px" }}>
        {models.map((m) => (
          <div
            key={m.name}
            style={{
              display: "flex", alignItems: "center", justifyContent: "space-between",
              padding: "16px 20px", borderRadius: "12px",
              border: "1.5px solid #e2e8f0", background: "#f8fafc",
            }}
          >
            <div style={{ display: "flex", alignItems: "center", gap: "14px" }}>
              <div
                style={{
                  width: 40, height: 40, borderRadius: "10px",
                  background: m.status === "active"
                    ? "linear-gradient(135deg, #10b981, #059669)"
                    : "#e2e8f0",
                  display: "flex", alignItems: "center", justifyContent: "center",
                }}
              >
                <i
                  className="pi pi-server"
                  style={{ color: m.status === "active" ? "#fff" : "#94a3b8", fontSize: "16px" }}
                />
              </div>
              <div>
                <p style={{ fontWeight: 600, fontSize: "14px", color: "#1e293b", margin: 0 }}>
                  {m.name}
                </p>
                <p style={{ fontSize: "12px", color: "#94a3b8", margin: "2px 0 0" }}>
                  {m.docs.toLocaleString()} documents indexed
                </p>
              </div>
            </div>
            <span
              style={{
                fontSize: "11px", fontWeight: 700,
                padding: "4px 12px", borderRadius: "999px",
                background: m.status === "active" ? "#dcfce7" : "#f1f5f9",
                color: m.status === "active" ? "#16a34a" : "#94a3b8",
                textTransform: "uppercase", letterSpacing: "0.06em",
              }}
            >
              {m.status}
            </span>
          </div>
        ))}
      </div>

      <button
        style={{
          marginTop: "20px", padding: "10px 20px", borderRadius: "10px",
          border: "1.5px dashed #a7f3d0", background: "#ecfdf5",
          color: ACCENT, fontWeight: 600, fontSize: "13px",
          cursor: "pointer", width: "100%",
        }}
      >
        <i className="pi pi-plus" style={{ marginRight: "8px" }} />
        Connect New Model
      </button>
    </div>
  </div>
);

export default RagManagement;

// ─── Shared helpers ───────────────────────────────────────────────────────────

function iconBox(color: string): React.CSSProperties {
  return {
    width: 28, height: 28, borderRadius: "8px",
    background: `${color}18`,
    display: "flex", alignItems: "center", justifyContent: "center",
    flexShrink: 0,
  };
}

interface MetaRowProps {
  items: [string, string][];
}

const MetaRow: React.FC<MetaRowProps> = ({ items }) => (
  <div style={{ display: "flex", gap: "20px", marginTop: "16px" }}>
    {items.map(([k, v]) => (
      <div key={k} style={{ display: "flex", flexDirection: "column", gap: "3px" }}>
        <span style={{ fontSize: "10px", color: "#94a3b8", fontWeight: 600, textTransform: "uppercase", letterSpacing: "0.08em" }}>
          {k}
        </span>
        <span style={{ fontSize: "13px", fontWeight: 600, color: "#374151" }}>{v}</span>
      </div>
    ))}
  </div>
);




















import React, { useState } from "react";

interface ToggleSetting {
  label: string;
  enabled: boolean;
}

const initialSettings: ToggleSetting[] = [
  { label: "Dark Mode",                  enabled: false },
  { label: "Email Notifications",        enabled: true  },
  { label: "Two-Factor Authentication",  enabled: true  },
  { label: "Auto-save Drafts",           enabled: true  },
  { label: "Public Profile",             enabled: false },
];

const ACCENT = "#8b5cf6";

const GeneralSettings: React.FC = () => {
  const [settings, setSettings] = useState<ToggleSetting[]>(initialSettings);

  const toggle = (index: number): void => {
    setSettings((prev) =>
      prev.map((s, i) => (i === index ? { ...s, enabled: !s.enabled } : s))
    );
  };

  return (
    <div className="settings-content-anim">
      {/* Page Details */}
      <div className="settings-section-card">
        <div className="settings-section-title">
          <div style={iconBox(ACCENT)}>
            <i className="pi pi-cog" style={{ color: ACCENT, fontSize: "13px" }} />
          </div>
          Page Details
        </div>
        <p style={{ fontSize: "13px", color: "#64748b", lineHeight: 1.6 }}>
          Adjust system-wide preferences, notification settings, and security configurations from this panel.
        </p>
        <MetaRow items={[["Last Updated", "3 days ago"], ["Status", "Active"], ["Version", "v2.1"]]} />
      </div>

      {/* Toggles */}
      <div className="settings-section-card">
        <div className="settings-section-title">
          <div style={iconBox(ACCENT)}>
            <i className="pi pi-list" style={{ color: ACCENT, fontSize: "13px" }} />
          </div>
          General Settings
        </div>

        <div style={{ display: "flex", flexDirection: "column", gap: "12px" }}>
          {settings.map((s, i) => (
            <div
              key={i}
              style={{
                display: "flex", alignItems: "center", justifyContent: "space-between",
                padding: "16px 20px", borderRadius: "12px",
                border: "1.5px solid #e2e8f0", background: "#f8fafc",
              }}
            >
              <span style={{ fontSize: "14px", fontWeight: 500, color: "#374151" }}>
                {s.label}
              </span>
              {/* Toggle switch */}
              <div
                role="switch"
                aria-checked={s.enabled}
                onClick={() => toggle(i)}
                style={{
                  width: 44, height: 24, borderRadius: "999px", cursor: "pointer",
                  background: s.enabled
                    ? `linear-gradient(135deg, ${ACCENT}, #6366f1)`
                    : "#cbd5e1",
                  position: "relative", transition: "background 0.3s", flexShrink: 0,
                }}
              >
                <div
                  style={{
                    position: "absolute", top: 3,
                    left: s.enabled ? 22 : 3,
                    width: 18, height: 18, borderRadius: "50%", background: "#fff",
                    boxShadow: "0 1px 4px rgba(0,0,0,0.2)", transition: "left 0.3s",
                  }}
                />
              </div>
            </div>
          ))}
        </div>

        <div style={{ marginTop: "24px", display: "flex", gap: "12px" }}>
          <button style={primaryBtn(ACCENT)}>Save Changes</button>
          <button style={ghostBtn}>Reset Defaults</button>
        </div>
      </div>
    </div>
  );
};

export default GeneralSettings;

// ─── Helpers ──────────────────────────────────────────────────────────────────

function iconBox(color: string): React.CSSProperties {
  return {
    width: 28, height: 28, borderRadius: "8px",
    background: `${color}18`,
    display: "flex", alignItems: "center", justifyContent: "center",
    flexShrink: 0,
  };
}

interface MetaRowProps {
  items: [string, string][];
}

const MetaRow: React.FC<MetaRowProps> = ({ items }) => (
  <div style={{ display: "flex", gap: "20px", marginTop: "16px" }}>
    {items.map(([k, v]) => (
      <div key={k} style={{ display: "flex", flexDirection: "column", gap: "3px" }}>
        <span style={{ fontSize: "10px", color: "#94a3b8", fontWeight: 600, textTransform: "uppercase", letterSpacing: "0.08em" }}>
          {k}
        </span>
        <span style={{ fontSize: "13px", fontWeight: 600, color: "#374151" }}>{v}</span>
      </div>
    ))}
  </div>
);

function primaryBtn(color: string): React.CSSProperties {
  return {
    padding: "10px 24px", borderRadius: "10px", border: "none",
    background: `linear-gradient(135deg, ${color}, #6366f1)`,
    color: "#fff", fontWeight: 600, fontSize: "14px",
    cursor: "pointer", letterSpacing: "0.02em",
  };
}

const ghostBtn: React.CSSProperties = {
  padding: "10px 24px", borderRadius: "10px",
  border: "1.5px solid #e2e8f0", background: "#fff",
  color: "#64748b", fontWeight: 600, fontSize: "14px", cursor: "pointer",
};







