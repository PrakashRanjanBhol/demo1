import { Component, OnInit } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';

interface Workflow {
  id: string;
  name: string;
  description: string;
  active: boolean;
  isArchived: boolean;
  createdAt: string;
  updatedAt: string;
  triggerCount: number;
  nodeCount: number;
  nodes: any[];
}

@Component({
  selector: 'app-workflow-sidebar',
  standalone: true,
  imports: [CommonModule, FormsModule],
  templateUrl: './workflow-sidebar.component.html',
  styleUrls: ['./workflow-sidebar.component.css']
})
export class WorkflowSidebarComponent implements OnInit {
  workflowsData: Workflow[] = [
    {
      id: 'workflow-1',
      name: 'Data Sync Workflow',
      description: "Sync data across platforms",
      active: false,
      isArchived: false,
      createdAt: "2024-11-15T09:30:00.000Z",
      updatedAt: "2025-12-28T14:20:15.089Z",
      triggerCount: 0,
      nodeCount: 5,
      nodes: []
    },
    {
      id: 'workflow-2',
      name: 'Email Automation',
      description: "Automated email responses",
      active: true,
      isArchived: false,
      createdAt: "2024-10-20T16:45:30.000Z",
      updatedAt: "2025-12-27T10:15:45.089Z",
      triggerCount: 12,
      nodeCount: 8,
      nodes: []
    },
    {
      id: 'workflow-3',
      name: 'Report Generator',
      description: "Generate weekly reports",
      active: true,
      isArchived: false,
      createdAt: "2024-09-05T08:00:00.000Z",
      updatedAt: "2025-12-29T11:15:24.089Z",
      triggerCount: 45,
      nodeCount: 12,
      nodes: []
    },
    {
      id: 'workflow-4',
      name: 'Slack Notifier',
      description: "Send notifications to Slack",
      active: false,
      isArchived: false,
      createdAt: "2024-12-01T13:20:00.000Z",
      updatedAt: "2025-12-26T18:45:30.089Z",
      triggerCount: 3,
      nodeCount: 4,
      nodes: []
    }
  ];

  searchTerm: string = '';
  activeWorkflowId: string = '';
  workflowsCollapsed: boolean = false;
  activeCollapsed: boolean = true;

  ngOnInit(): void {
    // Set first workflow as active by default if workflows exist
    const workflows = this.getWorkflows();
    if (workflows.length > 0) {
      this.activeWorkflowId = workflows[0].id;
    }
  }

  get allWorkflows(): Workflow[] {
    return this.workflowsData.filter(w => !w.isArchived);
  }

  get hasWorkflows(): boolean {
    return this.allWorkflows.length > 0;
  }

  getWorkflows(): Workflow[] {
    return this.workflowsData.filter(w => !w.active && !w.isArchived);
  }

  getActiveWorkflows(): Workflow[] {
    return this.workflowsData.filter(w => w.active && !w.isArchived);
  }

  getFilteredWorkflows(): Workflow[] {
    const workflows = this.getWorkflows();
    if (!this.searchTerm) {
      return workflows;
    }
    const term = this.searchTerm.toLowerCase();
    return workflows.filter(w => w.name.toLowerCase().includes(term));
  }

  formatDate(isoString: string): string {
    const date = new Date(isoString);
    const now = new Date();
    const diffMs = now.getTime() - date.getTime();
    const diffMins = Math.floor(diffMs / 60000);
    const diffHours = Math.floor(diffMs / 3600000);
    const diffDays = Math.floor(diffMs / 86400000);

    // If less than 1 minute ago
    if (diffMins < 1) {
      return 'Just now';
    }
    // If less than 1 hour ago
    if (diffMins < 60) {
      return `${diffMins} min${diffMins > 1 ? 's' : ''} ago`;
    }
    // If less than 24 hours ago
    if (diffHours < 24) {
      return `${diffHours} hour${diffHours > 1 ? 's' : ''} ago`;
    }
    // If less than 7 days ago
    if (diffDays < 7) {
      return `${diffDays} day${diffDays > 1 ? 's' : ''} ago`;
    }

    // Otherwise show full date
    const options: Intl.DateTimeFormatOptions = {
      month: 'short',
      day: 'numeric',
      year: date.getFullYear() !== now.getFullYear() ? 'numeric' : undefined,
      hour: '2-digit',
      minute: '2-digit'
    };
    return date.toLocaleDateString('en-US', options);
  }

  toggleSection(section: 'workflows' | 'active'): void {
    if (section === 'workflows') {
      this.workflowsCollapsed = !this.workflowsCollapsed;
    } else {
      this.activeCollapsed = !this.activeCollapsed;
    }
  }

  createWorkflow(): void {
    alert('Create New Workflow\n\nThis will open the workflow creation interface.');
    // In production: this.router.navigate(['/workflow/new']);
  }

  importWorkflow(): void {
    alert('Import Workflow\n\nThis will open the workflow import dialog.');
    // In production: trigger file upload dialog or redirect to import page
  }

  refreshWorkflows(): void {
    alert('Refreshing Workflows\n\nThis will reload the workflow list from n8n.');
    // In production: fetch updated workflow list from API
  }

  runWorkflow(workflowId: string, event: Event): void {
    event.stopPropagation();
    console.log(`Running workflow: ${workflowId}`);
    alert(`Executing workflow: ${workflowId}\n\nRedirecting to n8n...`);
    // In production: window.open(`https://your-n8n-instance.com/workflow/${workflowId}/execute`, '_blank');
  }

  shareWorkflow(workflowId: string, event: Event): void {
    event.stopPropagation();
    console.log(`Sharing workflow: ${workflowId}`);
    alert(`Share Workflow: ${workflowId}\n\nThis will open the share dialog or copy share link.`);
    // In production: open share modal or copy link to clipboard
  }

  executeWorkflow(workflowId: string): void {
    this.activeWorkflowId = workflowId;
    console.log(`Executing workflow: ${workflowId}`);
    alert(`Executing workflow: ${workflowId}\n\nIn production, this will redirect to n8n workflow execution.`);
    // In production: window.open(`https://your-n8n-instance.com/workflow/${workflowId}`, '_blank');
  }
}















