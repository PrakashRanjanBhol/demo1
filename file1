/* Compact Header */
.compact-header {
    padding: 16px 24px;
    border-bottom: 1px solid var(--bitbucket-file-comparator-border-primary);
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--bitbucket-file-comparator-bg-primary);
}

/* Modern Toggle Switch */
.view-toggle-switch {
    position: relative;
    display: inline-block;
}

.toggle-input {
    display: none;
}

.toggle-label {
    display: block;
    position: relative;
    width: 240px;
    height: 48px;
    background: var(--bitbucket-file-comparator-bg-tertiary);
    border-radius: 24px;
    cursor: pointer;
    border: 2px solid var(--bitbucket-file-comparator-border-primary);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px var(--bitbucket-file-comparator-comment-shadow);
}

.toggle-label:hover {
    border-color: var(--bitbucket-file-comparator-accent-primary);
    box-shadow: 0 4px 12px rgba(0, 82, 204, 0.15);
}

.toggle-slider {
    position: relative;
    display: flex;
    width: 100%;
    height: 100%;
    border-radius: 22px;
    overflow: hidden;
}

.toggle-slider::before {
    content: '';
    position: absolute;
    width: 50%;
    height: 100%;
    background: linear-gradient(135deg, var(--bitbucket-file-comparator-accent-primary) 0%, var(--bitbucket-file-comparator-accent-secondary) 100%);
    border-radius: 20px;
    left: 0;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 82, 204, 0.3);
    z-index: 1;
}

.toggle-input:checked + .toggle-label .toggle-slider::before {
    transform: translateX(100%);
}

.toggle-option {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.3px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    z-index: 2;
    color: var(--bitbucket-file-comparator-text-secondary);
}

.toggle-input:not(:checked) + .toggle-label .toggle-option.unified,
.toggle-input:checked + .toggle-label .toggle-option.split {
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

/* Ripple effect on click */
.toggle-label:active {
    transform: scale(0.98);
}

/* Focus state for accessibility */
.toggle-input:focus + .toggle-label {
    outline: 2px solid var(--bitbucket-file-comparator-accent-primary);
    outline-offset: 2px;
}
