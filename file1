<div class="chip-container">
  <div
    class="chip animated-chip"
    *ngFor="let chip of chips; let i = index"
    [ngClass]="'chip-' + i"
    [style.animationDelay]="i * 100 + 'ms'"
  >
    {{ chip }}
  </div>
</div>






.chip-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  padding: 1rem;
}

/* Base styling */
.chip {
  color: #fff;
  padding: 6px 18px;
  border-radius: 22px;
  font-size: 14px;
  cursor: pointer;
  border: 1px solid #444;
  box-shadow: 2px 2px 6px #1a1a1a, -2px -2px 6px #3a3a3a;
  user-select: none;
  transition: all 0.3s ease;
}

/* Unique gradients per chip */
.chip-0 {
  background: linear-gradient(145deg, #0ea5e9, #0284c7); /* React - Blue/Cyan */
}
.chip-1 {
  background: linear-gradient(145deg, #f97316, #ea580c); /* Angular - Orange */
}
.chip-2 {
  background: linear-gradient(145deg, #10b981, #059669); /* Vue - Green */
}
.chip-3 {
  background: linear-gradient(145deg, #f59e0b, #d97706); /* Svelte - Amber */
}
.chip-4 {
  background: linear-gradient(145deg, #8b5cf6, #7c3aed); /* Solid - Purple */
}

/* Hover effect (shared) */
.chip:hover {
  background: linear-gradient(145deg, #4f46e5, #9333ea);
  transform: scale(1.05);
  box-shadow: 0 0 12px rgba(147, 51, 234, 0.5);
}

/* Load-in animation */
.animated-chip {
  opacity: 0;
  transform: translateY(10px);
  animation: fadeInUp 0.4s ease forwards;
}

/* Keyframes */
@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
