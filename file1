<!-- Add this right before the closing </div> of copy-button-wrapper -->
<div class="copy-dropdown-backdrop" 
     *ngIf="showCopyFormatDropdown[item.id]"
     (click)="closeCopyFormatDropdowns()">
</div>






<div class="copy-button-wrapper" *ngIf="item.type === 'questions'">
    <button class="result-action-icon-btn" 
