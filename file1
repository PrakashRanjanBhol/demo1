/**
 * Get only successfully uploaded files with valid IDs
 */
getUploadedFilesOnly(): FileWithStatus[] {
  return this.uploadedFilesWithStatus.filter(
    f => f.status === 'uploaded' && f.uploadedFileId
  );
}





<!-- CHANGE FROM: -->
*ngFor="let fileWithStatus of uploadedFilesWithStatus"

<!-- TO: -->
*ngFor="let fileWithStatus of getUploadedFilesOnly()"



onNext(): void {
  const uploadedFiles = this.getUploadedFilesOnly();
  
  if (uploadedFiles.length === 0) {
    alert('No files uploaded successfully. Please try again.');
    return;
  }
  
  this.currentStep = 2;
  
  // Auto-select first uploaded file
  if (!this.selectedUploadFile || !uploadedFiles.find(f => f.file === this.selectedUploadFile)) {
    this.selectedUploadFile = uploadedFiles[0].file;
  }
}
