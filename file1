useEffect(() => {
    if (language && modelOptionsByLanguage[language]) {
        setModelOptions(modelOptionsByLanguage[language]);

        // âœ… If model is already defined, but not in new modelOptions, clear it
        if (!modelOptionsByLanguage[language].includes(model)) {
            setModel(null);
        }
    } else {
        setModelOptions([]);
        setModel(null);
    }
}, [language]);
