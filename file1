 <div class="node-content"
           (click)="node.type === 'folder' && toggleFolder(node)"
           [title]="node.name"
           (contextmenu)="node.type === 'file' && onRightClickFile($event, node)">


<!-- Add OverlayPanel -->
<p-overlayPanel #fileMenu [dismissable]="true">
  <div class="overlay-menu">
    <button pButton type="button" label="Open" (click)="onOpenFile(selectedFile)"></button>
    <button pButton type="button" label="Delete" (click)="onDeleteFile(selectedFile)"></button>
  </div>
</p-overlayPanel>



 @ViewChild('fileMenu') fileMenu!: OverlayPanel;
  selectedFile: any = null;

  // ...your existing treeData, methods, etc.

  onRightClickFile(event: MouseEvent, file: any) {
    event.preventDefault(); // prevent default context menu
    this.selectedFile = file;
    this.fileMenu.show(event); // show overlay
  }

  onOpenFile(file: any) {
    console.log('Open file:', file.name);
    this.fileMenu.hide();
  }

  onDeleteFile(file: any) {
    console.log('Delete file:', file.name);
    this.fileMenu.hide();
  }
