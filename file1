// app.component.ts - Updated with SSO authentication
import { Component, OnInit } from '@angular/core';
import { Router } from '@angular/router';
import { AuthService } from './services/auth.service';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent implements OnInit {
  currentTheme: 'light' | 'dark' = 'light';
  appVersion: string = '1.0.0';
  currentYear: number = new Date().getFullYear();
  isSidebarCollapsed: boolean = true; // Default collapsed
  
  // SSO Authentication properties
  isAuthenticated: boolean = false;
  currentUser: any = null;

  constructor(
    private authService: AuthService,
    private router: Router
  ) {}

  ngOnInit(): void {
    // Initialize SSO authentication check
    this.checkAuthentication();

    // Load saved theme from localStorage
    const savedTheme = localStorage.getItem('theme') as 'light' | 'dark';
    if (savedTheme) {
      this.currentTheme = savedTheme;
      this.applyTheme(savedTheme);
    }

    // Load sidebar state from localStorage
    const savedSidebarState = localStorage.getItem('sidebarCollapsed');
    if (savedSidebarState !== null) {
      this.isSidebarCollapsed = savedSidebarState === 'true';
    }

    // Subscribe to current user changes
    this.authService.currentUser.subscribe(user => {
      this.currentUser = user;
      this.isAuthenticated = user !== null;
    });
  }

  // Check authentication status on app load
  private checkAuthentication(): void {
    this.authService.checkAuthStatus().subscribe({
      next: (response) => {
        // User is authenticated
        console.log('User authenticated:', response.user);
        this.isAuthenticated = true;
        this.currentUser = response.user;
      },
      error: (error) => {
        // Authentication failed, redirect to SSO connect
        console.log('User not authenticated, redirecting to SSO connect');
        this.isAuthenticated = false;
        this.currentUser = null;
        this.router.navigate(['/sso-connect']);
      }
    });
  }

  // Logout user
  logout(): void {
    this.authService.logout().subscribe({
      next: () => {
        console.log('User logged out successfully');
        this.isAuthenticated = false;
        this.currentUser = null;
      },
      error: (error) => {
        console.error('Logout error:', error);
      }
    });
  }

  toggleSidebar(): void {
    this.isSidebarCollapsed = !this.isSidebarCollapsed;
    localStorage.setItem('sidebarCollapsed', this.isSidebarCollapsed.toString());
  }

  onToggleTheme(): void {
    this.currentTheme = this.currentTheme === 'light' ? 'dark' : 'light';
    this.applyTheme(this.currentTheme);
    localStorage.setItem('theme', this.currentTheme);
  }

  private applyTheme(theme: 'light' | 'dark'): void {
    document.body.setAttribute('data-theme', theme);
  }

  // Get user initials for avatar
  getUserInitials(): string {
    if (!this.currentUser) return 'JD';
    
    const name = this.currentUser.name || this.currentUser.email || 'User';
    const parts = name.split(' ');
    
    if (parts.length >= 2) {
      return (parts[0][0] + parts[1][0]).toUpperCase();
    }
    return name.substring(0, 2).toUpperCase();
  }

  // Get user display name
  getUserName(): string {
    if (!this.currentUser) return 'John Doe';
    return this.currentUser.name || this.currentUser.email || 'User';
  }
}













