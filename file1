/* Sidebar */
.sidebar {
  position: fixed;
  top: 60px;
  bottom: 34px;
  right: 0;
  width: 320px;
  height: auto;
  background-color: var(--agentic-ai-share-sidebar-bg);
  border: 1px solid var(--agentic-ai-share-sidebar-border);
  z-index: 1000;
  overflow-y: auto;
  transform: translateX(-320px);
  transition: transform 300ms ease-out;
}

@media (min-width: 1801px) {
  .sidebar {
    transform: translateX(-400px);
  }
}








import { Component, Input } from '@angular/core';

@Component({
  selector: 'app-sidebar',
  templateUrl: './sidebar.component.html',
  styleUrls: ['./sidebar.component.css']
})
export class SidebarComponent {
  @Input() isSidebarOpen = false;

  toggleSidebar(): void {
    this.isSidebarOpen = false;
  }
}










<!-- Sidebar -->
<div class="sidebar" *ngIf="isSidebarOpen">
  <div class="sidebar-header">
    <h2>
      <svg class="share-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
