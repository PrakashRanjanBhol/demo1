import { trigger, transition, style, animate } from '@angular/animations';

@Component({
  animations: [
    trigger('fadeInOut', [
      transition(':enter', [
        style({ opacity: 0, transform: 'scale(0.9) translateY(-5px)' }),
        animate('300ms ease-out', style({ opacity: 1, transform: 'scale(1) translateY(0)' }))
      ]),
      transition(':leave', [
        animate('250ms ease-in', style({ opacity: 0, transform: 'scale(0.9) translateY(-5px)' }))
      ])
    ])
  ]
})









<div class="bitbucket-expand" 
     *ngIf="showIcon" 
     @fadeInOut
     (click)="handleClick()">
  <!-- icon content -->
</div>
