loadChartData(view: 'daily' | 'weekly' | 'monthly' | 'yearly') {
  this.activeView = view;
  const response = this.dummyApiResponse[view];

  const legendKeys = Object.keys(response.data); // ✅ dynamic from API

  this.chartOption = {
    backgroundColor: 'transparent',
    tooltip: {
      trigger: 'axis',
      backgroundColor: '#1e1e1e',
      textStyle: { color: '#fff' },
      borderColor: '#333',
    },
    legend: {
      data: legendKeys, // ✅ dynamic legends
      bottom: 0,        // ✅ place legend below graph
      textStyle: { color: '#fff' },
    },
    grid: {
      left: '3%',
      right: '4%',
      bottom: '15%',   // ✅ extra space for legend
      containLabel: true,
    },
    xAxis: {
      type: 'category',
      data: response.labels,
      axisLine: { lineStyle: { color: '#888' } },
      axisLabel: { color: '#fff' },
      axisTick: { lineStyle: { color: '#888' } },
    },
    yAxis: {
      type: 'value',
      axisLine: { lineStyle: { color: '#888' } },
      axisLabel: { color: '#fff' },
      splitLine: { lineStyle: { color: '#444' } },
    },
    series: legendKeys.map((lang) => ({
      name: lang,
      type: 'line',
      smooth: true,
      symbol: 'circle',
      symbolSize: 6,
      lineStyle: { width: 2 },
      data: response.data[lang as keyof typeof response.data],
    })),
  };
}
