export class WorkflowSidebarComponent implements OnInit {
  // ... existing properties ...
  
  isRefreshing: boolean = false; // Add this property

  // ... existing methods ...

  refreshWorkflows(): void {
    this.isRefreshing = true;
    
    // Simulate API call with 10 second delay
    setTimeout(() => {
      // In production: fetch updated workflow list from API
      // this.loadWorkflows();
      // this.loadActiveWorkflows();
      
      this.isRefreshing = false;
      console.log('Workflows refreshed successfully');
    }, 10000);
  }
}













