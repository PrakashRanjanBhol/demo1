import React, { useEffect, useState } from 'react';
import { ProgressSpinner } from 'primereact/progressspinner';
import { Card } from 'primereact/card';
import styles from './FileListPanel.module.css';

const FileListPanel = () => {
  const [files, setFiles] = useState([]);
  const [selectedFile, setSelectedFile] = useState(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    // Simulate API call
    setTimeout(() => {
      const apiResponse = [
        { file_name: 'abc.pdf', file_path: '/abc/def/abc.pdf' },
        { file_name: 'document.docx', file_path: '/files/document.docx' },
        { file_name: 'report.xlsx', file_path: '/reports/report.xlsx' },
      ];
      setFiles(apiResponse);
      setLoading(false);
    }, 2000);
  }, []);

  const handleSelect = (file) => {
    setSelectedFile(file);
  };

  return (
    <div className={styles.rightPanel}>
      <h3 className={styles.panelHeader}>Documents</h3>

      {loading ? (
        <div className={styles.loaderWrapper}>
          <ProgressSpinner style={{ width: '50px', height: '50px' }} strokeWidth="4" />
          <p className={styles.loadingText}>Loading documents...</p>
        </div>
      ) : (
        <div className={styles.fileList}>
          {files.map((file) => (
            <Card
              key={file.file_path}
              className={`${styles.fileCard} ${
                selectedFile?.file_path === file.file_path ? styles.selected : ''
              }`}
              onClick={() => handleSelect(file)}
            >
              <p className={styles.fileName}>{file.file_name}</p>
            </Card>
          ))}
        </div>
      )}
    </div>
  );
};

export default FileListPanel;











.rightPanel {
  width: 300px;
  padding: 1rem;
  background-color: #1e1e2f;
  color: #fff;
  border-left: 1px solid #2c2c3f;
  height: 100vh;
  overflow-y: auto;
  animation: fadeIn 0.5s ease-in;
}

.panelHeader {
  margin-bottom: 1rem;
  font-size: 1.2rem;
  font-weight: bold;
  border-bottom: 1px solid #3a3a50;
  padding-bottom: 0.5rem;
}

.loaderWrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 3rem;
  animation: fadeIn 0.5s ease-in;
}

.loadingText {
  margin-top: 1rem;
  font-size: 0.95rem;
  color: #ccc;
}

.fileList {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  animation: slideUpFade 0.5s ease-in;
}

.fileCard {
  background-color: #292940;
  border: 1px solid transparent;
  border-radius: 8px;
  padding: 0.75rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.fileCard:hover {
  background-color: #353555;
}

.selected {
  border: 1px solid #4fc3f7;
  background-color: #2a3f55;
}

.fileName {
  margin: 0;
  color: #e0e0e0;
  font-size: 0.95rem;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUpFade {
  from {
    opacity: 0;
    transform: translateY(8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}








import FileListPanel from './components/FileListPanel';

function App() {
  return (
    <div style={{ display: 'flex', justifyContent: 'flex-end' }}>
      <FileListPanel />
    </div>
  );
}
