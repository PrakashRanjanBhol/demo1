import React, { useState } from 'react';
import { Dialog } from 'primereact/dialog';
import styles from './ChatImageStrip.module.css';

const ImageGalleryPreview = ({ images = [] }) => {
  const [showModal, setShowModal] = useState(false);
  const [selectedImage, setSelectedImage] = useState(null);

  const handleImageClick = (img) => {
    setSelectedImage(img);
  };

  const closeSelectedImage = () => {
    setSelectedImage(null);
  };

  return (
    <>
      <Dialog
        header="All Images"
        visible={showModal}
        onHide={() => setShowModal(false)}
        className={styles.modal}
        style={{ background: '#181818', width: '60vw' }}
      >
        <div className={styles.imageGrid}>
          {images.map((img, idx) => (
            <img
              key={idx}
              src={`data:image/*;base64,${img.base64Image}`}
              alt={img.fileName}
              className={styles.modalImage}
              onClick={() => handleImageClick(img)}
            />
          ))}
        </div>
      </Dialog>

      <Dialog
        header={selectedImage?.fileName || 'Preview'}
        visible={!!selectedImage}
        onHide={closeSelectedImage}
        style={{ background: '#181818', width: 'auto' }}
        className={styles.previewDialog}
      >
        <img
          src={`data:image/*;base64,${selectedImage?.base64Image}`}
          alt={selectedImage?.fileName}
          className={styles.fullImage}
        />
      </Dialog>

      <button className={styles.moreButton} onClick={() => setShowModal(true)}>
        +{images.length} More
      </button>
    </>
  );
};

export default ImageGalleryPreview;





.imageGrid {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  justify-content: center;
  padding: 10px;
}

.modalImage {
  width: 120px;
  height: 120px;
  object-fit: contain;
  border-radius: 6px;
  background-color: #1f1f1f;
  cursor: pointer;
  transition: transform 0.2s ease-in-out;
}

.modalImage:hover {
  transform: scale(1.05);
}

.fullImage {
  max-width: 90vw;
  max-height: 80vh;
  object-fit: contain;
  display: block;
  margin: auto;
}

.moreButton {
  margin-top: 12px;
  background: linear-gradient(45deg, #007bff, #00c6ff);
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 20px;
  cursor: pointer;
  font-weight: 500;
}

.moreButton:hover {
  background: linear-gradient(45deg, #005ecb, #00b5e0);
}
