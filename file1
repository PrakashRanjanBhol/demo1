import { Component } from '@angular/core';
import { FunctionEditorComponent, FunctionData } from './components/function-editor/function-editor.component';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [FunctionEditorComponent],
  template: `
    <div class="app-container">
      <app-function-editor 
        [class.dark-mode]="isDarkMode" 
        [function]="currentFunction"
        (createNewFunction)="onCreateNew()">
      </app-function-editor>
    </div>
  `,
  styles: [`
    .app-container {
      width: 100%;
      height: 100vh;
      display: flex;
    }

    app-function-editor {
      flex: 1;
    }
  `]
})
export class AppComponent {
  isDarkMode = false;
  currentFunction: FunctionData | null = null;
  
  // Example existing function for edit mode
  existingFunction: FunctionData = {
    function_name: 'calculateSum',
    function_code: 'function calculateSum(a, b) {\n  return a + b;\n}'
  };

  constructor() {
    // Start with edit mode
    this.currentFunction = this.existingFunction;
  }

  onCreateNew(): void {
    // Switch to create mode
    this.currentFunction = null;
  }

  toggleDarkMode(): void {
    this.isDarkMode = !this.isDarkMode;
  }
}
