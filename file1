 private updateFilteredRepositories(): void {
    if (!this.currentProject) {
      this.filteredRepositoriesList = [];
      return;
    }
    
    const repos = this.repositoriesByProject[this.currentProject.project_key] || [];
    
    let reposToFilter = repos;
    
    if (this.repoSearchText.trim()) {
      const searchLower = this.repoSearchText.toLowerCase();
      reposToFilter = repos.filter(repo => 
        repo.repo_name.toLowerCase().includes(searchLower) ||
        repo.repo_url.toLowerCase().includes(searchLower)
      );
    }
    
    // âœ… Add isFavorite flag to each repo
    this.filteredRepositoriesList = reposToFilter.map(repo => ({
      ...repo,
      isFavorite: this.favoriteRepoKeysSet.has(repo.repo_key)
    }));
  }
  
  // Update current favorite repos list
  private updateCurrentFavoriteRepos(): void {
    if (!this.currentFavoriteProject?.project_key) {
      this.currentFavoriteReposList = [];
      return;
    }
    
    const repos = this.favoriteRepositories[this.currentFavoriteProject.project_key] || [];
    
    // All repos in favorites view have isFavorite = true
    this.currentFavoriteReposList = repos.map(repo => ({
      ...repo,
      isFavorite: true
    }));
  }
  
