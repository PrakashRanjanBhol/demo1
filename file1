import { Component, OnInit } from '@angular/core';
import { CommonModule } from '@angular/common';
import { marked } from 'marked';
import { DomSanitizer, SafeHtml } from '@angular/platform-browser';

// ... existing interface ...

@Component({
  // ... existing config ...
})
export class TicketDetailsComponent implements OnInit {
  // ... existing properties ...

  parsedDescription: SafeHtml = '';

  constructor(private sanitizer: DomSanitizer) {}

  ngOnInit(): void {
    this.isDraft = this.ticketData ? !this.ticketData.jira_ticket : false;
    if (this.ticketData?.description) {
      this.parseMarkdown(this.ticketData.description);
    }
  }

  parseMarkdown(markdown: string): void {
    const html = marked.parse(markdown);
    this.parsedDescription = this.sanitizer.sanitize(1, html) || '';
  }

  // ... existing methods ...
}










<div class="description-content" [innerHTML]="parsedDescription"></div>









