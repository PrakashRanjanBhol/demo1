(contextmenu)="currentSection === 'fav' ? showSuggestedQueries($event, proj) : null"



<p-overlayPanel #op1 [dismissable]="true">
    <div *ngIf="queryList.length">
        <div class="query-title">Suggested Queries:</div>
        <ul>
            <li *ngFor="let query of queryList">
                <button class="query-button">{{ query }}</button>
            </li>
        </ul>
    </div>
</p-overlayPanel>

@ViewChild('op1') overlayPanel1!: OverlayPanel;

  selectedProject: any;

  // Triggered on right-click
  showSuggestedQueries(event: MouseEvent, project: any) {
    event.preventDefault(); // prevent default browser context menu
    this.selectedProject = project;

    console.log(project);
    

    // You can either fetch queries dynamically or hardcode some
    this.queryList = [
      `Show tickets assigned to me in ${project.name}`,
      `List open bugs in ${project.name}`,
      `What is the progress of ${project.name}?`,
      `Who are the top contributors in ${project.name}?`
    ];

    this.overlayPanel.toggle(event);
  }
