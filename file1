    <script>
        function toggleDocumentation() {
            const createBtn = document.getElementById('createBtn');
            const viewBtn = document.getElementById('viewBtn');
            const rootFolder = document.getElementById('rootFolder');
            
            if (createBtn.classList.contains('hidden')) {
                // Show create, hide view
                createBtn.classList.remove('hidden');
                viewBtn.classList.add('hidden');
                rootFolder.classList.remove('has-documentation');
            } else {
                // Show view, hide create
                createBtn.classList.add('hidden');
                viewBtn.classList.remove('hidden');
                rootFolder.classList.add('has-documentation');
            }
        }

        function toggleTheme() {
            document.documentElement.classList.toggle('dark-mode');
        }
    </script>
