<!-- ðŸ” Search (Only for All Projects) -->
<div class="project-search" *ngIf="currentSection === 'all'">
    <i class="pi pi-search search-icon"></i>
    <input
        type="text"
        pInputText
        placeholder="Search projects..."
        [(ngModel)]="projectSearchText"
    />
</div>


<div *ngFor="let proj of (currentSection === 'all' ? allProjects : favouriteProjects)"


<div *ngFor="let proj of (currentSection === 'all' ? filteredAllProjects : favouriteProjects)"



projectSearchText: string = '';

get filteredAllProjects() {
  if (!this.projectSearchText) {
    return this.allProjects;
  }

  const search = this.projectSearchText.toLowerCase();
  return this.allProjects.filter(p =>
    p.name.toLowerCase().includes(search) ||
    String(p.id).includes(search)
  );
}


.project-search {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 12px;
  margin-bottom: 8px;
}

.search-icon {
  color: #888;
}

.project-search input {
  width: 100%;
}
