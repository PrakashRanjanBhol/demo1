}

.tab-button:hover {
  color: #eeeeee;
  background: rgba(0, 177, 203, 0.05);
}

.tab-button.active {
  color: #00b1cb;
}

.tab-highlight {
  position: absolute;
  top: 4px;
  left: 4px;
  width: calc(50% - 8px);
  height: calc(100% - 8px);
  background: linear-gradient(135deg, #005c99, #00b1cb);
  border-radius: 8px;
  z-index: 1;
  transition: transform 0.4s ease;
  box-shadow: 0 0 6px rgba(0, 177, 203, 0.3);
}





<!-- Tab Switcher -->
    <div class="project-tabs">
        <div class="tab-button" [class.active]="currentSection === 'all'" (click)="currentSection = 'all'">
            <i class="pi pi-folder" style="margin-right: 6px;"></i> All Projects
        </div>
        <div class="tab-button" [class.active]="currentSection === 'fav'" (click)="currentSection = 'fav'">
            <i class="pi pi-star-fill" style="margin-right: 6px;"></i> Favourite Projects
        </div>
        <div class="tab-highlight"
            [ngStyle]="{ transform: currentSection === 'fav' ? 'translateX(100%)' : 'translateX(0%)' }">
        </div>
    </div>




animations: [
    trigger('listAnimation', [
      transition(':enter', []), // do nothing for initial load
      transition('* => *', [
        query(
          ':enter',
          [
            style({ opacity: 0, transform: 'translateY(10px)' }),
            stagger(100, [
              animate(
                '300ms ease-out',
                style({ opacity: 1, transform: 'translateY(0)' })
              ),
            ]),
          ],
          { optional: true }
        ),
      ]),
    ]),
  ]



import {
  trigger,
  transition,
  style,
  animate,
  query,
  stagger,
} from '@angular/animations';
