// ONLY SHOWING THE MODIFIED PART

export class WorkspaceComponent {
  // ... existing properties ...

  selectedItemType: string = '';  // NEW - Track selected item type

  // ... existing methods ...

  // MODIFIED METHOD - Track item type when opening detail
  openDetail(item: ResultItem): void {
    this.selectedItemName = item.title;
    this.selectedItemDate = this.selectedHistoryItem?.displayDate || '';
    this.selectedResultItemId = item.id;
    this.selectedItemType = item.type;  // NEW - Store item type

    // For keywords, render chips in detail view
    if (item.type === 'keywords') {
      const htmlContent = this.renderKeywordsAsHtml(item);
      this.selectedItemContent = this.sanitizer.bypassSecurityTrustHtml(htmlContent);
    } else {
      // For other types, convert markdown to HTML
      const htmlContent: any = marked(item.content);
      this.selectedItemContent = this.sanitizer.bypassSecurityTrustHtml(htmlContent);
    }

    this.isDetailOpen = true;
  }

  // NEW METHOD - Render keywords as HTML chips
  private renderKeywordsAsHtml(item: ResultItem): string {
    const keywords = this.getKeywordsArray(item);
    
    if (keywords.length === 0) {
      return '<p style="color: var(--text-color); opacity: 0.5; font-style: italic;">No keywords available</p>';
    }

    let html = '<div class="detail-keywords-container">';
    
    keywords.forEach((keyword, index) => {
      const background = this.getChipBackground(index);
      const borderColor = this.getChipBorderColor(index);
      
      html += `
        <div class="detail-keyword-chip" 
             style="background: ${background}; border-color: ${borderColor};">
          <span class="detail-chip-text">${keyword}</span>
        </div>
      `;
    });
    
    html += '</div>';
    
    return html;
  }

  // ... rest of existing methods remain the same ...
}













/* ADD THESE STYLES TO workspace.component.css */

/* Detail View Keyword Chips Container */
.detail-keywords-container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    padding: 20px 0;
}

/* Detail View Keyword Chip */
.detail-keyword-chip {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 18px;
    border-radius: 24px;
    border: 1.5px solid;
    font-size: 14px;
