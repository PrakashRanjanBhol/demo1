// file-upload.component.ts
import { Component, ViewChild, ElementRef, AfterViewInit } from '@angular/core';
import { CommonModule } from '@angular/common';

@Component({
  selector: 'app-file-upload',
  standalone: true,
  imports: [CommonModule],
  template: `
    <div class="upload-container">
      <!-- Hidden file input -->
      <input
        #fileInput
        type="file"
        (change)="onFileSelected($event)"
        accept="image/*,video/*,audio/*,.pdf,.doc,.docx,.txt"
        style="display: none"
        multiple
      />
      
      <!-- Textarea with files display -->
      <div class="textarea-wrapper">
        <div #fileContainer class="file-textarea" (click)="fileInput.click()">
          <span *ngFor="let file of visibleFiles; let i = index" class="file-chip">
            {{ file.name }}
            <span class="remove-btn" (click)="removeFile(i, $event)">Ã—</span>
          </span>
          <span *ngIf="showShowAll" class="show-all" (click)="toggleShowAll($event)">
            {{ showingAll ? 'Show Less' : 'Show All (' + hiddenFilesCount + ')' }}
          </span>
        </div>
      </div>
    </div>
  `,
  styles: [`
    .upload-container {
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    .textarea-wrapper {
      width: 100%;
    }

    .file-textarea {
      min-height: 48px;
      max-height: 48px;
      overflow: hidden;
      border: 1px solid #ccc;
      border-radius: 4px;
      padding: 8px;
      cursor: pointer;
      background-color: #fff;
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      align-items: flex-start;
      transition: max-height 0.3s ease;
    }

    .file-textarea.expanded {
      max-height: none;
    }

    .file-chip {
      display: inline-flex;
      align-items: center;
      background-color: #e3f2fd;
      padding: 4px 8px;
      border-radius: 16px;
      font-size: 13px;
      white-space: nowrap;
      max-width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .remove-btn {
      margin-left: 6px;
      cursor: pointer;
      font-weight: bold;
      color: #666;
      font-size: 18px;
      line-height: 1;
    }

    .remove-btn:hover {
      color: #333;
    }

    .show-all {
      display: inline-flex;
      align-items: center;
      background-color: #f5f5f5;
      padding: 4px 12px;
      border-radius: 16px;
      font-size: 13px;
      color: #007bff;
      cursor: pointer;
      font-weight: 500;
    }

    .show-all:hover {
      background-color: #e0e0e0;
    }
  `]
})
export class FileUploadComponent implements AfterViewInit {
  @ViewChild('fileContainer') fileContainer!: ElementRef;
  
  selectedFiles: File[] = [];
  visibleFiles: File[] = [];
  showShowAll = false;
  showingAll = false;
  hiddenFilesCount = 0;

  ngAfterViewInit() {
    this.updateVisibleFiles();
  }

  onFileSelected(event: Event): void {
    const input = event.target as HTMLInputElement;
    
    if (input.files && input.files.length > 0) {
      this.selectedFiles = [...this.selectedFiles, ...Array.from(input.files)];
      console.log('Selected files:', this.selectedFiles);
      
      setTimeout(() => this.updateVisibleFiles(), 0);
    }
  }

  updateVisibleFiles(): void {
    if (this.showingAll) {
      this.visibleFiles = this.selectedFiles;
      const container = this.fileContainer.nativeElement;
      container.classList.add('expanded');
      return;
    }

    const container = this.fileContainer.nativeElement;
    container.classList.remove('expanded');
    
    // Show files one by one until height exceeds 48px
    this.visibleFiles = [];
    const maxHeight = 48;
    
    for (let i = 0; i < this.selectedFiles.length; i++) {
      this.visibleFiles = this.selectedFiles.slice(0, i + 1);
      
      setTimeout(() => {
        if (container.scrollHeight > maxHeight) {
          this.visibleFiles = this.selectedFiles.slice(0, i);
          this.hiddenFilesCount = this.selectedFiles.length - i;
          this.showShowAll = this.hiddenFilesCount > 0;
        } else if (i === this.selectedFiles.length - 1) {
          this.showShowAll = false;
        }
      }, 0);
    }
  }

  removeFile(index: number, event: Event): void {
    event.stopPropagation();
    const actualIndex = this.selectedFiles.indexOf(this.visibleFiles[index]);
    this.selectedFiles.splice(actualIndex, 1);
    setTimeout(() => this.updateVisibleFiles(), 0);
  }

  toggleShowAll(event: Event): void {
    event.stopPropagation();
    this.showingAll = !this.showingAll;
    this.updateVisibleFiles();
  }

  formatFileSize(bytes: number): string {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
  }
}
