import React, { useState, useRef, useEffect } from 'react';
import styles from './SourceDropdown.module.css';

const SourceDropdown = ({ onSelect, options = [], defaultValue = '' }) => {
    const [visible, setVisible] = useState(false);
    const [selected, setSelected] = useState(defaultValue);
    const dropdownRef = useRef(null);

    // Utility to flatten options and children
    const flattenOptions = (opts) => {
        return opts.reduce((acc, opt) => {
            if (opt.children) {
                return acc.concat(opt.children);
            }
            return acc.concat(opt);
        }, []);
    };

    // Update selected when options or defaultValue changes
    useEffect(() => {
        const flat = flattenOptions(options);
        const found = flat.find((opt) => opt.value === defaultValue);
        if (found) {
            setSelected(defaultValue);
        } else {
            setSelected(null);
        }
    }, [options, defaultValue]);

    const handleSelect = (value) => {
        if (selected === value) {
            setVisible(false);
            return;
        }
        setSelected(value);
        setVisible(false);
        onSelect?.(value);
    };

    const handleClickOutside = (e) => {
        if (dropdownRef.current && !dropdownRef.current.contains(e.target)) {
            setVisible(false);
        }
    };

    useEffect(() => {
        document.addEventListener('mousedown', handleClickOutside);
        return () => document.removeEventListener('mousedown', handleClickOutside);
    }, []);

    return (
        <div className={styles.dropdownWrapper} ref={dropdownRef}>
            <label className={styles.label}>Source</label>
            <div className={styles.dropdown} onClick={() => setVisible(!visible)}>
                {selected || 'Select Source'}
                <span className={styles.arrow}>â–¾</span>
            </div>

            {visible && (
                <div className={styles.menu}>
                    {options.map((opt, i) => (
                        <div key={i}>
                            <div
                                className={styles.menuItem}
                                onClick={() => !opt.children && handleSelect(opt.value)}
                            >
                                {opt.label}
                            </div>
                            {opt.children && (
                                <div className={styles.subMenu}>
                                    {opt.children.map((child, j) => (
                                        <div
                                            key={j}
                                            className={styles.subMenuItem}
                                            onClick={() => handleSelect(child.value)}
                                        >
                                            {child.label}
                                        </div>
                                    ))}
                                </div>
                            )}
                        </div>
                    ))}
                </div>
            )}
        </div>
    );
};

export default SourceDropdown;
