// Add new interface for Function
interface Function {
  function_name: string;
  function_code: string;
}

// Update component class
export class WorkflowSidebarComponent implements OnInit {
  // ... existing properties ...

  // Replace functions array with new structure
  functions: Function[] = [
    {
      function_name: "test function",
      function_code: `class Test{
      constructor(){
      }
      test(){
      console.log("Hello")
      }
    }`
    },
    {
      function_name: "calculate tax",
      function_code: `function calculateTax(amount) {
      return amount * 0.18;
    }`
    },
    {
      function_name: "format date",
      function_code: `function formatDate(date) {
      return new Date(date).toLocaleDateString();
    }`
    }
  ];

  selectedFunctionName: string | null = null; // Add this property

  // ... existing properties ...

  getFilteredFunctions(): Function[] {
    if (!this.searchTerm) {
      return this.functions;
    }
    const term = this.searchTerm.toLowerCase();
    return this.functions.filter(f => f.function_name.toLowerCase().includes(term));
  }

  // Add method to select function
  selectFunction(functionName: string): void {
    if (this.selectedFunctionName === functionName) {
      this.selectedFunctionName = null; // Deselect if already selected
    } else {
      this.selectedFunctionName = functionName; // Select new function
    }
    console.log('Selected function:', this.selectedFunctionName);
  }

  // Add method to check if function is selected
  isFunctionSelected(functionName: string): boolean {
    return this.selectedFunctionName === functionName;
  }

  // Add method for view function
  viewFunction(functionName: string, event: Event): void {
    event.stopPropagation();
    const func = this.functions.find(f => f.function_name === functionName);
    console.log('View function:', functionName);
    console.log('Function code:', func?.function_code);
    // In production: open modal or side panel to view function code
  }

  // Add method for edit function
  editFunction(functionName: string, event: Event): void {
    event.stopPropagation();
    const func = this.functions.find(f => f.function_name === functionName);
    console.log('Edit function:', functionName);
    console.log('Function code:', func?.function_code);
    // In production: open editor modal to edit function code
  }

  // ... rest of existing methods ...
}











<!-- Functions Tab -->
<div class="workflow-section">
  <div class="section-header" (click)="toggleSection('functions')">
    <div class="section-header-left">
      <div class="section-toggle" [class.collapsed]="functionsCollapsed">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
          stroke-linejoin="round">
          <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
      </div>
      <div class="section-title">Functions</div>
      <div class="section-count">{{ functions.length }}</div>
    </div>
  </div>
  <div class="section-content" [class.collapsed]="functionsCollapsed">
    <div class="search-container">
      <input type="text" class="search-input" placeholder="Search functions..." [(ngModel)]="searchTerm">
    </div>

    <div>
      <div *ngFor="let func of getFilteredFunctions()" class="function-item"
        (click)="selectFunction(func.function_name)">
        <div class="function-checkbox">
          <input type="checkbox" [checked]="isFunctionSelected(func.function_name)"
            (click)="$event.stopPropagation()" (change)="selectFunction(func.function_name)">
        </div>
        <div class="function-info">
          <div class="function-name">{{ func.function_name }}</div>
        </div>
        <div class="function-actions">
          <button class="function-action-btn" (click)="viewFunction(func.function_name, $event)"
            title="View Function">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
          </button>
          <button class="function-action-btn" (click)="editFunction(func.function_name, $event)"
            title="Edit Function">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>














