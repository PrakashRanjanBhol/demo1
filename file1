trackByCopyOption(index: number, opt: any): string {
  return opt.format;
}

trackByDownloadOption(index: number, opt: any): string {
  return opt.format;
}


<!-- Copy options -->
<button class="option-card"
    *ngFor="let opt of getCopyOptions(item.type); let i = index; trackBy: trackByCopyOption"
    (click)="copyAs(item, opt.format)"
    [style.animation-delay]="(i * 0.05) + 's'">

<!-- Download options -->
<button class="option-card"
    *ngFor="let opt of getDownloadOptions(); let i = index; trackBy: trackByDownloadOption"
    (click)="downloadAs(item, opt.format)"
    [style.animation-delay]="(i * 0.05) + 's'">






/* Remove animation from option-card itself */
.option-card {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 7px 10px;
    background: var(--bg-color);
    border: 1px solid rgba(139, 92, 246, 0.15);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    width: 100%;
    min-width: 0;
    text-align: left;
    position: relative;
    overflow: hidden;
    /* NO animation property here */
}

/* Animation only fires when parent row transitions to expanded */
.action-options-row.expanded .option-card {
    animation: cardSlideIn 0.25s ease-out backwards;
}

.action-options-row.expanded .option-card:nth-child(1) { animation-delay: 0.03s; }
.action-options-row.expanded .option-card:nth-child(2) { animation-delay: 0.06s; }
.action-options-row.expanded .option-card:nth-child(3) { animation-delay: 0.09s; }
.action-options-row.expanded .option-card:nth-child(4) { animation-delay: 0.12s; }

