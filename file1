import { Component } from '@angular/core';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {
  selectedOption: string = 'General';

  options = ['General', 'Code RAG', 'Jira', 'Confluence', 'Reusable Components'];

  onSelect(option: string) {
    this.selectedOption = option;
    console.log('Selected:', option);
  }
}






<div class="multi-toggle-container">
  <div class="multi-switch">
    <div class="highlight" [style.transform]="'translateX(' + options.indexOf(selectedOption) * 100 + '%)'">
      {{ selectedOption }}
    </div>

    <ng-container *ngFor="let option of options">
      <input
        type="radio"
        [id]="option"
        name="multiSwitch"
        [value]="option"
        [checked]="selectedOption === option"
        (change)="onSelect(option)"
      />
      <label [for]="option">{{ option }}</label>
    </ng-container>
  </div>
</div>





.multi-toggle-container {
  display: flex;
  justify-content: center;
  margin-top: 2rem;
}

.multi-switch {
  position: relative;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  width: 100%;
  max-width: 700px;
  background: #333;
  border-radius: 30px;
  overflow: hidden;
  font-size: 0.8rem;
}

.multi-switch input[type='radio'] {
  display: none;
}

.multi-switch label {
  text-align: center;
  padding: 0.75rem 0;
  color: #fff;
  cursor: pointer;
  z-index: 2;
  position: relative;
  transition: color 0.3s ease;
}

.highlight {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 20%; /* 100% / 5 options */
  background-color: #ffcc00;
  color: #222;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  transition: transform 0.3s ease;
  z-index: 1;
  border-radius: 30px;
  pointer-events: none;
}
