// === Wrapper with overlay ===
JPanel overlayWrapper = new JPanel();
overlayWrapper.setLayout(new OverlayLayout(overlayWrapper));

// Put your main content in a base panel
JPanel contentPanel = new JPanel(new BorderLayout());
contentPanel.add(headerPanel, BorderLayout.NORTH);
contentPanel.add(scrollPane, BorderLayout.CENTER);
contentPanel.add(footerPanel, BorderLayout.SOUTH);

// Glass overlay
glassPaneOverlay = new JPanel(new GridBagLayout());
glassPaneOverlay.setOpaque(true);
glassPaneOverlay.setBackground(new Color(0, 0, 0, 120));

JLabel loadingLabel = new JLabel("Loading models...");
loadingLabel.setFont(new Font("Poppins", Font.BOLD, 14));
loadingLabel.setForeground(Color.WHITE);
glassPaneOverlay.add(loadingLabel);

glassPaneOverlay.setVisible(false); // hidden by default

// Add to wrapper (order matters: base first, overlay second)
overlayWrapper.add(glassPaneOverlay);
overlayWrapper.add(contentPanel);

// Finally add wrapper to ChatPanel
setLayout(new BorderLayout());
add(overlayWrapper, BorderLayout.CENTER);
