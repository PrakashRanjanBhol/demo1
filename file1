<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chunked JSON Parser Demo</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        
        button {
            background-color: #4CAF50;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
        }
        
        button:hover {
            background-color: #45a049;
        }

        button:disabled {
            background-color: #cccccc;
            cursor: not-allowed;
        }

        #status {
            margin-top: 10px;
            color: #666;
        }
    </style>
</head>
<body>
    <button id="runBtn" onclick="runDemo()">Run Demo</button>
    <div id="status"></div>

    <script>
        class ChunkedJSONParser {
            constructor() {
                this.buffer = '';
            }

            processChunk(chunk) {
                this.buffer += chunk;

                try {
                    const parsed = JSON.parse(this.buffer);
                    const result = { success: true, data: parsed };
                    this.buffer = '';
                    return result;
                } catch (error) {
                    return { success: false, data: null };
                }
            }

            getBuffer() {
                return this.buffer;
            }

            reset() {
                this.buffer = '';
            }
        }

        async function runDemo() {
            console.clear();
            console.log('üöÄ Starting streaming POST request demo...\n');
            document.getElementById('status').textContent = 'Streaming...';
            document.getElementById('runBtn').disabled = true;

            const API_KEY = 'YOUR_API_KEY_HERE'; // Replace with your API key

            try {
                const response = await fetch('https://api.anthropic.com/v1/messages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'x-api-key': API_KEY,
                        'anthropic-version': '2023-06-01'
                    },
                    body: JSON.stringify({
                        model: '',
                        max_tokens: 1024,
                        messages: [
                            {
                                role: 'user',
                                content: 'Generate exactly 3 JSON objects. Each object should have a "tool" field and a "content" field. Return only the JSON objects, one per line.'
                            }
                        ],
                        stream: true
                    })
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const reader = response.body.getReader();
                const decoder = new TextDecoder();
                const parser = new ChunkedJSONParser();
                let chunkCount = 0;

                console.log('Started receiving stream...\n');

                while (true) {
                    const { done, value } = await reader.read();
                    
                    if (done) {
                        console.log('\n‚úÖ Stream complete!');
                        document.getElementById('status').textContent = 'Stream complete!';
                        break;
                    }

                    chunkCount++;
                    const chunk = decoder.decode(value, { stream: true });
                    
                    console.log(`üì¶ Chunk ${chunkCount}:`, chunk);

                    // Process each character in the chunk
                    for (let char of chunk) {
                        const result = parser.processChunk(char);
                        
                        if (result.success) {
                            console.log('\n‚úÖ VALID JSON PARSED:');
                            console.log(result.data);
                            console.log('');
                        }
                    }

                    // Show current buffer if not empty
                    if (parser.getBuffer()) {
                        console.log('üìã Current buffer:', parser.getBuffer().substring(0, 100) + (parser.getBuffer().length > 100 ? '...' : ''));
                    }
                }

            } catch (error) {
                console.error('‚ùå Error:', error);
                document.getElementById('status').textContent = 'Error: ' + error.message;
            } finally {
                document.getElementById('runBtn').disabled = false;
            }
        }
    </script>
</body>
</html>
