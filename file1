import { DynamicDialogModule } from 'primeng/dynamicdialog';
import { DialogService } from 'primeng/dynamicdialog';

@NgModule({
  imports: [
    DynamicDialogModule,
    // other modules...
  ],
  providers: [DialogService],
})
export class AppModule {}








import { DialogService, DynamicDialogRef } from 'primeng/dynamicdialog';
import { JiraIssuePageComponent } from './jira-issue-page/jira-issue-page.component';

@Component({
  selector: 'app-parent',
  templateUrl: './parent.component.html',
  styleUrls: ['./parent.component.css'],
  providers: [DialogService]
})
export class ParentComponent {
  ref: DynamicDialogRef | undefined;

  constructor(private dialogService: DialogService) {}

  openJiraModal(issue: any) {
    this.ref = this.dialogService.open(JiraIssuePageComponent, {
      header: `${issue.key} - ${issue.title}`,
      width: '70%',
      contentStyle: { 'max-height': '80vh', overflow: 'auto', background: '#171717', color: '#e0e0e0' },
      data: { issue },
      styleClass: 'jira-popup-dialog'
    });
  }

  ngOnDestroy() {
    if (this.ref) this.ref.close();
  }
}










<button (click)="openJiraModal(issue)">Open Jira Issue</button>








import { Component, Input } from '@angular/core';
import { DynamicDialogConfig, DynamicDialogRef } from 'primeng/dynamicdialog';

@Component({
  selector: 'app-jira-issue-page',
  templateUrl: './jira-issue-page.component.html',
  styleUrls: ['./jira-issue-page.component.css']
})
export class JiraIssuePageComponent {
  issue: any;

  constructor(public config: DynamicDialogConfig, public ref: DynamicDialogRef) {
    this.issue = config.data.issue;
  }

  close() {
    this.ref.close();
  }

  // ... your toggle and markdown logic
}









<div style="text-align: right; margin-bottom: 10px;">
  <button class="comment-btn" (click)="close()">Close</button>
</div>
