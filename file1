<!-- Overlay Image Viewer -->
<div class="image-overlay" *ngIf="showOverlay" (click)="closeOverlay()">
  <img [src]="selectedImage" class="overlay-image" (click)="$event.stopPropagation()" />
  <span class="close-icon" (click)="closeOverlay()">&#10006;</span>
</div>




.image-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.85);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.overlay-image {
  max-width: 90vw;
  max-height: 90vh;
  border-radius: 8px;
  box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
}

.close-icon {
  position: fixed;
  top: 30px;
  right: 40px;
  font-size: 32px;
  color: white;
  cursor: pointer;
  z-index: 1001;
  user-select: none;
}












import { Component } from '@angular/core';

@Component({
  selector: 'app-your-component',
  templateUrl: './your-component.component.html',
  styleUrls: ['./your-component.component.css']
})
export class YourComponent {
  showOverlay = false;
  selectedImage = '';

  openOverlayImage(src: string) {
    this.selectedImage = src;
    this.showOverlay = true;
  }

  closeOverlay() {
    this.showOverlay = false;
    this.selectedImage = '';
  }

  attachClickToDynamicImage(img: HTMLImageElement) {
    img.addEventListener('click', () => {
      this.openOverlayImage(img.src);
    });
  }

  createImageDynamically() {
    const img = document.createElement('img');
    img.src = 'assets/sample.jpg'; // replace with actual image path
    img.style.cursor = 'pointer';
    img.style.width = '200px';
    this.attachClickToDynamicImage(img);

    const container = document.getElementById('image-container');
    if (container) {
      container.appendChild(img);
    }
  }

  ngOnInit() {
    this.createImageDynamically();
  }
}
