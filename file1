import { Component, ElementRef, HostListener, ViewChild } from '@angular/core';

@Component({
  selector: 'app-bitbucket-management',
  templateUrl: './bitbucket-management.component.html',
  styleUrls: ['./bitbucket-management.component.scss']
})
export class BitbucketManagementComponent {
  @ViewChild('reposSection', { static: true }) reposSection!: ElementRef;
  @ViewChild('sidebar', { static: true }) sidebar!: ElementRef;

  isResizing = false;
  draggedPr: any = null;
  prs = [
    { id: 1, title: 'Add user authentication', repo: 'frontend-app', status: 'open' },
    { id: 2, title: 'Fix API endpoint bug', repo: 'backend-api', status: 'review' },
    { id: 3, title: 'Update dependencies', repo: 'mobile-app', status: 'open' },
    { id: 4, title: 'Refactor database queries', repo: 'backend-api', status: 'open' },
    { id: 5, title: 'Implement dark mode toggle', repo: 'frontend-app', status: 'merged' },
  ];

  startResize(event: MouseEvent) {
    this.isResizing = true;
    document.body.style.cursor = 'ns-resize';
    document.body.style.userSelect = 'none';
  }

  @HostListener('document:mousemove', ['$event'])
  onMouseMove(event: MouseEvent) {
    if (!this.isResizing) return;

    const sidebarRect = this.sidebar.nativeElement.getBoundingClientRect();
    const newHeight = event.clientY - sidebarRect.top;
    const minHeight = 100;
    const maxHeight = sidebarRect.height - 50;

    if (newHeight >= minHeight && newHeight <= maxHeight) {
      this.reposSection.nativeElement.style.height = `${newHeight}px`;
    }
  }

  @HostListener('document:mouseup')
  onMouseUp() {
    if (this.isResizing) {
      this.isResizing = false;
      document.body.style.cursor = '';
      document.body.style.userSelect = '';
    }
  }

  dragStart(pr: any) {
    this.draggedPr = pr;
  }

  dragOver(event: DragEvent, pr: any) {
    event.preventDefault();
    const element = (event.target as HTMLElement).closest('.pr-item');
    if (element) element.classList.add('drag-over');
  }

  dragLeave(event: DragEvent) {
    const element = (event.target as HTMLElement).closest('.pr-item');
    if (element) element.classList.remove('drag-over');
  }

  drop(event: DragEvent, targetPr: any) {
    event.preventDefault();
    const element = (event.target as HTMLElement).closest('.pr-item');
    if (element) element.classList.remove('drag-over');

    if (!this.draggedPr || this.draggedPr.id === targetPr.id) return;

    const draggedIndex = this.prs.findIndex(p => p.id === this.draggedPr.id);
    const targetIndex = this.prs.findIndex(p => p.id === targetPr.id);

    this.prs.splice(draggedIndex, 1);
    this.prs.splice(targetIndex, 0, this.draggedPr);
    this.draggedPr = null;
  }

  dragEnd() {
    this.draggedPr = null;
  }
}


