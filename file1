import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { marked } from 'marked';
import { DomSanitizer, SafeHtml } from '@angular/platform-browser';

// ... existing interfaces ...

@Component({
  selector: 'app-center-content',
  standalone: true,
  imports: [CommonModule],
  templateUrl: './center-content.component.html',
  styleUrls: ['./center-content.component.css']
})
export class CenterContentComponent {
  // ... existing code ...

  constructor(private sanitizer: DomSanitizer) {}

  // Add method to render markdown
  renderMarkdown(content: string): SafeHtml {
    const html = marked(content);
    return this.sanitizer.sanitize(1, html) || '';
  }
}












<div class="content-section">
  <h3 class="section-title">Description</h3>
  <div class="section-content markdown-content" [innerHTML]="renderMarkdown('This pull request implements the necessary changes for the feature. The implementation follows **best practices** and includes comprehensive test coverage.\n\nKey changes include:\n- Improved error handling\n- Optimized performance\n- Enhanced user experience across all supported platforms')">
  </div>
</div>










