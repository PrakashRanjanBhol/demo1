<!-- Approve/Unapprove button with opposite badge -->
<div class="approve-container">
  <button 
    class="pr-action-btn approve-btn" 
    [class.approved]="selectedPR.status === 'APPROVED'"
    (click)="toggleApprovePR()" 
    [title]="selectedPR.status === 'APPROVED' ? 'Unapprove PR' : 'Approve PR'">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="20 6 9 17 4 12"/>
    </svg>
    <span>{{ selectedPR.status === 'APPROVED' ? 'Unapprove' : 'Approve' }}</span>
  </button>
  <span class="approval-badge" [class.unapproved]="selectedPR.status !== 'APPROVED'">
    {{ selectedPR.status === 'APPROVED' ? 'Approved' : 'Unapproved' }}
  </span>
</div>













/* Approve container with badge */
.approve-container {
  display: flex;
  align-items: center;
  gap: 8px;
}

/* Approval badge */
.approval-badge {
  font-size: 12px;
  font-weight: 600;
  padding: 4px 10px;
  border-radius: 12px;
  background: var(--bitbucket-file-status-success-bg);
  color: var(--bitbucket-file-status-success);
  border: 1px solid var(--bitbucket-file-status-success);
  transition: all 0.2s;
  white-space: nowrap;
}

.approval-badge.unapproved {
  background: var(--bitbucket-file-status-error-bg);
  color: var(--bitbucket-file-status-error);
  border-color: var(--bitbucket-file-status-error);
}

/* Approve/Unapprove button - always show background */
.pr-action-btn.approve-btn {
  color: var(--bitbucket-file-status-success);
  background: var(--bitbucket-file-status-success-bg);
  border-color: var(--bitbucket-file-status-success);
  padding: 6px 12px;
  width: auto;
  gap: 6px;
}

.pr-action-btn.approve-btn svg {
  width: 16px;
  height: 16px;
}

.pr-action-btn.approve-btn span {
  font-size: 13px;
  font-weight: 500;
}

/* Unapprove state (when approved) - show red background */
.pr-action-btn.approve-btn.approved {
  background: var(--bitbucket-file-status-error-bg);
  color: var(--bitbucket-file-status-error);
  border-color: var(--bitbucket-file-status-error);
}

/* Remove hover effects */
.pr-action-btn.approve-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 2px 8px var(--bitbucket-file-shadow-low);
}

.pr-action-btn.approve-btn.approved:hover {
  transform: translateY(-1px);
  box-shadow: 0 2px 8px var(--bitbucket-file-shadow-low);
}
