<div class="location-grid">
    <div class="location-row" *ngFor="let pair of locations | slice:0:6; let i = index">
        <ng-container *ngIf="i % 2 === 0">
            <!-- First radio -->
            <div class="location-item" *ngIf="locations[i]">
                <p-radioButton name="locationGroup" [value]="locations[i].value"
                    [(ngModel)]="selectedLocation"></p-radioButton>
                <label class="location-label">{{ locations[i].label }}</label>
            </div>

            <!-- Second radio -->
            <div class="location-item" *ngIf="locations[i + 1]">
                <p-radioButton name="locationGroup" [value]="locations[i + 1].value"
                    [(ngModel)]="selectedLocation"></p-radioButton>
                <label class="location-label">{{ locations[i + 1].label }}</label>
            </div>
        </ng-container>
    </div>

    <!-- Show input if "Other" (value: 6) is selected -->
    <div class="location-custom-input" *ngIf="selectedLocation === '6'">
        <input type="text" pInputText [(ngModel)]="customLocation" placeholder="Enter custom location" />
    </div>
</div>








.location-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.location-row {
    display: flex;
    gap: 3rem;
    align-items: center;
}

.location-item {
    display: flex;
    align-items: center;
}

.location-label {
    display: inline-block;
    width: 100px;
    /* consistent alignment */
    margin-left: 0.5rem;
}

.location-custom-input {
    margin-left: 2rem;
    margin-top: 0.5rem;
}










 selectedLocation: string = '';
  customLocation: string = '';

  locations = [
    { label: 'Location 1', value: '1' },
    { label: 'Location 2', value: '2' },
    { label: 'Location 3', value: '3' },
    { label: 'Location 4', value: '4' },
    { label: 'Location 5', value: '5' },
    { label: 'Other', value: '6' } // will trigger the text input
  ];

