  ngOnInit(): void {
    // Component initialized
  }

  ngAfterViewChecked(): void {
    // This runs after view is checked, good place to update navigation
    if (this.needsScrollUpdate) {
      this.needsScrollUpdate = false;
    }
  }

  onFileSelect(event: Event): void {
    const select = event.target as HTMLSelectElement;
    this.currentFileIndex = parseInt(select.value);
    if (!isNaN(this.currentFileIndex) && this.currentFileIndex >= 0) {
      this.selectedFile = this.diffData.files[this.currentFileIndex];
      this.renderDiff();
    }
  }

  switchView(view: 'unified' | 'side-by-side'): void {
    this.currentView = view;
    if (this.currentFileIndex >= 0) {
      this.renderDiff();
    }
  }

  renderDiff(): void {
    if (!this.selectedFile) return;

    if (this.currentView === 'unified') {
      this.diffLines = this.generateUnifiedDiff(this.selectedFile);
      this.sideBySideRows = [];
    } else {
      this.sideBySideRows = this.generateSideBySideDiff(this.selectedFile);
      this.diffLines = [];
    }

    this.updateStats(this.selectedFile);
    this.updateGoToFirstCommentButton();
  }

  generateUnifiedDiff(file: DiffFile): DiffLine[] {
    const lines: DiffLine[] = [];
    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    
    const diff = Diff.diffLines(oldText, newText);
    
    let oldLineNum = 1;
    let newLineNum = 1;

    diff.forEach(part => {
      const partLines = part.value.split('\n');
      if (partLines[partLines.length - 1] === '') {
        partLines.pop();
      }

      partLines.forEach(lineContent => {
        if (part.added) {
          const comment = this.findCommentForLine(file, newLineNum, 'TO');
          lines.push({
            type: 'added',
            newLineNum: newLineNum,
            content: lineContent,
            comment: comment
          });
          newLineNum++;
        } else if (part.removed) {
          const comment = this.findCommentForLine(file, oldLineNum, 'FROM');
          lines.push({
            type: 'deleted',
            oldLineNum: oldLineNum,
            content: lineContent,
            comment: comment
          });
          oldLineNum++;
        } else {
          lines.push({
            type: 'context',
            oldLineNum: oldLineNum,
            newLineNum: newLineNum,
            content: lineContent
          });
          oldLineNum++;
          newLineNum++;
        }
      });
    });

    return lines;
  }

  generateSideBySideDiff(file: DiffFile): any[] {
    const rows: any[] = [];
    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    
    const diff = Diff.diffLines(oldText, newText);
    
    let oldLineNum = 1;
    let newLineNum = 1;

    diff.forEach(part => {
      const partLines = part.value.split('\n');
      if (partLines[partLines.length - 1] === '') {
        partLines.pop();
      }

      if (part.added) {
        partLines.forEach(lineContent => {
          const comment = this.findCommentForLine(file, newLineNum, 'TO');
          rows.push({
            left: { type: 'empty', lineNum: null, content: '' },
            right: { type: 'added', lineNum: newLineNum, content: lineContent, comment: comment }
          });
          newLineNum++;
        });
      } else if (part.removed) {
        partLines.forEach(lineContent => {
          const comment = this.findCommentForLine(file, oldLineNum, 'FROM');
          rows.push({
            left: { type: 'deleted', lineNum: oldLineNum, content: lineContent, comment: comment },
            right: { type: 'empty', lineNum: null, content: '' }
          });
          oldLineNum++;
        });
      } else {
        partLines.forEach(lineContent => {
          rows.push({
            left: { type: 'context', lineNum: oldLineNum, content: lineContent },
            right: { type: 'context', lineNum: newLineNum, content: lineContent }
          });
          oldLineNum++;
          newLineNum++;
        });
      }
    });

    return rows;
  }

  findCommentForLine(file: DiffFile, lineNum: number, side: 'TO' | 'FROM'): Comment | undefined {
    return file.ai_comments.find(comment => 
      comment.line === lineNum && comment.side === side
    );
  }

  updateStats(file: DiffFile): void {
    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    const diff = Diff.diffLines(oldText, newText);

    let addedCount = 0;
    let deletedCount = 0;

    diff.forEach(part => {
      const lines = part.value.split('\n');
      if (lines[lines.length - 1] === '') {
        lines.pop();
      }
      
      if (part.added) {
        addedCount += lines.length;
      } else if (part.removed) {
        deletedCount += lines.length;
      }
    });

    this.addedLines = addedCount;
    this.deletedLines = deletedCount;
    this.commentsCount = file.ai_comments.length;
    this.showStats = true;
  }

  updateGoToFirstCommentButton(): void {
    this.showGoToFirstComment = this.commentsCount > 0;
  }

  goToNextComment(comment: Comment): void {
    const allComments = this.getAllComments();
    const currentIndex = allComments.findIndex(c => 
      c.line === comment.line && c.side === comment.side
    );
    
    if (currentIndex >= 0 && currentIndex < allComments.length - 1) {
      const nextComment = allComments[currentIndex + 1];
      this.scrollToComment(nextComment);
    }
  }

  goToPreviousComment(comment: Comment): void {
    const allComments = this.getAllComments();
    const currentIndex = allComments.findIndex(c => 
      c.line === comment.line && c.side === comment.side
    );
    
    if (currentIndex > 0) {
      const prevComment = allComments[currentIndex - 1];
      this.scrollToComment(prevComment);
    }
  }

  goToFirstComment(): void {
    const allComments = this.getAllComments();
    if (allComments.length > 0) {
      this.scrollToComment(allComments[0]);
    }
  }

  scrollToComment(comment: Comment): void {
    setTimeout(() => {
      const commentId = `comment-${comment.line}-${comment.side}`;
      const element = document.getElementById(commentId);
      if (element) {
        element.scrollIntoView({ behavior: 'smooth', block: 'center' });
        this.highlightComment(element);
      }
    }, 100);
  }

  highlightComment(element: HTMLElement): void {
    element.style.transition = 'box-shadow 0.3s';
    element.style.boxShadow = '0 0 10px rgba(0, 82, 204, 0.5)';
    setTimeout(() => {
      element.style.boxShadow = '';
    }, 1000);
  }

  getAllComments(): Comment[] {
    if (!this.selectedFile) return [];
    return this.selectedFile.ai_comments;
  }

  isFirstComment(comment: Comment): boolean {
    const allComments = this.getAllComments();
    return allComments.length > 0 && 
           allComments[0].line === comment.line && 
           allComments[0].side === comment.side;
  }

  isLastComment(comment: Comment): boolean {
    const allComments = this.getAllComments();
    return allComments.length > 0 && 
           allComments[allComments.length - 1].line === comment.line && 
           allComments[allComments.length - 1].side === comment.side;
  }

  acceptComment(comment: Comment): void {
    const state = this.getCommentState(this.selectedFile!.file_path, comment.line, comment.side);
    const text = state.modifiedText || comment.comment_text;
    this.saveCommentState(this.selectedFile!.file_path, comment.line, comment.side, 'accepted', text, false);
  }

  rejectComment(comment: Comment): void {
    const state = this.getCommentState(this.selectedFile!.file_path, comment.line, comment.side);
    const text = state.modifiedText || comment.comment_text;
    this.saveCommentState(this.selectedFile!.file_path, comment.line, comment.side, 'rejected', text, false);
  }

  modifyComment(comment: Comment): void {
    const key = this.getCommentKey(this.selectedFile!.file_path, comment.line, comment.side);
    const currentState = this.commentStates[key] || { 
      status: 'pending', 
      modifiedText: comment.comment_text,
      isEditing: false 
    };
    
    this.commentStates[key] = {
      ...currentState,
      isEditing: true
    };
  }

  saveCommentModification(comment: Comment, newText: string): void {
    const state = this.getCommentState(this.selectedFile!.file_path, comment.line, comment.side);
    this.saveCommentState(this.selectedFile!.file_path, comment.line, comment.side, state.status, newText, false);
  }

  cancelModify(comment: Comment): void {
    const key = this.getCommentKey(this.selectedFile!.file_path, comment.line, comment.side);
    const currentState = this.commentStates[key] || { 
      status: 'pending', 
      modifiedText: comment.comment_text,
      isEditing: false 
    };
    
    this.commentStates[key] = {
      ...currentState,
      isEditing: false
    };
  }

  getCommentKey(filePath: string, line: number, side: string): string {
    return `${filePath}-${line}-${side}`;
  }

  saveCommentState(filePath: string, line: number, side: string, status: 'pending' | 'accepted' | 'rejected', modifiedText: string, isEditing: boolean): void {
    const key = this.getCommentKey(filePath, line, side);
    this.commentStates[key] = {
      status: status,
      modifiedText: modifiedText,
      isEditing: isEditing
    };
  }

  getCommentState(filePath: string, line: number, side: string): CommentState {
    const key = this.getCommentKey(filePath, line, side);
    return this.commentStates[key] || { status: 'pending', modifiedText: null, isEditing: false };
  }

  getCommentDisplayText(comment: Comment): string {
    const state = this.getCommentState(this.selectedFile!.file_path, comment.line, comment.side);
    return state.modifiedText || comment.comment_text;
  }

  isCommentEditing(comment: Comment): boolean {
    const state = this.getCommentState(this.selectedFile!.file_path, comment.line, comment.side);
    return state.isEditing;
  }

  isCommentDisabled(comment: Comment): boolean {
    const state = this.getCommentState(this.selectedFile!.file_path, comment.line, comment.side);
    return state.status === 'accepted' || state.status === 'rejected';
  }

  getCommentStatus(comment: Comment): string {
    const state = this.getCommentState(this.selectedFile!.file_path, comment.line, comment.side);
    return state.status;
  }

  exportCommentData(): void {
    const data = this.getCommentStatuses();
    const acceptedCount = data.filter(d => d.status === 'accepted').length;
    const rejectedCount = data.filter(d => d.status === 'rejected').length;
    const pendingCount = data.filter(d => d.status === 'pending').length;
    
    const jsonStr = JSON.stringify(data, null, 2);
    const blob = new Blob([jsonStr], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'comment-review-results.json';
    a.click();
    URL.revokeObjectURL(url);
    
    alert(`Comment data exported!\n\nTotal: ${data.length}\nAccepted: ${acceptedCount}\nRejected: ${rejectedCount}\nPending: ${pendingCount}\n\nFile downloaded: comment-review-results.json`);
  }

  getCommentStatuses(): any[] {
    const statuses: any[] = [];
    
    for (const key in this.commentStates) {
      const state = this.commentStates[key];
      const [filePath, lineStr, side] = key.split('-');
      const line = parseInt(lineStr);
      
      const file = this.diffData.files.find(f => f.file_path === filePath);
      if (file) {
        const comment = file.ai_comments.find(c => 
          c.line === line && c.side === side
        );
        
        if (comment) {
          statuses.push({
            file: filePath,
            line: line,
            side: side,
            status: state.status,
            originalText: comment.comment_text,
            modifiedText: state.modifiedText,
            severity: comment.severity,
            suggestedPatch: comment.suggested_patch
          });
        }
      }
    }

    return statuses;
  }
}


































<div class="container">
  <div class="header">
    <h1>Code Diff Viewer</h1>
    <div style="display: flex; gap: 15px; align-items: center;">
      <button 
        class="toggle-btn" 
        *ngIf="showGoToFirstComment" 
        (click)="goToFirstComment()"
        style="background-color: #3b82f6; color: white;">
        ‚¨Ü First Comment
      </button>
      <div class="view-toggle">
        <button 
          class="toggle-btn" 
          [class.active]="currentView === 'unified'"
          (click)="switchView('unified')">
          Unified
        </button>
        <button 
          class="toggle-btn" 
          [class.active]="currentView === 'side-by-side'"
          (click)="switchView('side-by-side')">
          Side by Side
        </button>
      </div>
    </div>
  </div>

  <div class="file-selector">
    <select (change)="onFileSelect($event)">
      <option value="">Select a file to view diff...</option>
      <option *ngFor="let file of diffData.files; let i = index" [value]="i">
        {{ file.file_path }}
      </option>
    </select>
  </div>

  <div class="diff-container">
    <p class="empty-state" *ngIf="currentFileIndex < 0">
      Please select a file to view the diff
    </p>

    <!-- Unified View -->
    <ng-container *ngIf="currentFileIndex >= 0 && currentView === 'unified'">
      <div class="file-header">{{ selectedFile?.file_path }}</div>
      <div class="unified-view">
        <ng-container *ngFor="let line of diffLines">
          <div class="diff-line" [ngClass]="line.type">
            <div class="line-numbers">
