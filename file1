<div class="post-card">
  <div class="post-images" [ngClass]="getLayoutClass()">
    <ng-container *ngFor="let img of images.slice(0, 4); let i = index">
      <div
        class="image-count-overlay"
        *ngIf="i === 3 && images.length > 4"
        [attr.data-count]="'+' + (images.length - 4)"
        (click)="openImage(img)"
      >
        <img [src]="img" alt="Post image" />
      </div>
      <img
        *ngIf="!(i === 3 && images.length > 4)"
        [src]="img"
        alt="Post image"
        (click)="openImage(img)"
      />
    </ng-container>
  </div>
</div>

<!-- Fullscreen Image Modal -->
<div class="image-modal" *ngIf="selectedImage">
  <span class="close-btn" (click)="closeOverlay()">Ã—</span>
  <img [src]="selectedImage" class="modal-content" />
</div>














  images: string[] = [
    'https://picsum.photos/id/1015/600/800',
    'https://picsum.photos/id/1016/1200/800',
    'https://picsum.photos/id/1018/600/600',
    'https://picsum.photos/id/1024/600/400',
    'https://picsum.photos/id/1032/700/500',
    'https://picsum.photos/id/1045/800/600',
  ];

  selectedImage: string | null = null;

  openImage(src: string) {
    this.selectedImage = src;
  }

  closeOverlay() {
    this.selectedImage = null;
  }

  getLayoutClass(): string {
    const count = this.images.length;
    if (count === 1) return 'layout-1';
    if (count === 2) return 'layout-2';
    if (count === 3) return 'layout-3';
    if (count === 4) return 'layout-4';
    return 'layout-more';
  }





