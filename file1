export class WorkflowSidebarComponent implements OnInit, OnDestroy {
  // ... existing properties and methods ...

  // Add trackBy functions for better performance
  trackByWorkflowId(index: number, workflow: Workflow): string {
    return workflow.id;
  }

  trackByFunctionName(index: number, func: Function): string {
    return func.function_name;
  }

  trackBySharedWorkflowId(index: number, workflow: SharedWorkflow): number {
    return workflow.id;
  }
}














<!-- My Workflows -->
<div *ngFor="let workflow of getFilteredMyWorkflows(); trackBy: trackByWorkflowId; let i = index" class="workflow-item">

<!-- Active Workflows -->
<div *ngFor="let workflow of activeWorkflows; trackBy: trackByWorkflowId" class="workflow-item-readonly active-workflow-item">

<!-- Functions -->
<div *ngFor="let func of getFilteredFunctions(); trackBy: trackByFunctionName" class="function-item">

<!-- Shared Workflows -->
<div *ngFor="let workflow of sharedWorkflows; trackBy: trackBySharedWorkflowId" class="shared-workflow-item">
