export class ChunkedJsonParserComponent implements OnInit {
  // ... existing properties ...
  
  hasFileModifications = false; // ADD THIS

  // ... existing methods ...

  private onTool(data: ToolData): void {
    if (data.tool === 'READ') {
      this.appendRead(data.content);
      this.updateReadFlow();
    } else {
      this.addFlow(data.tool, this.extractFileName(data.content), 'executing');
      
      // ADD THIS: Set flag when WRITE/MODIFY detected
      if (data.tool === 'WRITE' || data.tool === 'MODIFY') {
        this.hasFileModifications = true;
      }
    }
    
    this.queuedCount = this.parser.getPendingTools().length;
    this.cdr.markForCheck();
  }

  private reset(): void {
    const container = document.getElementById('vibe-coding-read-container');
    if (container) container.innerHTML = '';
    
    this.executionFlow = [];
    this.queuedCount = 0;
    this.approvalData = null;
    this.diffHtml = null;
    this.showApproval = false;
    this.isCompleted = false;
    this.hasFirstChunk = false;
    this.isApproving = false;
    this.isRejecting = false;
    this.flowIdCounter = 0;
    this.readFlowItem = null;
    this.hasFileModifications = false; // ADD THIS
  }

  // ... rest of the code ...
}










<!-- Completed State - MODIFIED -->
