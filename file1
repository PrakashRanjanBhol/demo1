import { Component, Input, OnChanges } from '@angular/core';
import { Marked } from 'marked';

@Component({
  selector: 'markdown-renderer',
  template: `<div class="markdown-body" [innerHTML]="rendered"></div>`
})
export class MarkdownRendererComponent implements OnChanges {
  @Input() content: string = '';
  rendered: string = '';

  private marked = new Marked();

  ngOnChanges() {
    this.rendered = this.marked.parse(this.content || '');
  }
}
