  0%, 100% {
    box-shadow: 0 4px 12px var(--sdlc-suite-ticket-list-upload-shadow);
  }
  50% {
    box-shadow: 0 4px 20px var(--sdlc-suite-ticket-list-upload-shadow-hover);
  }
}

.upload-btn {
  animation: pulse-upload 2s ease-in-out infinite;
}

