export class WorkflowSidebarComponent implements OnInit {
  // ... existing properties ...

  selectedFunctionName: string | null = null;
  deletingFunctionName: string | null = null;
  isDeletingInProgress: boolean = false;
  acceptingWorkflowId: number | null = null;
  rejectingWorkflowId: number | null = null;
  runningWorkflowId: string | null = null; // Add this property

  // ... existing methods ...

  runWorkflow(workflowId: string, event: Event): void {
    event.stopPropagation();
    
    // Set running in progress
    this.runningWorkflowId = workflowId;
    
    console.log(`Running workflow: ${workflowId}`);
    
    // Simulate API call with delay
    setTimeout(() => {
      // Clear running state
      this.runningWorkflowId = null;
      
      alert(`Workflow execution started: ${workflowId}`);
      console.log(`Workflow ${workflowId} execution completed`);
      
      // In production: make API call to run workflow
    }, 2000); // 2 second delay to simulate API call
  }

  // Add helper method
  isWorkflowStarting(workflowId: string): boolean {
    return this.runningWorkflowId === workflowId;
  }

  // ... rest of existing methods ...
}








<button class="run-workflow-btn" (click)="runWorkflow(workflow.id, $event)" title="Run Workflow"
  [disabled]="isWorkflowRunning(workflow.id) || isWorkflowStarting(workflow.id)">
  <!-- Show spinner when starting -->
  <div class="run-spinner" *ngIf="isWorkflowStarting(workflow.id)"></div>
  <!-- Show play icon when not starting -->
  <svg *ngIf="!isWorkflowStarting(workflow.id)" viewBox="0 0 24 24" fill="currentColor">
    <polygon points="5 3 19 12 5 21 5 3"></polygon>
  </svg>
</button>









/* Run Workflow Button */
.run-workflow-btn {
    padding: 4px 6px;
    background: var(--agentic-ai-workflow-bg-run-btn);
    border: none;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    flex-shrink: 0;
}

.run-workflow-btn:hover:not(:disabled) {
    background: var(--agentic-ai-workflow-bg-run-btn-hover);
    transform: translateY(-1px);
    box-shadow: 0 2px 4px var(--agentic-ai-workflow-shadow-run-btn);
}

.run-workflow-btn:active:not(:disabled) {
    transform: translateY(0);
}

.run-workflow-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

.run-workflow-btn svg {
    width: 14px;
    height: 14px;
    fill: var(--agentic-ai-workflow-text-white);
    stroke: none;
}

/* Run spinner */
.run-spinner {
    width: 14px;
    height: 14px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top: 2px solid var(--agentic-ai-workflow-text-white);
    border-radius: 50%;
    animation: spin 0.6s linear infinite;
}
