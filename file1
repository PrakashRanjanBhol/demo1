      border-color: #c1c7d0;
    }
  }

  &:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;

    &:hover {
      transform: none;
      box-shadow: none;
    }
  }

  &.nav:disabled {
    background-color: #fafbfc !important;
    color: #c1c7d0 !important;
    border-color: #f0f0f0 !important;
  }
}

