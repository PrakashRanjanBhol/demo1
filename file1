  ngOnInit(): void {
    // Component initialized
  }

  onFileSelect(event: Event): void {
    const select = event.target as HTMLSelectElement;
    this.currentFileIndex = parseInt(select.value);
    if (!isNaN(this.currentFileIndex) && this.currentFileIndex >= 0) {
      this.selectedFile = this.diffData.files[this.currentFileIndex];
      this.renderDiff();
    }
  }

  switchView(view: 'unified' | 'side-by-side'): void {
    this.currentView = view;
    if (this.currentFileIndex >= 0) {
      this.renderDiff();
    }
  }

  renderDiff(): void {
    if (!this.selectedFile) return;

    if (this.currentView === 'unified') {
      this.renderedDiff = this.renderUnifiedView(this.selectedFile);
    } else {
      this.renderedDiff = this.renderSideBySideView(this.selectedFile);
    }

    this.updateStats(this.selectedFile);
    setTimeout(() => this.updateCommentNavigation(), 0);
    this.updateGoToFirstCommentButton();
  }

  renderUnifiedView(file: DiffFile): string {
    let html = `<div class="file-header">${this.escapeHtml(file.file_path)}</div>`;
    html += '<div class="unified-view">';

    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    
    const diff = Diff.diffLines(oldText, newText);
    
    let oldLineNum = 1;
    let newLineNum = 1;

    diff.forEach(part => {
      const lines = part.value.split('\n');
      if (lines[lines.length - 1] === '') {
        lines.pop();
      }

      lines.forEach(line => {
        if (part.added) {
          html += `<div class="diff-line added">`;
          html += `<div class="line-numbers">`;
          html += `<div class="line-number"></div>`;
          html += `<div class="line-number">${newLineNum}</div>`;
          html += `</div>`;
          html += `<div class="line-content">${this.escapeHtml(line)}</div>`;
          html += `</div>`;

          const comment = this.findCommentForLine(file, newLineNum, 'TO');
          if (comment) {
            html += this.renderComment(comment);
          }
          newLineNum++;
        } else if (part.removed) {
          html += `<div class="diff-line deleted">`;
          html += `<div class="line-numbers">`;
          html += `<div class="line-number">${oldLineNum}</div>`;
          html += `<div class="line-number"></div>`;
          html += `</div>`;
          html += `<div class="line-content">${this.escapeHtml(line)}</div>`;
          html += `</div>`;

          const comment = this.findCommentForLine(file, oldLineNum, 'FROM');
          if (comment) {
            html += this.renderComment(comment);
          }
          oldLineNum++;
        } else {
          html += `<div class="diff-line context">`;
          html += `<div class="line-numbers">`;
          html += `<div class="line-number">${oldLineNum}</div>`;
          html += `<div class="line-number">${newLineNum}</div>`;
          html += `</div>`;
          html += `<div class="line-content">${this.escapeHtml(line)}</div>`;
          html += `</div>`;
          oldLineNum++;
          newLineNum++;
        }
      });
    });

    html += '</div>';
    return html;
  }

  renderSideBySideView(file: DiffFile): string {
    let html = `<div class="file-header">${this.escapeHtml(file.file_path)}</div>`;
    html += '<div class="side-by-side-view">';
    
    html += '<div class="side-header-row">';
    html += '<div class="side-header">Original</div>';
    html += '<div class="side-header">Modified</div>';
    html += '</div>';

    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    
    const diff = Diff.diffLines(oldText, newText);
    
    let oldLineNum = 1;
    let newLineNum = 1;

    diff.forEach(part => {
      const lines = part.value.split('\n');
      if (lines[lines.length - 1] === '') {
        lines.pop();
      }

      if (part.added) {
        lines.forEach(line => {
          html += '<div class="side-row">';
          
          html += '<div class="side-cell empty">';
          html += '<div class="side-cell-inner">';
          html += '<div class="side-line-number"></div>';
          html += '<div class="side-line-content"></div>';
          html += '</div>';
          html += '</div>';
          
          html += '<div class="side-cell added">';
          html += '<div class="side-cell-inner">';
          html += `<div class="side-line-number">${newLineNum}</div>`;
          html += `<div class="side-line-content">${this.escapeHtml(line)}</div>`;
          html += '</div>';
          const comment = this.findCommentForLine(file, newLineNum, 'TO');
          if (comment) {
            html += this.renderComment(comment);
          }
          html += '</div>';
          
          html += '</div>';
          newLineNum++;
        });
      } else if (part.removed) {
        lines.forEach(line => {
          html += '<div class="side-row">';
          
          html += '<div class="side-cell deleted">';
          html += '<div class="side-cell-inner">';
          html += `<div class="side-line-number">${oldLineNum}</div>`;
          html += `<div class="side-line-content">${this.escapeHtml(line)}</div>`;
          html += '</div>';
          const comment = this.findCommentForLine(file, oldLineNum, 'FROM');
          if (comment) {
            html += this.renderComment(comment);
          }
          html += '</div>';
          
          html += '<div class="side-cell empty">';
          html += '<div class="side-cell-inner">';
          html += '<div class="side-line-number"></div>';
          html += '<div class="side-line-content"></div>';
          html += '</div>';
          html += '</div>';
          
          html += '</div>';
          oldLineNum++;
        });
      } else {
        lines.forEach(line => {
          html += '<div class="side-row">';
          
          html += '<div class="side-cell">';
          html += '<div class="side-cell-inner">';
          html += `<div class="side-line-number">${oldLineNum}</div>`;
          html += `<div class="side-line-content">${this.escapeHtml(line)}</div>`;
          html += '</div>';
          html += '</div>';
          
          html += '<div class="side-cell">';
          html += '<div class="side-cell-inner">';
          html += `<div class="side-line-number">${newLineNum}</div>`;
          html += `<div class="side-line-content">${this.escapeHtml(line)}</div>`;
          html += '</div>';
          html += '</div>';
          
          html += '</div>';
          oldLineNum++;
          newLineNum++;
        });
      }
    });

    html += '</div>';
    return html;
  }

  renderComment(comment: Comment): string {
    const commentId = `comment-${comment.line}-${comment.side}`;
    const savedState = this.getCommentState(this.selectedFile!.file_path, comment.line, comment.side);
    const status = savedState.status;
    const displayText = savedState.modifiedText || comment.comment_text;
    
    let commentClass = 'ai-comment';
    if (status === 'accepted') commentClass += ' accepted';
    else if (status === 'rejected') commentClass += ' rejected';
    
    let html = `<div class="${commentClass}" id="${commentId}" data-status="${status}" data-file-path="${this.escapeHtml(this.selectedFile!.file_path)}" data-line="${comment.line}" data-side="${comment.side}">`;
    html += `<div class="comment-header">`;
    html += `<div>`;
    html += `<span class="comment-severity ${comment.severity}">${comment.severity}</span>`;
    
    if (status === 'accepted' || status === 'rejected') {
      html += `<span class="comment-status ${status}" style="display: inline-block;">${status.toUpperCase()}</span>`;
    } else {
      html += `<span class="comment-status" style="display: none;"></span>`;
    }
    
    html += `</div>`;
    html += `<span class="comment-line-info">Line ${comment.line}</span>`;
    html += `</div>`;
    html += `<div class="comment-text-display">${this.escapeHtml(displayText)}</div>`;
    html += `<textarea class="comment-text-input" style="display: none;">${this.escapeHtml(displayText)}</textarea>`;
    
    if (comment.suggested_patch) {
      html += `<div class="suggested-patch">`;
      html += `<div class="suggested-patch-label">üí° Suggested Fix:</div>`;
      html += this.escapeHtml(comment.suggested_patch);
      html += `</div>`;
    }
    
    html += `<div class="comment-actions">`;
    
    const disabled = (status === 'accepted' || status === 'rejected') ? ' disabled' : '';
    
    html += `<button class="comment-btn accept"${disabled}>‚úì Accept</button>`;
    html += `<button class="comment-btn reject"${disabled}>‚úó Reject</button>`;
    html += `<button class="comment-btn modify"${disabled}>‚úé Modify</button>`;
    html += `<button class="comment-btn save" style="display: none;">üíæ Save</button>`;
    html += `<button class="comment-btn cancel" style="display: none;">Cancel</button>`;
    html += `<div class="comment-nav">`;
    html += `<button class="comment-btn nav prev-comment">‚Üê Previous</button>`;
    html += `<button class="comment-btn nav next-comment">Next ‚Üí</button>`;
    html += `</div>`;
    html += `</div>`;
    
    html += `</div>`;
    return html;
  }

  findCommentForLine(file: DiffFile, lineNum: number, side: 'TO' | 'FROM'): Comment | undefined {
    return file.ai_comments.find(comment => 
      comment.line === lineNum && comment.side === side
    );
  }

  updateStats(file: DiffFile): void {
    const oldText = file.old_lines.join('\n');
    const newText = file.new_lines.join('\n');
    const diff = Diff.diffLines(oldText, newText);

    let addedCount = 0;
    let deletedCount = 0;

    diff.forEach(part => {
      const lines = part.value.split('\n');
      if (lines[lines.length - 1] === '') {
        lines.pop();
      }
      
      if (part.added) {
        addedCount += lines.length;
      } else if (part.removed) {
        deletedCount += lines.length;
      }
    });

    this.addedLines = addedCount;
    this.deletedLines = deletedCount;
    this.commentsCount = file.ai_comments.length;
    this.showStats = true;
  }

  updateCommentNavigation(): void {
    const comments = document.querySelectorAll('.ai-comment');
    
    comments.forEach((commentEl, index) => {
      const prevBtn = commentEl.querySelector('.prev-comment') as HTMLButtonElement;
      const nextBtn = commentEl.querySelector('.next-comment') as HTMLButtonElement;
      
      if (prevBtn) {
        prevBtn.disabled = index === 0;
        prevBtn.onclick = (e) => {
          e.preventDefault();
          this.goToPreviousComment(commentEl.id);
        };
      }
      
      if (nextBtn) {
        nextBtn.disabled = index === comments.length - 1;
        nextBtn.onclick = (e) => {
          e.preventDefault();
          this.goToNextComment(commentEl.id);
        };
      }

      const acceptBtn = commentEl.querySelector('.accept') as HTMLButtonElement;
      const rejectBtn = commentEl.querySelector('.reject') as HTMLButtonElement;
      const modifyBtn = commentEl.querySelector('.modify') as HTMLButtonElement;
      const saveBtn = commentEl.querySelector('.save') as HTMLButtonElement;
      const cancelBtn = commentEl.querySelector('.cancel') as HTMLButtonElement;

      if (acceptBtn) {
        acceptBtn.onclick = (e) => {
          e.preventDefault();
          this.acceptComment(commentEl.id);
        };
      }
      if (rejectBtn) {
        rejectBtn.onclick = (e) => {
          e.preventDefault();
          this.rejectComment(commentEl.id);
        };
      }
      if (modifyBtn) {
        modifyBtn.onclick = (e) => {
          e.preventDefault();
          this.modifyComment(commentEl.id);
        };
      }
      if (saveBtn) {
        saveBtn.onclick = (e) => {
          e.preventDefault();
          this.saveComment(commentEl.id);
        };
      }
      if (cancelBtn) {
        cancelBtn.onclick = (e) => {
          e.preventDefault();
          this.cancelModify(commentEl.id);
        };
      }
    });
  }

  updateGoToFirstCommentButton(): void {
    const comments = document.querySelectorAll('.ai-comment');
    this.showGoToFirstComment = comments.length > 0;
  }

  goToNextComment(currentCommentId: string): void {
    const comments = Array.from(document.querySelectorAll('.ai-comment'));
    const currentIndex = comments.findIndex(c => c.id === currentCommentId);
    
    if (currentIndex >= 0 && currentIndex < comments.length - 1) {
      const nextComment = comments[currentIndex + 1] as HTMLElement;
      nextComment.scrollIntoView({ behavior: 'smooth', block: 'center' });
      this.highlightComment(nextComment);
    }
  }

  goToPreviousComment(currentCommentId: string): void {
    const comments = Array.from(document.querySelectorAll('.ai-comment'));
    const currentIndex = comments.findIndex(c => c.id === currentCommentId);
    
    if (currentIndex > 0) {
      const prevComment = comments[currentIndex - 1] as HTMLElement;
      prevComment.scrollIntoView({ behavior: 'smooth', block: 'center' });
      this.highlightComment(prevComment);
    }
  }

  goToFirstComment(): void {
    const comments = document.querySelectorAll('.ai-comment');
    if (comments.length > 0) {
      const firstComment = comments[0] as HTMLElement;
      firstComment.scrollIntoView({ behavior: 'smooth', block: 'center' });
      this.highlightComment(firstComment);
    }
  }

  highlightComment(comment: HTMLElement): void {
    comment.style.transition = 'box-shadow 0.3s';
    comment.style.boxShadow = '0 0 10px rgba(0, 82, 204, 0.5)';
    setTimeout(() => {
      comment.style.boxShadow = '';
    }, 1000);
  }

  acceptComment(commentId: string): void {
    const commentEl = document.getElementById(commentId);
    if (!commentEl) return;

    commentEl.classList.add('accepted');
    commentEl.classList.remove('rejected');
    commentEl.dataset['status'] = 'accepted';

    const statusBadge = commentEl.querySelector('.comment-status') as HTMLElement;
    if (statusBadge) {
      statusBadge.textContent = 'ACCEPTED';
      statusBadge.className = 'comment-status accepted';
      statusBadge.style.display = 'inline-block';
    }

    this.disableActionButtons(commentEl);

    const filePath = commentEl.dataset['filePath'] || '';
    const line = parseInt(commentEl.dataset['line'] || '0');
    const side = commentEl.dataset['side'] as 'TO' | 'FROM';
    const displayText = (commentEl.querySelector('.comment-text-display') as HTMLElement)?.textContent || '';
    
    this.saveCommentState(filePath, line, side, 'accepted', displayText);
  }

  rejectComment(commentId: string): void {
    const commentEl = document.getElementById(commentId);
    if (!commentEl) return;

    commentEl.classList.add('rejected');
    commentEl.classList.remove('accepted');
    commentEl.dataset['status'] = 'rejected';

    const statusBadge = commentEl.querySelector('.comment-status') as HTMLElement;
    if (statusBadge) {
      statusBadge.textContent = 'REJECTED';
      statusBadge.className = 'comment-status rejected';
      statusBadge.style.display = 'inline-block';
    }

    this.disableActionButtons(commentEl);

    const filePath = commentEl.dataset['filePath'] || '';
    const line = parseInt(commentEl.dataset['line'] || '0');
    const side = commentEl.dataset['side'] as 'TO' | 'FROM';
    const displayText = (commentEl.querySelector('.comment-text-display') as HTMLElement)?.textContent || '';
    
    this.saveCommentState(filePath, line, side, 'rejected', displayText);
  }

  modifyComment(commentId: string): void {
    const commentEl = document.getElementById(commentId);
    if (!commentEl) return;

    const displayText = commentEl.querySelector('.comment-text-display') as HTMLElement;
    const textarea = commentEl.querySelector('.comment-text-input') as HTMLTextAreaElement;
    
    if (displayText && textarea) {
      displayText.style.display = 'none';
      textarea.style.display = 'block';

      const acceptBtn = commentEl.querySelector('.comment-btn.accept') as HTMLButtonElement;
      const rejectBtn = commentEl.querySelector('.comment-btn.reject') as HTMLButtonElement;
      const modifyBtn = commentEl.querySelector('.comment-btn.modify') as HTMLButtonElement;
      const saveBtn = commentEl.querySelector('.comment-btn.save') as HTMLButtonElement;
      const cancelBtn = commentEl.querySelector('.comment-btn.cancel') as HTMLButtonElement;

      if (acceptBtn) acceptBtn.style.display = 'none';
      if (rejectBtn) rejectBtn.style.display = 'none';
      if (modifyBtn) modifyBtn.style.display = 'none';
      if (saveBtn) saveBtn.style.display = 'inline-block';
      if (cancelBtn) cancelBtn.style.display = 'inline-block';

      textarea.focus();
    }
  }

  saveComment(commentId: string): void {
    const commentEl = document.getElementById(commentId);
    if (!commentEl) return;

    const displayText = commentEl.querySelector('.comment-text-display') as HTMLElement;
    const textarea = commentEl.querySelector('.comment-text-input') as HTMLTextAreaElement;

    if (displayText && textarea) {
      displayText.textContent = textarea.value;
      displayText.style.display = 'block';
      textarea.style.display = 'none';

      const acceptBtn = commentEl.querySelector('.comment-btn.accept') as HTMLButtonElement;
      const rejectBtn = commentEl.querySelector('.comment-btn.reject') as HTMLButtonElement;
      const modifyBtn = commentEl.querySelector('.comment-btn.modify') as HTMLButtonElement;
      const saveBtn = commentEl.querySelector('.comment-btn.save') as HTMLButtonElement;
      const cancelBtn = commentEl.querySelector('.comment-btn.cancel') as HTMLButtonElement;

      if (acceptBtn) acceptBtn.style.display = 'inline-block';
      if (rejectBtn) rejectBtn.style.display = 'inline-block';
      if (modifyBtn) modifyBtn.style.display = 'inline-block';
      if (saveBtn) saveBtn.style.display = 'none';
      if (cancelBtn) cancelBtn.style.display = 'none';

      const filePath = commentEl.dataset['filePath'] || '';
      const line = parseInt(commentEl.dataset['line'] || '0');
      const side = commentEl.dataset['side'] as 'TO' | 'FROM';
      const status = commentEl.dataset['status'] as 'pending' | 'accepted' | 'rejected';
      
      this.saveCommentState(filePath, line, side, status, textarea.value);
    }
  }

  cancelModify(commentId: string): void {
    const commentEl = document.getElementById(commentId);
    if (!commentEl) return;

    const displayText = commentEl.querySelector('.comment-text-display') as HTMLElement;
    const textarea = commentEl.querySelector('.comment-text-input') as HTMLTextAreaElement;

    if (displayText && textarea) {
      textarea.value = displayText.textContent || '';
      displayText.style.display = 'block';
      textarea.style.display = 'none';

      const acceptBtn = commentEl.querySelector('.comment-btn.accept') as HTMLButtonElement;
      const rejectBtn = commentEl.querySelector('.comment-btn.reject') as HTMLButtonElement;
      const modifyBtn = commentEl.querySelector('.comment-btn.modify') as HTMLButtonElement;
      const saveBtn = commentEl.querySelector('.comment-btn.save') as HTMLButtonElement;
      const cancelBtn = commentEl.querySelector('.comment-btn.cancel') as HTMLButtonElement;

      if (acceptBtn) acceptBtn.style.display = 'inline-block';
      if (rejectBtn) rejectBtn.style.display = 'inline-block';
      if (modifyBtn) modifyBtn.style.display = 'inline-block';
      if (saveBtn) saveBtn.style.display = 'none';
      if (cancelBtn) cancelBtn.style.display = 'none';
    }
  }

  disableActionButtons(commentEl: HTMLElement): void {
    const acceptBtn = commentEl.querySelector('.comment-btn.accept') as HTMLButtonElement;
    const rejectBtn = commentEl.querySelector('.comment-btn.reject') as HTMLButtonElement;
    const modifyBtn = commentEl.querySelector('.comment-btn.modify') as HTMLButtonElement;

    if (acceptBtn) acceptBtn.disabled = true;
    if (rejectBtn) rejectBtn.disabled = true;
    if (modifyBtn) modifyBtn.disabled = true;
  }

  getCommentKey(filePath: string, line: number, side: string): string {
    return `${filePath}-${line}-${side}`;
  }

  saveCommentState(filePath: string, line: number, side: string, status: 'pending' | 'accepted' | 'rejected', modifiedText: string): void {
    const key = this.getCommentKey(filePath, line, side);
    this.commentStates[key] = {
      status: status,
      modifiedText: modifiedText
    };
  }

  getCommentState(filePath: string, line: number, side: string): CommentState {
    const key = this.getCommentKey(filePath, line, side);
    return this.commentStates[key] || { status: 'pending', modifiedText: null };
  }

  exportCommentData(): void {
    const data = this.getCommentStatuses();
    const acceptedCount = data.filter(d => d.status === 'accepted').length;
    const rejectedCount = data.filter(d => d.status === 'rejected').length;
    const pendingCount = data.filter(d => d.status === 'pending').length;
    
    const jsonStr = JSON.stringify(data, null, 2);
    const blob = new Blob([jsonStr], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'comment-review-results.json';
    a.click();
    URL.revokeObjectURL(url);
    
    alert(`Comment data exported!\n\nTotal: ${data.length}\nAccepted: ${acceptedCount}\nRejected: ${rejectedCount}\nPending: ${pendingCount}\n\nFile downloaded: comment-review-results.json`);
  }

  getCommentStatuses(): any[] {
    const statuses: any[] = [];
    
    for (const key in this.commentStates) {
      const state = this.commentStates[key];
      const [filePath, lineStr, side] = key.split('-');
      const line = parseInt(lineStr);
      
      const file = this.diffData.files.find(f => f.file_path === filePath);
      if (file) {
        const comment = file.ai_comments.find(c => 
          c.line === line && c.side === side
        );
        
        if (comment) {
          statuses.push({
            file: filePath,
            line: line,
            side: side,
            status: state.status,
            originalText: comment.comment_text,
            modifiedText: state.modifiedText,
            severity: comment.severity,
            suggestedPatch: comment.suggested_patch
          });
        }
      }
    }

    return statuses;
  }

  escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
}























