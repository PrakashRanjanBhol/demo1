  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.yourcompany.angularlauncher",
    "productName": "My Angular App",
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "include": "build/installer.nsh"
    }
  },
  "dependencies": {
    "electron": "^31.0.0"
  },
  "devDependencies": {
    "electron-builder": "^25.0.0"
  }
}









!macro customInstall
  ; Registry entry for context menu: "Open in Browser"
  WriteRegStr HKCU "Software\\Classes\\Applications\\${PRODUCT_FILENAME}\\shell\\OpenInBrowser" "" "Open in Browser"
  WriteRegStr HKCU "Software\\Classes\\Applications\\${PRODUCT_FILENAME}\\shell\\OpenInBrowser\\command" "" 'cmd.exe /C start "" "http://localhost:4200"'
!macroend

!macro customUnInstall
  ; Clean up registry on uninstall
  DeleteRegKey HKCU "Software\\Classes\\Applications\\${PRODUCT_FILENAME}\\shell\\OpenInBrowser\\command"
  DeleteRegKey HKCU "Software\\Classes\\Applications\\${PRODUCT_FILENAME}\\shell\\OpenInBrowser"
!macroend










