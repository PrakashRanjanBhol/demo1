/* app.component.css - Add these styles for logout button */

/* Logout Button */
.logout-btn {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.logout-btn svg {
    width: 18px;
    height: 18px;
    color: var(--text-muted);
    transition: all 0.3s ease;
}

.logout-btn:hover {
    background: rgba(239, 68, 68, 0.1);
    border-color: #ef4444;
}

.logout-btn:hover svg {
    color: #ef4444;
}

.logout-btn:active {
    transform: scale(0.95);
}

/* Adjust footer actions to accommodate logout button */
.footer-actions {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
}

.footer-user {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 12px;
    min-width: 0; /* Allow text truncation */
}

.footer-name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* When sidebar is collapsed, hide logout button text */
.sidebar.collapsed .logout-btn {
    width: 36px;
}

/* Tooltip for logout button when collapsed */
