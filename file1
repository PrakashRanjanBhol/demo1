<div *ngIf="show" class="notification-container" [ngClass]="type">
  <div class="notification-content">
    <div class="icon-wrapper">
      <i class="icon" [class]="getIcon()"></i>
    </div>
    <span class="message">{{ message }}</span>
    <button class="close-btn" (click)="close()" aria-label="Close notification">
      <i class="pi pi-times"></i>
    </button>
  </div>
  <div class="progress-bar"></div>
</div>







.notification-container {
  position: fixed;
  bottom: 24px;
  right: 24px;
  min-width: 320px;
  max-width: 450px;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12), 
              0 2px 8px rgba(0, 0, 0, 0.08);
  animation: slideInBounce 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  z-index: 9999;
  backdrop-filter: blur(10px);
}

.notification-content {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 16px 20px;
  position: relative;
}

/* Icon Wrapper with Circle Background */
.icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  flex-shrink: 0;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
}

.icon {
  font-size: 20px;
  color: #ffffff;
}

/* Message Text */
.message {
  flex: 1;
  font-size: 14px;
  font-weight: 500;
  line-height: 1.5;
  color: #ffffff;
  letter-spacing: 0.01em;
}

/* Close Button */
.close-btn {
  background: rgba(255, 255, 255, 0.15);
  border: none;
  cursor: pointer;
  padding: 6px;
  width: 28px;
  height: 28px;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.close-btn:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(1.05);
}

.close-btn:active {
  transform: scale(0.95);
}

.close-btn i {
  font-size: 14px;
  color: #ffffff;
}

/* Progress Bar */
.progress-bar {
  height: 3px;
  background: rgba(255, 255, 255, 0.3);
  width: 100%;
  position: relative;
  overflow: hidden;
}

.progress-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(255, 255, 255, 0.9);
  animation: progressShrink 3s linear forwards;
}

/* Notification Types with Modern Gradients */
.success {
  background: linear-gradient(135deg, #43a047 0%, #2e7d32 100%);
}

.success .icon-wrapper {
  box-shadow: 0 0 20px rgba(67, 160, 71, 0.4);
}

.error {
  background: linear-gradient(135deg, #e53935 0%, #c62828 100%);
}

.error .icon-wrapper {
  box-shadow: 0 0 20px rgba(229, 57, 53, 0.4);
}

.info {
  background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%);
}

.info .icon-wrapper {
  box-shadow: 0 0 20px rgba(30, 136, 229, 0.4);
}

.warning {
  background: linear-gradient(135deg, #ffa726 0%, #f57c00 100%);
}

.warning .message,
.warning .close-btn i,
.warning .icon {
  color: #ffffff;
}

.warning .icon-wrapper {
  box-shadow: 0 0 20px rgba(255, 167, 38, 0.4);
}

/* Animations */
@keyframes slideInBounce {
  0% {
    opacity: 0;
    transform: translateY(30px) scale(0.95);
  }
  50% {
    transform: translateY(-5px) scale(1.01);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes progressShrink {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-100%);
  }
}

/* Responsive Design */
@media (max-width: 600px) {
  .notification-container {
    bottom: 16px;
    right: 16px;
    left: 16px;
    min-width: auto;
    max-width: none;
  }
}

/* Add exit animation support */
.notification-container.hiding {
  animation: slideOut 0.3s ease-in forwards;
}

@keyframes slideOut {
  from {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  to {
    opacity: 0;
    transform: translateY(20px) scale(0.95);
  }
}
