<body>
    <div class="container">
        <h1>ðŸŽ¨ UI Mockup Generator</h1>
        
        <div class="controls">
            <button class="generate-btn" onclick="generateUI()">Generate UI</button>
            <button class="clear-btn" onclick="clearCanvas()">Clear Canvas</button>
            <button class="export-btn" onclick="exportPNG()">Export PNG</button>
        </div>

        <div class="canvas-wrapper">
            <canvas id="canvas" width="800" height="600"></canvas>
        </div>

        <div class="json-editor">
            <h3>Edit JSON Layout (modify and click Generate UI):</h3>
            <textarea id="jsonInput"></textarea>
        </div>
    </div>

    <script>
        const canvas = new fabric.Canvas('canvas', {
            backgroundColor: '#ffffff'
        });

        // Sample JSON - Replace this with your own layouts
        const sampleLayout = {
            "elements": [
                {
                    "type": "text",
                    "x": 300,
                    "y": 50,
                    "text": "Login Page",
                    "fontSize": 32,
                    "fill": "#333333"
                },
                {
                    "type": "text",
                    "x": 250,
                    "y": 150,
                    "text": "Username:",
                    "fontSize": 16,
                    "fill": "#666666"
                },
                {
                    "type": "rectangle",
                    "x": 250,
                    "y": 180,
                    "width": 300,
                    "height": 40,
                    "fill": "#f5f5f5",
                    "stroke": "#cccccc",
                    "strokeWidth": 1,
                    "rx": 5,
                    "ry": 5
                },
                {
                    "type": "text",
                    "x": 250,
                    "y": 240,
                    "text": "Password:",
                    "fontSize": 16,
                    "fill": "#666666"
                },
                {
                    "type": "rectangle",
                    "x": 250,
                    "y": 270,
                    "width": 300,
                    "height": 40,
                    "fill": "#f5f5f5",
                    "stroke": "#cccccc",
                    "strokeWidth": 1,
                    "rx": 5,
                    "ry": 5
                },
                {
                    "type": "button",
                    "x": 250,
                    "y": 340,
                    "width": 300,
                    "height": 45,
                    "fill": "#2196F3",
                    "text": "Login",
                    "fontSize": 18,
                    "rx": 5,
                    "ry": 5
                }
            ]
        };

        // Load sample JSON into textarea
        document.getElementById('jsonInput').value = JSON.stringify(sampleLayout, null, 2);

        function generateUI() {
            try {
                const jsonText = document.getElementById('jsonInput').value;
                const layoutData = JSON.parse(jsonText);
                renderMockup(layoutData);
            } catch (error) {
                alert('Invalid JSON: ' + error.message);
            }
        }

        function renderMockup(layoutData) {
            canvas.clear();
            canvas.backgroundColor = '#ffffff';

            layoutData.elements.forEach(element => {
                let fabricObject;

                switch (element.type) {
                    case 'rectangle':
                        fabricObject = new fabric.Rect({
                            left: element.x,
                            top: element.y,
                            width: element.width,
                            height: element.height,
                            fill: element.fill || '#e0e0e0',
                            rx: element.rx || 0,
                            ry: element.ry || 0,
                            stroke: element.stroke || '#cccccc',
                            strokeWidth: element.strokeWidth || 1
                        });
                        break;

                    case 'text':
                        fabricObject = new fabric.Text(element.text || 'Text', {
                            left: element.x,
                            top: element.y,
                            fontSize: element.fontSize || 16,
                            fill: element.fill || '#000000'
                        });
                        break;

                    case 'circle':
                        fabricObject = new fabric.Circle({
                            left: element.x,
                            top: element.y,
                            radius: element.radius || 30,
                            fill: element.fill || '#4CAF50',
                            stroke: element.stroke || '#cccccc',
                            strokeWidth: element.strokeWidth || 1
                        });
                        break;

                    case 'button':
                        const buttonRect = new fabric.Rect({
                            width: element.width,
                            height: element.height,
                            fill: element.fill || '#2196F3',
                            rx: element.rx || 5,
                            ry: element.ry || 5
                        });

                        const buttonText = new fabric.Text(element.text || 'Button', {
                            fontSize: element.fontSize || 16,
                            fill: '#ffffff'
                        });

                        fabricObject = new fabric.Group([buttonRect, buttonText], {
                            left: element.x,
                            top: element.y
                        });
                        break;
                }

                if (fabricObject) {
                    canvas.add(fabricObject);
                }
            });

            canvas.renderAll();
        }

        function clearCanvas() {
            canvas.clear();
            canvas.backgroundColor = '#ffffff';
            canvas.renderAll();
        }

        function exportPNG() {
            const dataURL = canvas.toDataURL({
                format: 'png',
                quality: 1
            });
            const link = document.createElement('a');
            link.download = 'ui-mockup.png';
            link.href = dataURL;
            link.click();
        }

        // Generate initial UI
        generateUI();
    </script>
</body>
</html>
