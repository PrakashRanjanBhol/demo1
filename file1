  font-family: 'Poppins', sans-serif;
}

.header {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.85rem;
  font-weight: 600;
  color: #444;
  margin-bottom: 6px;
}

.messageBody {
  font-size: 0.95rem;
