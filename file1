  position: relative;
  display: flex;
  justify-content: space-between;
  background: #1c1c1c;
  border-radius: 10px;
  padding: 4px;
  overflow: hidden;
  border: 1px solid #2c2c2c;
  box-shadow: inset 0 0 0 1px #1e1e1e;
}

.tab-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  padding: 10px 0;
  font-size: 0.8rem;
  font-weight: 600;
  color: #bbb;
  cursor: pointer;
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
  border-radius: 8px;
}

.tab-button i {
  font-size: 0.9rem;
  color: inherit;
