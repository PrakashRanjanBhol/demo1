import { Component, OnInit } from '@angular/core';
import { DomSanitizer, SafeHtml } from '@angular/platform-browser';
import { marked } from 'marked';

@Component({
  selector: 'app-ticket-details',
  templateUrl: './ticket-details.component.html',
  styleUrls: ['./ticket-details.component.scss']
})
export class TicketDetailsComponent implements OnInit {

  ticket = {
    id: 'PROJ-1234',
    title: 'Implement user authentication system with OAuth 2.0',
    description: `We need to implement a secure authentication system that supports OAuth 2.0 integration with major providers including Google, GitHub, and Microsoft.

**Requirements:**

- Support for multiple OAuth providers
- Secure token storage and refresh mechanism
- Session management with Redis
- User profile synchronization`,
    requirements: [
      'Support for multiple OAuth providers',
      'Secure token storage and refresh mechanism',
      'Session management with Redis',
      'User profile synchronization'
    ]
  };

  descriptionHtml: SafeHtml = '';

  constructor(private sanitizer: DomSanitizer) {}

  ngOnInit(): void {
    this.parseMarkdown();
  }

  async parseMarkdown(): Promise<void> {
    const html = await marked.parse(this.ticket.description);
    this.descriptionHtml = this.sanitizer.sanitize(1, html) || '';
  }

  onDelete(): void {
    console.log('Delete action triggered:', this.ticket);
    // Add your delete logic here
  }

  onUpload(): void {
    console.log('Upload action triggered:', this.ticket);
    // Add your upload logic here
  }

  onEnhance(): void {
    console.log('Enhance action triggered:', this.ticket);
    // Add your enhance logic here
  }
}










