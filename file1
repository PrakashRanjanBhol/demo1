export class WorkflowSidebarComponent implements OnInit, OnDestroy {
  // ... existing properties and methods ...

  // Add getter to check if filtered results are empty
  get hasMyWorkflowsSearchResults(): boolean {
    return this.getFilteredMyWorkflows().length > 0;
  }

  // ... rest of existing methods ...
}









<div class="section-content" [class.collapsed]="myWorkflowsCollapsed">
  <div class="search-container">
    <div class="search-input-wrapper">
      <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" 
        stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <input type="text" class="search-input" placeholder="Search workflows..." [(ngModel)]="myWorkflowsSearchTerm">
    </div>
  </div>

  <!-- Show workflows list when there are results -->
  <div *ngIf="hasMyWorkflowsSearchResults">
    <div *ngFor="let workflow of getFilteredMyWorkflows(); trackBy: trackByWorkflowId; let i = index" class="workflow-item"
      [class.active]="workflow.id === activeWorkflowId" (click)="selectWorkflow(workflow.id)">
      <!-- ... existing workflow item content ... -->
    </div>
  </div>

  <!-- Show empty search message when no results -->
  <div *ngIf="!hasMyWorkflowsSearchResults && myWorkflowsSearchTerm" class="empty-search-state">
    <div class="empty-search-icon">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
        stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
    </div>
    <div class="empty-search-title">No workflows found</div>
    <div class="empty-search-description">Try adjusting your search term</div>
  </div>
</div>







