import { Component, OnInit, OnDestroy } from '@angular/core';
import { AuthService } from '../services/auth.service';
import { Router, NavigationEnd } from '@angular/router';
import { Subscription } from 'rxjs';
import { filter } from 'rxjs/operators';

@Component({
  selector: 'app-sso-authenticating-overlay',
  templateUrl: './sso-authenticating-overlay.component.html',
  styleUrls: ['./sso-authenticating-overlay.component.css']
})
export class SsoAuthenticatingOverlayComponent implements OnInit, OnDestroy {
  isAuthenticating: boolean = true; // Changed to true by default
  private userSubscription?: Subscription;
  private routerSubscription?: Subscription;

  constructor(
    private authService: AuthService,
    private router: Router
  ) {}

  ngOnInit(): void {
    // Show overlay by default (SSO authentication in progress)
    this.isAuthenticating = true;

    // Listen for authentication success
    this.userSubscription = this.authService.currentUser.subscribe(
      (user) => {
        if (user) {
          // User logged in successfully, show overlay briefly then hide
          setTimeout(() => {
            this.isAuthenticating = false;
          }, 1000);
        }
      }
    );

    // Hide overlay when navigating to sso-connect page
    this.routerSubscription = this.router.events.pipe(
      filter(event => event instanceof NavigationEnd)
    ).subscribe((event: any) => {
      if (event.url.includes('/sso-connect')) {
        this.isAuthenticating = false;
      }
    });
  }

  ngOnDestroy(): void {
    if (this.userSubscription) {
      this.userSubscription.unsubscribe();
    }
    if (this.routerSubscription) {
      this.routerSubscription.unsubscribe();
    }
  }
}
