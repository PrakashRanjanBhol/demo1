// Copy format dropdown state for assessment questions
showCopyFormatDropdown: { [key: string]: boolean } = {};



/**
 * Toggle copy format dropdown
 */
toggleCopyFormatDropdown(itemId: string, event: Event): void {
  event.stopPropagation();
  this.showCopyFormatDropdown[itemId] = !this.showCopyFormatDropdown[itemId];
}

/**
 * Close all copy format dropdowns
 */
closeCopyFormatDropdowns(): void {
  this.showCopyFormatDropdown = {};
}

/**
 * Copy assessment in specific format
 */
copyAssessmentInFormat(format: 'json' | 'readable' | 'html', itemId: string, event: Event): void {
  event.stopPropagation();
  
  let contentToCopy = '';
  
  switch (format) {
    case 'json':
      contentToCopy = this.formatAssessmentAsJSON();
      break;
    case 'readable':
      contentToCopy = this.formatAssessmentQuestionsForCopy();
      break;
    case 'html':
      contentToCopy = this.formatAssessmentAsHTML();
      break;
  }
  
  // Copy to clipboard
  const textArea = document.createElement('textarea');
  textArea.value = contentToCopy;
  textArea.style.position = 'fixed';
  textArea.style.top = '0';
  textArea.style.left = '0';
  textArea.style.width = '2em';
  textArea.style.height = '2em';
  textArea.style.padding = '0';
  textArea.style.border = 'none';
  textArea.style.outline = 'none';
  textArea.style.boxShadow = 'none';
  textArea.style.background = 'transparent';
  textArea.style.opacity = '0';
  
  document.body.appendChild(textArea);
  textArea.focus();
  textArea.select();
  
  try {
    const successful = document.execCommand('copy');
    if (successful) {
      console.log(`Content copied as ${format}`);
      
      // Show tick icon
      this.copiedItemId = itemId;
      
      // Close dropdown
      this.closeCopyFormatDropdowns();
      
      // Reset after 1.5 seconds
      setTimeout(() => {
        this.copiedItemId = '';
      }, 1500);
    }
  } catch (err) {
    console.error('Failed to copy content:', err);
  }
  
  document.body.removeChild(textArea);
}

/**
 * Format assessment as JSON
 */
private formatAssessmentAsJSON(): string {
  try {
    const parsedFaq = typeof this.faqRawData === 'string' ? eval(this.faqRawData) : this.faqRawData;
    return JSON.stringify(parsedFaq, null, 2);
  } catch (error) {
    console.error('Error formatting as JSON:', error);
    return '[]';
  }
}

/**
 * Format assessment as HTML
 */
private formatAssessmentAsHTML(): string {
  try {
    const parsedFaq = typeof this.faqRawData === 'string' ? eval(this.faqRawData) : this.faqRawData;
    
    if (!Array.isArray(parsedFaq) || parsedFaq.length === 0) {
      return '<p>No assessment questions available</p>';
    }

    let html = `<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assessment Questions</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            max-width: 900px;
            margin: 40px auto;
            padding: 20px;
            background: #f8f9fa;
            color: #333;
        }
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 3px solid #8b5cf6;
        }
        .header h1 {
            color: #8b5cf6;
            margin: 0 0 10px 0;
        }
        .question-card {
            background: white;
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 24px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-left: 4px solid #8b5cf6;
        }
        .question-header {
            display: flex;
            gap: 12px;
            margin-bottom: 16px;
        }
        .question-number {
            background: linear-gradient(135deg, #8b5cf6, #a78bfa);
            color: white;
            width: 36px;
            height: 36px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            flex-shrink: 0;
        }
        .question-text {
            flex: 1;
            font-size: 18px;
            font-weight: 600;
            color: #1f2937;
            padding-top: 6px;
        }
        .options {
            margin: 16px 0;
            padding-left: 48px;
        }
        .option {
            padding: 12px;
            margin: 8px 0;
            border-radius: 8px;
            border: 1px solid #e5e7eb;
            background: #f9fafb;
        }
        .option.correct {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.05));
            border-color: #10b981;
        }
        .option-label {
            font-weight: bold;
            color: #8b5cf6;
            margin-right: 8px;
        }
        .option.correct .option-label {
            color: #10b981;
        }
        .correct-badge {
            display: inline-block;
            background: #10b981;
            color: white;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 12px;
            margin-left: 8px;
        }
        .answer-section {
            margin: 16px 0 0 48px;
            padding: 16px;
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.08), rgba(16, 185, 129, 0.05));
            border-left: 3px solid #10b981;
            border-radius: 0 8px 8px 0;
        }
        .answer-label {
            font-weight: bold;
            color: #10b981;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 6px;
        }
        .answer-value {
            color: #1f2937;
            font-weight: 600;
        }
        .explanation-section {
            margin: 16px 0 0 48px;
            padding: 16px;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.08), rgba(167, 139, 250, 0.05));
            border-left: 3px solid #8b5cf6;
            border-radius: 0 8px 8px 0;
        }
        .explanation-label {
            font-weight: bold;
            color: #8b5cf6;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 6px;
        }
        .explanation-text {
            color: #4b5563;
            line-height: 1.6;
        }
        .footer {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 2px solid #e5e7eb;
            color: #6b7280;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Assessment Questions</h1>
        <p>Total Questions: ${parsedFaq.length}</p>
    </div>
`;

    parsedFaq.forEach((question: AssessmentQuestion, index: number) => {
      const optionKeys = Object.keys(question.options);
      
      html += `
    <div class="question-card">
        <div class="question-header">
            <div class="question-number">Q${index + 1}</div>
            <div class="question-text">${this.escapeHtml(question.question)}</div>
        </div>
        
        <div class="options">
`;
      
      optionKeys.forEach(key => {
        const optionValue = question.options[key as keyof MCQOption];
        const isCorrect = question.correct_answer === key;
        
        html += `
            <div class="option${isCorrect ? ' correct' : ''}">
                <span class="option-label">${key}.</span>
                ${this.escapeHtml(optionValue)}
                ${isCorrect ? '<span class="correct-badge">âœ“ Correct</span>' : ''}
            </div>
`;
      });
      
      const correctOptionValue = question.options[question.correct_answer as keyof MCQOption];
      
      html += `
        </div>
        
        <div class="answer-section">
            <div class="answer-label">Correct Answer</div>
            <div class="answer-value">${question.correct_answer} - ${this.escapeHtml(correctOptionValue)}</div>
        </div>
        
        <div class="explanation-section">
            <div class="explanation-label">Explanation</div>
            <div class="explanation-text">${this.escapeHtml(question.explanation)}</div>
        </div>
    </div>
`;
    });

    html += `
    <div class="footer">
        <p>Generated Assessment Questions</p>
    </div>
</body>
</html>`;

    return html;
  } catch (error) {
    console.error('Error formatting as HTML:', error);
    return '<p>Error formatting questions</p>';
  }
}

/**
 * Escape HTML special characters
 */
private escapeHtml(text: string): string {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;
}













