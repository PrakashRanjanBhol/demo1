import { Component, OnInit } from '@angular/core';
import { CommonModule } from '@angular/common';

interface TicketData {
  jira_ticket: string | null;
  title: string;
  description: string;
  created_date?: string;
  status?: string;
}

@Component({
  selector: 'app-ticket-details',
  standalone: true,
  imports: [CommonModule],
  templateUrl: './ticket-details.component.html',
  styleUrls: ['./ticket-details.component.css']
})
export class TicketDetailsComponent implements OnInit {
  ticketData: TicketData = {
    jira_ticket: 'PROJ-1234',
    title: 'Implement user authentication feature',
    description: `Need to implement a secure user authentication system with the following requirements:

- Email and password-based login
- JWT token generation and validation
- Password encryption using bcrypt
- Session management
- Password reset functionality
- Rate limiting for login attempts

This is a critical feature for the upcoming release and should be prioritized accordingly.`,
    created_date: 'Oct 15, 2025',
    status: 'Open'
  };

  isDraft = false;

  ngOnInit(): void {
    this.isDraft = !this.ticketData.jira_ticket;
  }

  deleteTicket(): void {
    if (confirm('Are you sure you want to delete this ticket?')) {
      alert('Ticket deleted!');
      // Implement actual delete logic here
    }
  }

  enhanceTicket(): void {
    alert('Enhance ticket functionality');
    // Implement actual enhance logic here
  }

  uploadTicket(): void {
    alert('Upload ticket to Jira');
    // Implement actual upload logic here
  }
}











