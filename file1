<div
    className={styles.spaceLabel}
    title={space.name}
    onClick={() =>
        setExpandedSpace(expandedSpace === space.key ? null : space.key)
    }
>
    <input
        type="checkbox"
        checked={selectedSpaces.includes(space.key)}
        onChange={(e) => {
            e.stopPropagation();
            toggleSpaceSelection(space.key);
        }}
        onClick={(e) => e.stopPropagation()}
    />
    <span className={styles.spaceName}>{space.name}</span>
</div>
