.add-to-generation-btn.added:hover .minus-icon {
    opacity: 0;
    transform: translateX(8px);
    stroke: white;
}

.add-to-generation-btn.added:hover .arrow-right-icon {
    opacity: 1;
    transform: translateX(0);
    stroke: white;
}

