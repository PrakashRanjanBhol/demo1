onFileToggle(file: FileNode) {
  if (!file.selected) {
    // Deselect all other files
    this.selectedFiles.forEach(f => f.selected = false);
    this.selectedFiles = [];

    // Select the clicked file
    file.selected = true;
    this.selectedFiles.push(file);
  } else {
    // Deselect the same file
    file.selected = false;
    this.selectedFiles = [];
  }
}
