// Update the interface:
interface ArtifactVersion {
  version: number;
}

// Update the loadArtifactVersions method:
loadArtifactVersions(artifact: string): void {
  this.loadingVersions = true;
  // Replace with your actual API endpoint - use artifact name in URL
  const apiUrl = `https://your-api.com/artifacts/${encodeURIComponent(artifact)}/versions`;
  
  this.http.get<number[]>(apiUrl).subscribe({
    next: (versions) => {
      this.artifactVersions = versions.map(v => ({ version: v }));
      this.loadingVersions = false;
    },
    error: (error) => {
      console.error('Error loading artifact versions:', error);
      this.loadingVersions = false;
      // Mock data for demonstration
      this.artifactVersions = [0, 1, 2].map(v => ({ version: v }));
    }
  });
}

// Update the downloadArtifact method:
downloadArtifact(artifactName: string, version: ArtifactVersion): void {
  // Replace with your actual download endpoint
  const downloadUrl = `https://your-api.com/artifacts/${encodeURIComponent(artifactName)}/versions/${version.version}/download`;
  window.open(downloadUrl, '_blank');
}








<!-- Update the versions list section: -->
<div *ngIf="!loadingVersions && artifactVersions.length > 0" class="versions-list">
  <div class="version-item" *ngFor="let version of artifactVersions">
    <div class="version-info">
      <span class="version-name">Version {{ version.version }}</span>
    </div>
    <button class="download-btn" (click)="downloadArtifact(artifact, version); $event.stopPropagation()">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
      </svg>
    </button>
  </div>
</div>







/* Update .version-info to remove flex-direction since we only have one line now: */
.version-info {
    display: flex;
    align-items: center;
}

