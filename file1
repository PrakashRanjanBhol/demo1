.regular-text {
  /* Light mode variables */
  --playground-markdown-bg: #FFF;
  --playground-markdown-text: #1a1a1a;
  --playground-markdown-text-secondary: #666;
  --playground-markdown-border: #e5e5ea;
  --playground-markdown-code-bg: #f5f5f7;
  --playground-markdown-theme: #8b5cf6;
  --playground-markdown-theme-light: #a78bfa;
  --playground-markdown-theme-dark: #7c3aed;
  --playground-markdown-link: #8b5cf6;
  --playground-markdown-link-hover: #7c3aed;
  --playground-markdown-blockquote-border: #8b5cf6;
  --playground-markdown-table-header-bg: #f9fafb;
  --playground-markdown-table-row-hover: #f5f5f7;
}

@media (prefers-color-scheme: dark) {
  .regular-text {
    --playground-markdown-bg: #0a0a0b;
    --playground-markdown-text: #e5e5e5;
    --playground-markdown-text-secondary: #a0a0a0;
    --playground-markdown-border: #2a2a2b;
    --playground-markdown-code-bg: #1a1a1b;
    --playground-markdown-theme: #a78bfa;
    --playground-markdown-theme-light: #c4b5fd;
    --playground-markdown-theme-dark: #8b5cf6;
    --playground-markdown-link: #a78bfa;
    --playground-markdown-link-hover: #c4b5fd;
    --playground-markdown-blockquote-border: #8b5cf6;
    --playground-markdown-table-header-bg: #1a1a1b;
    --playground-markdown-table-row-hover: #1f1f20;
  }
}

/* Headings */
.regular-text h1,
.regular-text h2,
.regular-text h3,
.regular-text h4,
.regular-text h5,
.regular-text h6 {
  color: var(--playground-markdown-text);
  font-weight: 600;
  line-height: 1.3;
  margin-top: 1.5em;
  margin-bottom: 0.5em;
}

.regular-text h1 {
  font-size: 2.25rem;
  font-weight: 700;
  border-bottom: 2px solid var(--playground-markdown-theme);
  padding-bottom: 0.3em;
  margin-top: 0;
}

.regular-text h2 {
  font-size: 1.875rem;
  border-bottom: 1px solid var(--playground-markdown-border);
  padding-bottom: 0.3em;
}

.regular-text h3 {
  font-size: 1.5rem;
  color: var(--playground-markdown-theme);
}

.regular-text h4 {
  font-size: 1.25rem;
}

.regular-text h5 {
  font-size: 1.125rem;
}

.regular-text h6 {
  font-size: 1rem;
  color: var(--playground-markdown-text-secondary);
}

/* Paragraphs */
.regular-text p {
  color: var(--playground-markdown-text);
  line-height: 1.7;
  margin: 1em 0;
}

/* Links */
.regular-text a {
  color: var(--playground-markdown-link);
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: all 0.2s ease;
}

.regular-text a:hover {
  color: var(--playground-markdown-link-hover);
  border-bottom-color: var(--playground-markdown-link-hover);
}

/* Strong/Bold */
.regular-text strong,
.regular-text b {
  font-weight: 600;
  color: var(--playground-markdown-text);
}

/* Emphasis/Italic */
.regular-text em,
.regular-text i {
  font-style: italic;
  color: var(--playground-markdown-text);
}

/* Lists */
.regular-text ul,
.regular-text ol {
  color: var(--playground-markdown-text);
  line-height: 1.7;
  margin: 1em 0;
  padding-left: 2em;
}

.regular-text ul {
  list-style-type: disc;
}

.regular-text ol {
  list-style-type: decimal;
}

.regular-text li {
  margin: 0.5em 0;
}

.regular-text li::marker {
  color: var(--playground-markdown-theme);
}

.regular-text ul ul,
.regular-text ol ol,
.regular-text ul ol,
.regular-text ol ul {
  margin: 0.25em 0;
}

/* Nested list styles */
.regular-text ul ul {
  list-style-type: circle;
}

.regular-text ul ul ul {
  list-style-type: square;
}

/* Blockquotes */
.regular-text blockquote {
  border-left: 4px solid var(--playground-markdown-blockquote-border);
  padding-left: 1em;
  margin: 1.5em 0;
  color: var(--playground-markdown-text-secondary);
  font-style: italic;
  background: var(--playground-markdown-code-bg);
  padding: 1em 1em 1em 1.5em;
  border-radius: 0 4px 4px 0;
}

.regular-text blockquote p {
  margin: 0.5em 0;
}

/* Code */
.regular-text code {
  background: var(--playground-markdown-code-bg);
  color: var(--playground-markdown-theme);
  padding: 0.2em 0.4em;
  border-radius: 3px;
  font-family: 'Monaco', 'Menlo', 'Consolas', monospace;
  font-size: 0.9em;
}

.regular-text pre {
  background: var(--playground-markdown-code-bg);
  border: 1px solid var(--playground-markdown-border);
  border-radius: 6px;
  padding: 1em;
  overflow-x: auto;
  margin: 1.5em 0;
}

.regular-text pre code {
  background: transparent;
  padding: 0;
  color: var(--playground-markdown-text);
  font-size: 0.875rem;
}

/* Horizontal Rule */
.regular-text hr {
  border: none;
  height: 2px;
  margin: 2rem 0;
  background: linear-gradient(
    to right,
    transparent,
    var(--playground-markdown-border),
    transparent
  );
  opacity: 0.6;
}

/* Tables */
.regular-text table {
  width: 100%;
  border-collapse: collapse;
  margin: 1.5em 0;
  background: var(--playground-markdown-bg);
  border: 1px solid var(--playground-markdown-border);
  border-radius: 6px;
  overflow: hidden;
}

.regular-text thead {
  background: var(--playground-markdown-table-header-bg);
}

.regular-text th {
  color: var(--playground-markdown-text);
  font-weight: 600;
  text-align: left;
  padding: 0.75em 1em;
  border-bottom: 2px solid var(--playground-markdown-theme);
}

.regular-text td {
  color: var(--playground-markdown-text);
  padding: 0.75em 1em;
  border-bottom: 1px solid var(--playground-markdown-border);
}

.regular-text tbody tr:last-child td {
  border-bottom: none;
}

.regular-text tbody tr:hover {
  background: var(--playground-markdown-table-row-hover);
}

.regular-text tbody tr {
  transition: background-color 0.2s ease;
}

/* Images */
.regular-text img {
  max-width: 100%;
  height: auto;
  border-radius: 6px;
  margin: 1.5em 0;
}

/* Strikethrough */
.regular-text del,
.regular-text s {
  text-decoration: line-through;
  color: var(--playground-markdown-text-secondary);
}

/* Task Lists */
.regular-text input[type="checkbox"] {
  margin-right: 0.5em;
  accent-color: var(--playground-markdown-theme);
}

/* Dividers between sections */
.regular-text > *:first-child {
  margin-top: 0;
}

.regular-text > *:last-child {
  margin-bottom: 0;
}

/* Definition Lists */
.regular-text dl {
  margin: 1em 0;
}

.regular-text dt {
  font-weight: 600;
  color: var(--playground-markdown-text);
  margin-top: 1em;
}

.regular-text dd {
  margin-left: 2em;
  margin-top: 0.5em;
  color: var(--playground-markdown-text-secondary);
}

/* Keyboard keys */
.regular-text kbd {
  background: var(--playground-markdown-code-bg);
  border: 1px solid var(--playground-markdown-border);
  border-radius: 3px;
  padding: 0.1em 0.4em;
  font-family: 'Monaco', 'Menlo', 'Consolas', monospace;
  font-size: 0.9em;
  box-shadow: 0 2px 0 var(--playground-markdown-border);
}

/* Abbreviations */
.regular-text abbr {
  text-decoration: underline dotted;
  cursor: help;
  color: var(--playground-markdown-theme);
}
