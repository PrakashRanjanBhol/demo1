<div class="greeting-box">
  <div class="greeting-message" [style.opacity]="isLoading ? 0.4 : 1">
    
  </div>

  <!-- Reset Action -->
  <span *ngIf="!isLoading && !isSuccess" class="reset-link" (click)="resetGreeting()">
    Reset Greeting
  </span>

  <!-- Loader -->
  <div *ngIf="isLoading" class="loader"></div>

  <!-- Success -->
  <div *ngIf="isSuccess" class="success">âœ… Reset Done</div>
</div>






.greeting-box {
  background: #fff;
  border-radius: 12px;
  padding: 24px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.1);
  text-align: center;
  width: 320px;
  position: relative;
  overflow: hidden;
  font-family: "Poppins", sans-serif;
}

.greeting-message {
  font-size: 18px;
  font-weight: 500;
  color: #333;
  margin-bottom: 12px;
  transition: opacity 0.3s ease;
}

.reset-link {
  font-size: 14px;
  color: #1976d2;
  font-weight: 500;
  cursor: pointer;
  text-decoration: none;
  transition: color 0.3s;
}

.reset-link:hover {
  color: #0d47a1;
  text-decoration: underline;
}

/* Loader */
.loader {
  margin: 12px auto;
  border: 3px solid #e0e0e0;
  border-top: 3px solid #1976d2;
  border-radius: 50%;
  width: 28px;
  height: 28px;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  100% { transform: rotate(360deg); }
}

/* Success Check */
.success {
  font-size: 20px;
  color: #2e7d32;
  margin-top: 12px;
  animation: pop 0.4s ease;
}

@keyframes pop {
  0% { transform: scale(0.5); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}






import { Component } from '@angular/core';

@Component({
  selector: 'app-greeting-reset',
  templateUrl: './greeting-reset.component.html',
  styleUrls: ['./greeting-reset.component.css']
})
export class GreetingResetComponent {
  isLoading = false;
  isSuccess = false;

  resetGreeting() {
    this.isLoading = true;

    // Simulate API call or backend reset logic
    setTimeout(() => {
      this.isLoading = false;
      this.isSuccess = true;

      // Reset back to normal UI after 1.5s
      setTimeout(() => {
        this.isSuccess = false;
      }, 1500);
    }, 1200);
  }
}






<app-greeting-reset></app-greeting-reset>
