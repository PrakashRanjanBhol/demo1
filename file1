.code-rag-file-accepted-header,
.code-rag-file-rejected-header {
    display: flex;
    justify-content: center;
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--vibe-coding-border-primary);
}

