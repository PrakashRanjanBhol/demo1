import React, { useState, CSSProperties } from "react";

// ─── Types ───────────────────────────────────────────────────────────────────

type TabId = "personal" | "role" | "rag" | "general";

interface Tab {
  id: TabId;
  label: string;
  icon: string;
  description: string;
}

interface PersonalField {
  label: string;
  value: string;
  type: string;
}

interface Role {
  name: string;
  active: boolean;
  color: string;
}

interface RagModel {
  name: string;
  status: "active" | "inactive";
  docs: number;
}

interface ToggleSetting {
  label: string;
  enabled: boolean;
}

interface PersonalData {
  title: string;
  badge: string;
  badgeColor: string;
  fields: PersonalField[];
}

interface RoleData {
  title: string;
  badge: string;
  badgeColor: string;
  roles: Role[];
  permissions: string[];
}

interface RagData {
  title: string;
  badge: string;
  badgeColor: string;
  models: RagModel[];
}

interface GeneralData {
  title: string;
  badge: string;
  badgeColor: string;
  settings: ToggleSetting[];
}

type PageContent = {
  personal: PersonalData;
  role: RoleData;
  rag: RagData;
  general: GeneralData;
};

// ─── Static Data ─────────────────────────────────────────────────────────────

const tabs: Tab[] = [
  {
    id: "personal",
