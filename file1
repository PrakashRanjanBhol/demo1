/* Message Separator */
.message-separator {
    display: flex;
    align-items: center;
    gap: 16px;
    margin: 32px 0;
}

.separator-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(to right, transparent, var(--separator-color), transparent);
}

.separator-text {
    font-size: 12px;
    color: var(--text-secondary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 4px 12px;
    background: var(--action-bar-bg);
    border: 1px solid var(--separator-color);
    border-radius: 12px;
    white-space: nowrap;
}








--separator-color: #e5e5e7;  /* Light mode */
--text-secondary: #86868b;
--action-bar-bg: #ffffff;

/* Dark mode */
[data-theme='dark'] {
    --separator-color: #27272a;
    --text-secondary: #a1a1aa;
    --action-bar-bg: #1a1a1d;
}










// Create message separator
function createMessageSeparator(text = 'Earlier') {
    // Create main container
    const messageSeparator = document.createElement('div');
    messageSeparator.className = 'message-separator';

    // Create left line
    const separatorLineLeft = document.createElement('div');
    separatorLineLeft.className = 'separator-line';

    // Create text label
    const separatorText = document.createElement('span');
    separatorText.className = 'separator-text';
    separatorText.textContent = text;

    // Create right line
    const separatorLineRight = document.createElement('div');
    separatorLineRight.className = 'separator-line';

    // Append all elements
    messageSeparator.appendChild(separatorLineLeft);
    messageSeparator.appendChild(separatorText);
    messageSeparator.appendChild(separatorLineRight);

    return messageSeparator;
}

// Usage:
// Append to your container
const container = document.getElementById('yourContainerId');
const separator = createMessageSeparator('Earlier');
container.appendChild(separator);

// Or with custom text:
const separator2 = createMessageSeparator('Yesterday');
container.appendChild(separator2);
