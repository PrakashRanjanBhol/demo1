/* ── Panel entrance animations ── */
@keyframes panelSlideIn {
    from {
        opacity: 0;
        transform: translateY(16px) scale(0.985);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

@keyframes fadeSlideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeSlideUp {
    from {
        opacity: 0;
        transform: translateY(14px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes tabContentSwitch {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes iconBounceIn {
    from {
        opacity: 0;
        transform: scale(0.6) rotate(-8deg);
    }
    to {
        opacity: 1;
        transform: scale(1) rotate(0deg);
    }
}










.panel {
    /* ...existing styles... */
    animation: panelSlideIn 0.45s cubic-bezier(0.22, 1, 0.36, 1) both;
}

.panel-header {
    /* ...existing styles... */
    animation: fadeSlideDown 0.4s cubic-bezier(0.22, 1, 0.36, 1) 0.08s both;
}

.panel-content {
    /* ...existing styles... */
    animation: fadeSlideUp 0.45s cubic-bezier(0.22, 1, 0.36, 1) 0.18s both;
}

.mode-header-icon {
    /* ...existing styles... */
    animation: iconBounceIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) 0.35s both;
}











/* Stagger direct children of panel-content */
.panel-content > *:nth-child(1) {
    animation: fadeSlideUp 0.4s cubic-bezier(0.22, 1, 0.36, 1) 0.22s both;
}
.panel-content > *:nth-child(2) {
    animation: fadeSlideUp 0.4s cubic-bezier(0.22, 1, 0.36, 1) 0.32s both;
}
.panel-content > *:nth-child(3) {
    animation: fadeSlideUp 0.4s cubic-bezier(0.22, 1, 0.36, 1) 0.42s both;
}

/* Tab content animates in when switching tabs */
.upload-content-wrapper {
    animation: tabContentSwitch 0.3s cubic-bezier(0.22, 1, 0.36, 1) both;
}










.mode-tab:nth-child(1) {
    animation: fadeSlideUp 0.38s cubic-bezier(0.22, 1, 0.36, 1) 0.38s both;
}
.mode-tab:nth-child(2) {
