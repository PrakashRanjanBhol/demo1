/* Pending Items - Not Selectable */
.history-item.pending-item {
    cursor: default;
}

.history-item.pending-item:hover {
    border-color: var(--border-color);
    box-shadow: none;
    transform: none;
}

.history-item.pending-item .history-item-name {
    color: var(--text-color);
    opacity: 0.7;
}

/* Pending Action Button with Lock Icon */
.history-item-action.pending-action {
    cursor: default;
    pointer-events: none;
    background-color: rgba(139, 92, 246, 0.1);
    border-color: rgba(139, 92, 246, 0.2);
}

.history-item-action.pending-action svg {
    stroke: var(--primary-color);
    opacity: 0.6;
}

.history-item-action.pending-action:hover {
    background-color: rgba(139, 92, 246, 0.1);
    border-color: rgba(139, 92, 246, 0.2);
}

.history-item-action.pending-action:hover svg {
    stroke: var(--primary-color);
}

/* Update responsive styles for pending action */
@media screen and (max-width: 1400px) {
    .history-item-action.pending-action {
        width: 28px;
        height: 28px;
    }

    .history-item-action.pending-action svg {
        width: 14px;
        height: 14px;
    }
}
