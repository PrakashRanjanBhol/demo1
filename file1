import { Component, OnInit } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';

interface PullRequest {
  id: number;
  title: string;
  state: 'OPEN' | 'MERGED';
  author: string;
  reviewers: string[];
  user_comments: number;
  url: string;
}

type SortType = 'status' | 'activity';
type StatusOrder = 'open' | 'merged';
type ActivityOrder = 'asc' | 'desc';

@Component({
  selector: 'app-pr-sidebar',
  standalone: true,
  imports: [CommonModule, FormsModule],
  templateUrl: './pr-sidebar.component.html',
  styleUrls: ['./pr-sidebar.component.css']
})
export class PrSidebarComponent implements OnInit {
  prData: PullRequest[] = [
    {
      id: 1,
      title: 'Sample PR',
      state: 'OPEN',
      author: 'Person4',
      reviewers: ['person1', 'person2', 'person3'],
      user_comments: 3,
      url: 'http://abc'
    },
    {
      id: 2,
      title: 'Sample PR1',
      state: 'MERGED',
      author: 'Person1',
      reviewers: ['person4', 'person2', 'person3'],
      user_comments: 2,
      url: 'http://abc'
    },
    {
      id: 3,
      title: 'Fix authentication bug in login flow',
      state: 'OPEN',
      author: 'Person2',
      reviewers: ['person1', 'person3'],
      user_comments: 5,
      url: 'http://abc'
    },
    {
      id: 4,
      title: 'Add new dashboard component with analytics',
      state: 'OPEN',
      author: 'Person3',
      reviewers: ['person1', 'person2', 'person4'],
      user_comments: 1,
      url: 'http://abc'
    },
    {
      id: 5,
      title: 'Update dependencies and fix security vulnerabilities',
      state: 'MERGED',
      author: 'Person5',
      reviewers: ['person1'],
      user_comments: 0,
      url: 'http://abc'
    }
  ];

  currentSort: SortType = 'status';
  currentOrder: StatusOrder = 'open';
  activityOrder: ActivityOrder = 'asc'; // Default to Low → High
  searchQuery: string = '';
  filteredAndSortedPRs: PullRequest[] = [];
  openPRs: PullRequest[] = [];
  mergedPRs: PullRequest[] = [];

  ngOnInit(): void {
    this.updatePRList();
  }

  getInitials(name: string): string {
    return name.charAt(0).toUpperCase();
  }

  handleSearch(): void {
    this.updatePRList();
  }

  sortPRs(sortType: SortType): void {
    this.currentSort = sortType;
    this.updatePRList();
  }

  setStatusOrder(order: StatusOrder): void {
    this.currentOrder = order;
    this.updatePRList();
  }

  setActivityOrder(order: ActivityOrder): void {
    this.activityOrder = order;
    this.updatePRList();
  }

  private getFilteredPRs(): PullRequest[] {
    if (!this.searchQuery) {
      return this.prData;
    }

    const query = this.searchQuery.toLowerCase();
    return this.prData.filter(pr => {
      return (
        pr.title.toLowerCase().includes(query) ||
        pr.author.toLowerCase().includes(query) ||
        pr.reviewers.some(reviewer => reviewer.toLowerCase().includes(query)) ||
        pr.id.toString().includes(query) ||
        pr.state.toLowerCase().includes(query)
      );
    });
  }

  private getSortedPRs(): PullRequest[] {
    let sorted = [...this.getFilteredPRs()];

    if (this.currentSort === 'status') {
      sorted.sort((a, b) => {
        if (this.currentOrder === 'open') {
          if (a.state !== b.state) {
            return a.state === 'OPEN' ? -1 : 1;
          }
          return a.user_comments - b.user_comments;
        } else {
          if (a.state !== b.state) {
            return a.state === 'MERGED' ? -1 : 1;
          }
          return a.user_comments - b.user_comments;
        }
      });
    } else if (this.currentSort === 'activity') {
      if (this.activityOrder === 'desc') {
        sorted.sort((a, b) => b.user_comments - a.user_comments);
      } else {
        sorted.sort((a, b) => a.user_comments - b.user_comments);
      }
    }

    return sorted;
  }

  private updatePRList(): void {
    this.filteredAndSortedPRs = this.getSortedPRs();
    this.openPRs = this.filteredAndSortedPRs.filter(pr => pr.state === 'OPEN');
    this.mergedPRs = this.filteredAndSortedPRs.filter(pr => pr.state === 'MERGED');
  }

  openPR(url: string): void {
    window.open(url, '_blank');
  }

  stopPropagation(event: Event): void {
    event.stopPropagation();
  }
}














<div class="sidebar">
  <div class="header">
    <h2>Pull Requests</h2>
    
    <div class="search-box">
      <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
      <input 
        type="text" 
        class="search-input" 
        placeholder="Search PRs..." 
        [(ngModel)]="searchQuery"
        (input)="handleSearch()">
    </div>

    <div class="sort-controls">
      <div class="sort-tabs">
        <button 
          class="sort-btn"
          [class.active]="currentSort === 'status'"
          (click)="sortPRs('status')">
          <svg class="sort-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <span>Status</span>
        </button>
        <button 
          class="sort-btn"
          [class.active]="currentSort === 'activity'"
          (click)="sortPRs('activity')">
          <svg class="sort-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
          <span>Activity</span>
        </button>
      </div>

      <div class="order-controls">
        <!-- Status Order Controls -->
        <ng-container *ngIf="currentSort === 'status'">
          <button 
            class="order-btn"
            [class.active]="currentOrder === 'open'"
            (click)="setStatusOrder('open')">
            <svg class="order-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Open</span>
          </button>
          <button 
            class="order-btn"
            [class.active]="currentOrder === 'merged'"
            (click)="setStatusOrder('merged')">
            <svg class="order-icon" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            <span>Merged</span>
          </button>
        </ng-container>

        <!-- Activity Order Controls -->
        <ng-container *ngIf="currentSort === 'activity'">
          <button 
            class="order-btn"
            [class.active]="activityOrder === 'asc'"
            (click)="setActivityOrder('asc')">
            <svg class="order-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h9m5-4v12m0 0l-4-4m4 4l4-4"></path>
            </svg>
            <span>Low → High</span>
          </button>
          <button 
            class="order-btn"
            [class.active]="activityOrder === 'desc'"
            (click)="setActivityOrder('desc')">
            <svg class="order-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
            </svg>
            <span>High → Low</span>
          </button>
        </ng-container>
      </div>
    </div>
  </div>

  <div id="pr-container">
    <!-- Empty State -->
    <div class="empty-state" *ngIf="filteredAndSortedPRs.length === 0">
      {{ searchQuery ? 'No PRs match your search' : 'No pull requests found' }}
    </div>

    <!-- Status View -->
    <ng-container *ngIf="currentSort === 'status' && filteredAndSortedPRs.length > 0">
      <ng-container *ngIf="currentOrder === 'open'">
        <!-- Open PRs Section -->
        <ng-container *ngIf="openPRs.length > 0">
          <div class="section-header">Open ({{ openPRs.length }})</div>
          <div 
            class="pr-card" 
            *ngFor="let pr of openPRs"
            (click)="openPR(pr.url)">
            <div class="pr-header">
              <span class="pr-state" [class.open]="pr.state === 'OPEN'" [class.merged]="pr.state === 'MERGED'">
                {{ pr.state }}
              </span>
              <span class="pr-id">#{{ pr.id }}</span>
            </div>
            <div class="pr-title">{{ pr.title }}</div>
            <div class="pr-author">
              <div class="author-avatar">{{ getInitials(pr.author) }}</div>
              <span>{{ pr.author }}</span>
            </div>
            <div class="pr-footer">
              <div class="comment-count" [class.has-comments]="pr.user_comments > 0">
                <svg class="comment-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <span>{{ pr.user_comments }} comment{{ pr.user_comments !== 1 ? 's' : '' }}</span>
              </div>
              <a [href]="pr.url" class="view-link" (click)="stopPropagation($event)">
                View →
              </a>
            </div>
          </div>
        </ng-container>

        <!-- Merged PRs Section -->
        <ng-container *ngIf="mergedPRs.length > 0">
          <div class="section-header">Merged ({{ mergedPRs.length }})</div>
          <div 
            class="pr-card" 
            *ngFor="let pr of mergedPRs"
            (click)="openPR(pr.url)">
            <div class="pr-header">
              <span class="pr-state" [class.open]="pr.state === 'OPEN'" [class.merged]="pr.state === 'MERGED'">
                {{ pr.state }}
              </span>
              <span class="pr-id">#{{ pr.id }}</span>
            </div>
            <div class="pr-title">{{ pr.title }}</div>
            <div class="pr-author">
              <div class="author-avatar">{{ getInitials(pr.author) }}</div>
              <span>{{ pr.author }}</span>
            </div>
            <div class="pr-footer">
              <div class="comment-count" [class.has-comments]="pr.user_comments > 0">
                <svg class="comment-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <span>{{ pr.user_comments }} comment{{ pr.user_comments !== 1 ? 's' : '' }}</span>
              </div>
              <a [href]="pr.url" class="view-link" (click)="stopPropagation($event)">
                View →
              </a>
            </div>
          </div>
        </ng-container>
      </ng-container>

