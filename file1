/* Enhanced selected state without checkmark */
.history-item.selected {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(167, 139, 250, 0.15));
    border-color: var(--primary-color);
    border-width: 2px;
    box-shadow: 0 4px 20px rgba(139, 92, 246, 0.25);
    transform: translateX(4px);
}

/* Add a subtle left border accent when selected */
.history-item.selected::before {
    content: '';
    position: absolute;
    left: -1px;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(180deg, var(--primary-color), #a78bfa);
    border-radius: 10px 0 0 10px;
}

/* Make the card position relative for the border accent */
.history-item {
    display: flex;
    align-items: center;
