import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';

interface Task {
  id: number;
  title: string;
  description: string;
  created: string;
  isActive: boolean;
}

@Component({
  selector: 'app-sdlc-suite',
  standalone: true,
  imports: [CommonModule, FormsModule],
  templateUrl: './sdlc-suite.component.html',
  styleUrls: ['./sdlc-suite.component.css']
})
export class SdlcSuiteComponent {
  tasks: Task[] = [];
  showForm = false;
  
  newTask = {
    title: '',
    description: ''
  };

  get taskCount(): number {
    return this.tasks.length;
  }

  openForm(): void {
    this.showForm = true;
  }

  closeForm(): void {
    this.showForm = false;
    this.resetForm();
  }

  createTask(): void {
    if (this.newTask.title.trim()) {
      const task: Task = {
        id: Date.now(),
        title: this.newTask.title,
        description: this.newTask.description,
        created: new Date().toLocaleDateString('en-US', { 
          month: 'short', 
          day: 'numeric', 
          year: 'numeric' 
        }),
        isActive: false
      };
      
      this.tasks.unshift(task);
      this.closeForm();
    }
  }

  toggleTaskActive(task: Task): void {
    // Deactivate all other tasks
    this.tasks.forEach(t => {
      if (t.id !== task.id) {
        t.isActive = false;
      }
    });
    // Toggle current task
    task.isActive = !task.isActive;
  }

  resetForm(): void {
    this.newTask = {
      title: '',
      description: ''
    };
  }
}












