import axios from 'axios';

// Create instance
const api = axios.create({
  baseURL: 'https://your-api-url.com', // change to your actual base URL
});

// Request interceptor
api.interceptors.request.use(
  (config) => {
    // Add auth token
    const token = localStorage.getItem('authToken'); // or from Redux etc.
    if (token) {
      config.headers['Authorization'] = `Bearer ${token}`;
    }

    // Add custom header
    config.headers['X-App-Version'] = '1.0';

    return config;
  },
  (error) => {
    return Promise.reject(error);
  }
);

export default api;








import api from './api';

// Example GET call
api.get('/users')
  .then((res) => console.log(res.data))
  .catch((err) => console.error(err));




api.interceptors.response.use(
  response => response,
  error => {
    if (error.response && error.response.status === 401) {
      // Handle unauthorized (e.g. logout, refresh token)
      console.warn("Unauthorized! Logging out...");
    }
    return Promise.reject(error);
  }
);
