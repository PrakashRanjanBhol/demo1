  openModal(): void {
    this.isModalOpen = true;
    this.statusMessage = '';
  }

  closeModal(): void {
    this.isModalOpen = false;
  }

  handleAcceptAll(config: any): void {
    this.statusMessage = `All files accepted for tool: ${config.tool}`;
    console.log('All files accepted:', config);
    
    setTimeout(() => {
      this.closeModal();
    }, 2000);
  }

  handleRejectAll(config: any): void {
    this.statusMessage = `All files rejected for tool: ${config.tool}`;
    console.log('All files rejected:', config);
    
    setTimeout(() => {
      this.closeModal();
    }, 2000);
  }

  handleFileAccepted(event: any): void {
    this.statusMessage = `File "${event.file.file_name}" accepted`;
    console.log('File accepted:', event);
  }

  handleFileRejected(event: any): void {
    this.statusMessage = `File "${event.file.file_name}" rejected`;
    console.log('File rejected:', event);
  }
