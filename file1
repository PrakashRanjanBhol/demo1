<textarea
  (keydown)="onKeyDown($event)"
  rows="10"
  cols="50"
  style="overflow: auto; width: 100%; height: 200px;"
></textarea>



onKeyDown(e: KeyboardEvent) {
  if ((e.key === 'PageUp' || e.key === 'PageDown') && (e.ctrlKey || e.metaKey || e.shiftKey || e.altKey || e.key === 'Fn')) {
    e.preventDefault(); // stop browser/global scroll
  }
}
