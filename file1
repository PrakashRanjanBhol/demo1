import { Component, OnInit, ViewChild, ElementRef, AfterViewChecked } from '@angular/core';
import * as Diff from 'diff';

interface Comment {
  file_path: string;
  line: number;
  side: 'TO' | 'FROM';
  comment_text: string;
  severity: 'error' | 'warning' | 'suggestion';
  suggested_patch: string | null;
}

interface DiffFile {
  file_path: string;
  old_lines: string[];
  new_lines: string[];
  ai_comments: Comment[];
}

interface CommentState {
  status: 'pending' | 'accepted' | 'rejected';
  modifiedText: string | null;
  isEditing: boolean;
}

interface DiffLine {
  type: 'added' | 'deleted' | 'context';
  oldLineNum?: number;
  newLineNum?: number;
  content: string;
  comment?: Comment;
}

@Component({
  selector: 'app-code-diff-viewer',
  templateUrl: './code-diff-viewer.component.html',
  styleUrls: ['./code-diff-viewer.component.css']
})
export class CodeDiffViewerComponent implements OnInit, AfterViewChecked {
  currentView: 'unified' | 'side-by-side' = 'unified';
  currentFileIndex: number = -1;
  selectedFile: DiffFile | null = null;
  
  addedLines: number = 0;
  deletedLines: number = 0;
  commentsCount: number = 0;
  
  diffLines: DiffLine[] = [];
  sideBySideRows: any[] = [];
  showStats: boolean = false;
  showGoToFirstComment: boolean = false;
  
  commentStates: { [key: string]: CommentState } = {};
  
  private needsScrollUpdate = false;
  
  diffData: { files: DiffFile[] } = {
    files: [
