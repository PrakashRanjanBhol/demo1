export class WorkflowSidebarComponent implements OnInit {
  // ... existing properties ...

  // Replace single searchTerm with separate ones
  myWorkflowsSearchTerm: string = '';
  functionsSearchTerm: string = '';
  
  selectedFunctionName: string | null = null;
  activeWorkflowId: string = '';
  myWorkflowsCollapsed: boolean = false;
  activeWorkflowsCollapsed: boolean = true;
  functionsCollapsed: boolean = true;
  sharedWorkflowsCollapsed: boolean = true;
  isRefreshing: boolean = false;
  hasError: boolean = false;

  // ... existing methods ...

  getFilteredMyWorkflows(): Workflow[] {
    if (!this.myWorkflowsSearchTerm) {
      return this.myWorkflows;
    }
    const term = this.myWorkflowsSearchTerm.toLowerCase();
    return this.myWorkflows.filter(w => w.name.toLowerCase().includes(term));
  }

  getFilteredFunctions(): Function[] {
    if (!this.functionsSearchTerm) {
      return this.functions;
    }
    const term = this.functionsSearchTerm.toLowerCase();
    return this.functions.filter(f => f.function_name.toLowerCase().includes(term));
  }

  // ... rest of existing methods ...
}








<!-- My Workflows Tab - Update search input -->
<div class="section-content" [class.collapsed]="myWorkflowsCollapsed">
  <div class="search-container">
    <input type="text" class="search-input" placeholder="Search workflows..." [(ngModel)]="myWorkflowsSearchTerm">
  </div>
  <!-- ... rest of My Workflows content ... -->
</div>

<!-- Functions Tab - Update search input -->
<div class="section-content" [class.collapsed]="functionsCollapsed">
  <div class="search-container">
    <input type="text" class="search-input" placeholder="Search functions..." [(ngModel)]="functionsSearchTerm">
  </div>
  <!-- ... rest of Functions content ... -->
</div>
