worker_processes auto;

events {
    worker_connections 1024;
}

http {
    include mime.types;
    default_type application/octet-stream;

    sendfile on;

    server {
        listen 80;
        server_name localhost;

        # ðŸ‘‡ include project configs HERE
        include conf/project1.conf;
        include conf/project2.conf;
    }
}







location /project1/ {
    root html;
    index index.html;
    try_files $uri $uri/ /project1/index.html;
}







location /project2/ {
    root html;
    index index.html;
    try_files $uri $uri/ /project2/index.html;
}


ng build --configuration=production --base-href /project1/
