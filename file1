import React from 'react';
import styles from './SpacePanel.module.css';

const SpacePanel = ({ spaces }) => {
  return (
    <div className={styles.wrapper}>
      {spaces.map(space => (
        <div key={space.key} className={styles.spaceBlock}>
          <div className={styles.lastSynced}>
            <i className="pi pi-clock"></i>
            <span>Last synced: {space.lastSynced}</span>
            <span className={`${styles.status} ${space.syncStatus === 'success' ? styles.success : styles.failure}`}>
              {space.syncStatus === 'success' ? '‚úÖ Success' : '‚ùå Failed'}
            </span>
          </div>
          <div className={styles.spaceItem}>
            üìÅ {space.name}
          </div>
        </div>
      ))}
    </div>
  );
};

export default SpacePanel;





.wrapper {
  padding: 1rem;
  background-color: #0c0c0c;
  color: #e0e0e0;
}

.spaceBlock {
  margin-bottom: 1.2rem;
}

.lastSynced {
  font-size: 0.75rem;
  color: #9ca3af;
  display: flex;
  align-items: center;
  gap: 0.4rem;
  margin-bottom: 0.25rem;
  padding-left: 0.2rem;
  animation: fadeIn 0.3s ease-in;
}

.status {
  margin-left: auto;
  font-weight: 500;
}

.success {
  color: #4ade80; /* green-400 */
}

.failure {
  color: #f87171; /* red-400 */
}

.spaceItem {
  background-color: #141414;
  padding: 0.6rem 1rem;
  border-radius: 6px;
  font-weight: 500;
  transition: background-color 0.3s ease;
  cursor: pointer;
}

.spaceItem:hover {
  background-color: #1e1e1e;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-2px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
