<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Small Toggle Code/Graph</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        body {
            background: #0e1117;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #e5e7eb;
        }

        .playground-container {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            background: #161b22;
            padding: 0.3rem 0.5rem;
            border: 1px solid #2c313c;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
            font-size: 0.75rem;
            /* overall smaller */
        }

        .playground-buttons {
            display: flex;
            background: #1f2937;
            border-radius: 6px;
            overflow: hidden;
            border: 1px solid #2c313c;
        }

        .playground-icon {
            color: #9ca3af;
            padding: 0.3rem 0.5rem;
            font-size: 0.9rem;
            /* smaller icons */
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .playground-icon:hover {
            color: #d1d5db;
            background: #374151;
        }

        .playground-icon.active {
            background: #2563eb;
            color: #fff;
            box-shadow: inset 0 0 4px rgba(255, 255, 255, 0.15),
                0 0 3px rgba(37, 99, 235, 0.5);
        }

        .playground-action {
            color: #9ca3af;
            font-size: 0.9rem;
            /* smaller icon */
            cursor: pointer;
            transition: color 0.2s ease, transform 0.15s ease;
            padding: 0.3rem;
            border-radius: 4px;
        }

        .playground-action:hover {
            color: #60a5fa;
            background: rgba(96, 165, 250, 0.08);
            transform: scale(1.05);
        }
    </style>
</head>

<body>

    <script>
        // Container
        const toggleContainer = document.createElement("div");
        toggleContainer.className = "playground-container";

        // Toggle group
        const toggleButtons = document.createElement("div");
        toggleButtons.className = "playground-buttons";

        // Code Icon
        const codeIcon = document.createElement("i");
        codeIcon.className = "fa-solid fa-code playground-icon active";
        codeIcon.title = "Code View";

        // Graph Icon
        const graphIcon = document.createElement("i");
        graphIcon.className = "fa-solid fa-chart-bar playground-icon";
        graphIcon.title = "Graph View";

        // Action Icon (dynamic)
        const actionIcon = document.createElement("i");
        actionIcon.className = "fa-solid fa-copy playground-action";
        actionIcon.title = "Copy";

        // Append icons
        toggleButtons.appendChild(codeIcon);
        toggleButtons.appendChild(graphIcon);
        toggleContainer.appendChild(toggleButtons);
        toggleContainer.appendChild(actionIcon);

        // Append to body
        document.body.appendChild(toggleContainer);

        // Toggle Logic
        codeIcon.addEventListener("click", () => {
            codeIcon.classList.add("active");
            graphIcon.classList.remove("active");
            actionIcon.className = "fa-solid fa-copy playground-action";
            actionIcon.title = "Copy";
        });

        graphIcon.addEventListener("click", () => {
            graphIcon.classList.add("active");
            codeIcon.classList.remove("active");
            actionIcon.className = "fa-solid fa-download playground-action";
            actionIcon.title = "Download";
        });
    </script>

</body>

</html>
