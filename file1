import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';

@Component({
  selector: 'app-share-url',
  standalone: true,
  imports: [CommonModule],
  templateUrl: './share-url.component.html',
  styleUrls: ['./share-url.component.css'],
  host: {
    '[class.dark-theme]': 'isDarkTheme'
  }
})
export class ShareUrlComponent {
  showOverlay = false;
  generatedURL = '';
  copyButtonText = 'Copy URL';
  isCopied = false;
  showSuccessMessage = false;
  isDarkTheme = false; // Set to true for dark theme, false for light theme
  isLoading = false; // Loading state for URL generation

  generateShareURL(): void {
    // Show overlay with loading state
    this.showOverlay = true;
    this.isLoading = true;
    
    // Reset states
    this.generatedURL = '';
    this.isCopied = false;
    this.copyButtonText = 'Copy URL';
    this.showSuccessMessage = false;
    
    // Simulate API call or processing time (remove setTimeout for real implementation)
    setTimeout(() => {
      // Generate a unique URL
      const baseURL = window.location.origin + window.location.pathname;
      const shareId = 'share-' + Math.random().toString(36).substr(2, 9);
      this.generatedURL = baseURL + '?shared=' + shareId;
      
      // Hide loader
      this.isLoading = false;
    }, 1500); // Simulated 1.5 second delay - adjust or remove for production
  }

  closeOverlay(event?: Event): void {
    if (!event || (event.target as HTMLElement).classList.contains('overlay')) {
      this.showOverlay = false;
    }
  }

  copyToClipboard(): void {
    navigator.clipboard.writeText(this.generatedURL).then(() => {
      // Update button appearance
      this.isCopied = true;
      this.copyButtonText = 'Copied!';
      this.showSuccessMessage = true;
      
      // Reset after 2 seconds
      setTimeout(() => {
        this.isCopied = false;
        this.copyButtonText = 'Copy URL';
        this.showSuccessMessage = false;
      }, 2000);
    }).catch(err => {
      alert('Failed to copy URL. Please try again.');
      console.error('Copy failed:', err);
    });
  }

  onKeyDown(event: KeyboardEvent): void {
    if (event.key === 'Escape' && this.showOverlay) {
      this.closeOverlay();
    }
  }

  // Toggle between light and dark theme
  toggleTheme(): void {
    this.isDarkTheme = !this.isDarkTheme;
  }
}






<div class="page-container" (keydown)="onKeyDown($event)" tabindex="0">
  <div class="container">
    <div class="header-controls">
      <button class="theme-toggle" (click)="toggleTheme()" [attr.aria-label]="isDarkTheme ? 'Switch to light theme' : 'Switch to dark theme'">
        <svg *ngIf="!isDarkTheme" class="theme-icon" fill="currentColor" viewBox="0 0 24 24">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
        <svg *ngIf="isDarkTheme" class="theme-icon" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
      </button>
    </div>
    
    <h1>Share This Page</h1>
    
    <button class="share-button" (click)="generateShareURL()">
      <svg class="share-icon" fill="currentColor" viewBox="0 0 24 24">
        <path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z"/>
      </svg>
      Generate Share Link
    </button>

    <p class="info-text">Click the button above to generate a shareable link</p>
  </div>

  <!-- Overlay Modal -->
  <div class="overlay" [class.show]="showOverlay" (click)="closeOverlay($event)">
    <div class="url-container" (click)="$event.stopPropagation()">
      
      <!-- Loader State -->
      <div *ngIf="isLoading" class="loader-container">
        <div class="loader">
          <div class="spinner"></div>
        </div>
        <p class="loader-text">Generating your share link...</p>
      </div>

      <!-- Content State -->
      <div *ngIf="!isLoading" class="content-container">
        <div class="modal-header">
          <h2 class="modal-title">Share Link</h2>
          <button class="close-button" (click)="closeOverlay()">&times;</button>
        </div>
        
        <div class="url-box">
          <div class="url-text">{{ generatedURL }}</div>
        </div>
        
        <button class="copy-button" [class.copied]="isCopied" (click)="copyToClipboard()">
          <svg class="copy-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>
          </svg>
          <span>{{ copyButtonText }}</span>
        </button>

        <div class="success-message" [class.show]="showSuccessMessage">
          âœ“ Link copied to clipboard!
        </div>
      </div>

    </div>
  </div>
</div>






