/* File Name */
.file-name {
    font-size: 13px;
    color: var(--bitbucket-text-primary);
    flex: 1;
    word-break: break-word;
    position: relative; /* ✅ ADD THIS */
    display: inline-block; /* ✅ ADD THIS */
    transition: color 0.15s ease;
}

/* ✅ ADD: Underline animation */
.file-name::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: -1px;
    height: 1px;
    background-color: currentColor;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.2s ease;
}

/* ✅ ADD: Show underline on file hover ONLY (not folders) */
.file-item:not(.clickable):hover .file-name::after {
    transform: scaleX(1);
}

/* ✅ ADD: Blue text on file hover */
.file-item:not(.clickable):hover .file-name {
    color: var(--bitbucket-blue);
}

/* ✅ ADD: Folder hover - just make bold (no underline) */
.file-item.clickable:hover .file-name {
    font-weight: 600;
}
