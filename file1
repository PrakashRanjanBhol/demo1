  templateUrl: './tree-selector.component.html',
  styleUrls: ['./tree-selector.component.scss']
})
export class TreeSelectorComponent {

  treeData = {
    name: 'root_folder',
    expanded: true,
    checked: false,
    type: 'folder',
    children: [
      {
        name: 'Level 1 - A',
        type: 'folder',
        expanded: false,
        checked: false,
        rc_session_id: null,
        rc_flag: false,
        children: [
          {
            name: 'Level 2 - A',
            type: 'folder',
