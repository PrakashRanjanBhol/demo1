// Remove the Agent interface completely and update:
@Component({
  selector: 'app-agents-sidebar',
  standalone: true,
  imports: [CommonModule, FormsModule],
  templateUrl: './agents-sidebar.component.html',
  styleUrls: ['./agents-sidebar.component.css']
})
export class AgentsSidebarComponent {
  searchTerm: string = '';
  selectedAgent: string | null = null;

  agents: string[] = [
    'Customer Support',
    'Data Analyst',
    'Content Writer',
    'Code Reviewer',
    'Sales Assistant',
    'Research Agent'
  ];

  get filteredAgents(): string[] {
    if (!this.searchTerm) {
      return this.agents;
    }
    const term = this.searchTerm.toLowerCase();
    return this.agents.filter(agent =>
      agent.toLowerCase().includes(term)
    );
  }

  selectAgent(agent: string): void {
    this.selectedAgent = this.selectedAgent === agent ? null : agent;
  }
}




<!-- Replace the agents-list div content with: -->
<div class="agents-list">
  <div 
    *ngFor="let agent of filteredAgents"
    class="agent-card"
    [class.active]="selectedAgent === agent"
    (click)="selectAgent(agent)"
  >
    <div class="agent-header">
      <input 
        type="checkbox" 
        class="agent-checkbox"
        [checked]="selectedAgent === agent"
        (click)="$event.stopPropagation()"
      >
      <div class="agent-name">{{ agent }}</div>
    </div>
  </div>

  <div *ngIf="filteredAgents.length === 0" class="no-results">
    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <p>No agents found</p>
  </div>
</div>




/* Remove these styles completely: */
/* .agent-description */
/* .agent-icon */

/* Update .agent-card padding: */
.agent-card {
    padding: 12px 14px; /* Changed from 14px to 12px 14px */
    margin-bottom: 8px;
    border-radius: 8px;
    border: 1px solid var(--adk-agents-border);
    background: var(--adk-agents-card-bg);
    cursor: pointer;
    transition: all 0.2s;
}

/* Update .agent-header to remove margin-bottom: */
.agent-header {
    display: flex;
    align-items: center;
    /* Remove margin-bottom: 8px; */
}
