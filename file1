// agentic-ai-upload.component.ts
import { Component, ViewChild, ElementRef, AfterViewInit } from '@angular/core';
import { CommonModule } from '@angular/common';

@Component({
  selector: 'app-agentic-ai-upload',
  standalone: true,
  imports: [CommonModule],
  template: `
    <div class="ai-upload-container">
      <!-- Hidden attachment input -->
      <input
        #attachmentInput
        type="file"
        (change)="onAttachmentSelected($event)"
        accept="image/*,video/*,audio/*,.pdf,.doc,.docx,.txt"
        style="display: none"
        multiple
      />
      
      <!-- Input area with attachments display -->
      <div class="input-wrapper">
        <div #attachmentContainer class="ai-input-area" (click)="attachmentInput.click()">
          <span *ngFor="let attachment of visibleAttachments; let i = index" class="attachment-chip">
            {{ attachment.name }}
            <span class="remove-btn" (click)="removeAttachment(i, $event)">Ã—</span>
          </span>
          <span *ngIf="hasOverflowAttachments" class="show-all" (click)="toggleExpandAttachments($event)">
            {{ isExpanded ? 'Show Less' : 'Show All (' + overflowCount + ')' }}
          </span>
        </div>
      </div>
    </div>
  `,
  styles: [`
    .ai-upload-container {
      padding: 20px;
      font-family: Arial, sans-serif;
    }

    .input-wrapper {
      width: 100%;
    }

    .ai-input-area {
      min-height: 48px;
      max-height: 48px;
      overflow: hidden;
      border: 1px solid #ccc;
      border-radius: 4px;
      padding: 8px;
      cursor: pointer;
      background-color: #fff;
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      align-items: flex-start;
      transition: max-height 0.3s ease;
    }

    .ai-input-area.expanded {
      max-height: none;
    }

    .attachment-chip {
      display: inline-flex;
      align-items: center;
      background-color: #e3f2fd;
      padding: 4px 8px;
      border-radius: 16px;
      font-size: 13px;
      white-space: nowrap;
      max-width: 200px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .remove-btn {
      margin-left: 6px;
      cursor: pointer;
      font-weight: bold;
      color: #666;
      font-size: 18px;
      line-height: 1;
    }

    .remove-btn:hover {
      color: #333;
    }

    .show-all {
      display: inline-flex;
      align-items: center;
      background-color: #f5f5f5;
      padding: 4px 12px;
      border-radius: 16px;
      font-size: 13px;
      color: #007bff;
      cursor: pointer;
      font-weight: 500;
    }

    .show-all:hover {
      background-color: #e0e0e0;
    }
  `]
})
export class AgenticAiUploadComponent implements AfterViewInit {
  @ViewChild('attachmentContainer') attachmentContainer!: ElementRef;
  
  uploadedAttachments: File[] = [];
  visibleAttachments: File[] = [];
  hasOverflowAttachments = false;
  isExpanded = false;
  overflowCount = 0;

  ngAfterViewInit() {
    this.updateVisibleAttachments();
  }

  onAttachmentSelected(event: Event): void {
    const input = event.target as HTMLInputElement;
    
    if (input.files && input.files.length > 0) {
      this.uploadedAttachments = [...this.uploadedAttachments, ...Array.from(input.files)];
      console.log('Uploaded attachments:', this.uploadedAttachments);
      
      setTimeout(() => this.updateVisibleAttachments(), 0);
    }
  }

  updateVisibleAttachments(): void {
    if (this.isExpanded) {
      this.visibleAttachments = this.uploadedAttachments;
      const container = this.attachmentContainer.nativeElement;
      container.classList.add('expanded');
      return;
    }

    const container = this.attachmentContainer.nativeElement;
    container.classList.remove('expanded');
    
    // Show attachments one by one until height exceeds 48px
    this.visibleAttachments = [];
    const maxHeight = 48;
    
    for (let i = 0; i < this.uploadedAttachments.length; i++) {
      this.visibleAttachments = this.uploadedAttachments.slice(0, i + 1);
      
      setTimeout(() => {
        if (container.scrollHeight > maxHeight) {
          this.visibleAttachments = this.uploadedAttachments.slice(0, i);
          this.overflowCount = this.uploadedAttachments.length - i;
          this.hasOverflowAttachments = this.overflowCount > 0;
        } else if (i === this.uploadedAttachments.length - 1) {
          this.hasOverflowAttachments = false;
        }
      }, 0);
    }
  }

  removeAttachment(index: number, event: Event): void {
    event.stopPropagation();
    const actualIndex = this.uploadedAttachments.indexOf(this.visibleAttachments[index]);
    this.uploadedAttachments.splice(actualIndex, 1);
    setTimeout(() => this.updateVisibleAttachments(), 0);
  }

  toggleExpandAttachments(event: Event): void {
    event.stopPropagation();
    this.isExpanded = !this.isExpanded;
    this.updateVisibleAttachments();
  }

  formatAttachmentSize(bytes: number): string {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
  }
}
