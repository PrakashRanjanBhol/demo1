/* Mode Header Container */
.mode-header-container {
    position: relative;
    margin: 20px 0;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(139, 92, 246, 0.08);
}

/* Gradient Background */
.mode-header-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
        135deg,
        rgba(139, 92, 246, 0.08) 0%,
        rgba(167, 139, 250, 0.12) 50%,
        rgba(139, 92, 246, 0.08) 100%
    );
    z-index: 0;
}

/* Animated gradient (optional) */
.mode-header-background::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
        45deg,
        transparent 30%,
        rgba(139, 92, 246, 0.05) 50%,
        transparent 70%
    );
    animation: shimmer 8s infinite linear;
    pointer-events: none;
}

@keyframes shimmer {
    0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

/* Header Content */
.mode-header-content {
