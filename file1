<div
    className={`${styles.nestedWrapper} ${
        hasChildren ? (isExpanded ? styles.expanded : styles.collapsed) : ''
    }`}
>
    {hasChildren && renderPages(page.children, level + 1)}
</div>



.nestedWrapper {
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
}

.expanded {
    max-height: 500px;
}

.collapsed {
    max-height: 0;
}
