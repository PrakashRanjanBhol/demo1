<div class="sidebar-overlay" [class.open]="isOpen" [class.full-width]="isFullWidth" [class.collapsed]="!isFullWidth">

    <div class="sidebar-header">
        <!-- Toggle width -->
        <button class="icon-btn" (click)="toggleWidth()">
            <i class="fas" [ngClass]="isFullWidth ? 'fa-compress' : 'fa-expand'"></i>
        </button>

        <!-- Close -->
        <button class="icon-btn close-btn" (click)="closeSidebar()">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <div class="sidebar-content">
        <h2>Sidebar Content</h2>
        <p>This is your overlay sidebar. Add your content here.</p>
    </div>
</div>





/* sidebar-overlay.component.css */
.sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    background: #1e1e2f;
    color: white;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.4);
    overflow-y: auto;
    transition: transform 0.4s ease, width 0.3s ease;
    z-index: 1000;

    /* Start hidden off-screen */
    transform: translateX(-100%);
    width: calc(100% - 320px);
}

/* Slide-in */
.sidebar-overlay.open {
    transform: translateX(0);
}

/* Collapsed (100% - 320px) */
.sidebar-overlay.collapsed {
    width: calc(100% - 320px);
}

/* Full width */
.sidebar-overlay.full-width {
    width: 100%;
}

/* Floating header in top-right */
.sidebar-header {
    position: absolute;
    top: 10px;
    right: 10px;
    display: flex;
    align-items: center;
    gap: 8px;
    background: rgba(0, 0, 0, 0.3);
    padding: 6px 8px;
    border-radius: 8px;
    z-index: 1010;
    /* keep it above content */
}

.icon-btn {
    background: transparent;
    border: none;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease, color 0.2s ease;
    padding: 4px;
    border-radius: 4px;
}

.icon-btn:hover {
    transform: scale(1.1);
    color: #42a5f5;
    /* highlight on hover */
}

.close-btn {
    font-size: 20px;
}

/* Font Awesome icon styling */
.fas {
    font-size: 1.2rem;
    line-height: 1;
}

/* Sidebar content */
.sidebar-content {
    padding: 20px;
    padding-top: 15px;
    /* breathing space */
}


<button (click)="sidebar.openSidebar()">Open Sidebar</button>
