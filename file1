import React from "react";

interface PersonalField {
  label: string;
  value: string;
  type: string;
}

const fields: PersonalField[] = [
  { label: "Full Name",     value: "Alexandra Chen",          type: "text"  },
  { label: "Email Address", value: "alex.chen@company.com",   type: "email" },
  { label: "Phone Number",  value: "+1 (555) 234-5678",       type: "tel"   },
  { label: "Department",    value: "Engineering",              type: "text"  },
  { label: "Job Title",     value: "Senior Developer",         type: "text"  },
  { label: "Location",      value: "San Francisco, CA",        type: "text"  },
];

const ACCENT = "#6366f1";

const PersonalSetting: React.FC = () => {
  const handleFocus = (e: React.FocusEvent<HTMLInputElement>) => {
    e.target.style.borderColor = ACCENT;
    e.target.style.boxShadow = `0 0 0 3px ${ACCENT}18`;
  };
  const handleBlur = (e: React.FocusEvent<HTMLInputElement>) => {
    e.target.style.borderColor = "#e2e8f0";
    e.target.style.boxShadow = "none";
  };

  return (
    <div className="settings-content-anim">
      {/* Page Details */}
      <div className="settings-section-card">
        <div className="settings-section-title">
          <div style={iconBox(ACCENT)}>
            <i className="pi pi-user" style={{ color: ACCENT, fontSize: "13px" }} />
          </div>
          Page Details
        </div>
        <p style={{ fontSize: "13px", color: "#64748b", lineHeight: 1.6 }}>
          Manage your personal profile, contact information, and account details from this panel.
        </p>
        <MetaRow items={[["Last Updated", "2 hours ago"], ["Status", "Active"], ["Version", "v2.1"]]} />
      </div>

      {/* Form */}
      <div className="settings-section-card">
        <div className="settings-section-title">
          <div style={iconBox(ACCENT)}>
            <i className="pi pi-list" style={{ color: ACCENT, fontSize: "13px" }} />
          </div>
          Personal Information
        </div>

        <div style={{ display: "grid", gridTemplateColumns: "1fr 1fr", gap: "20px" }}>
          {fields.map((f, i) => (
            <div key={i} style={{ display: "flex", flexDirection: "column", gap: "6px" }}>
              <label style={labelStyle}>{f.label}</label>
              <input
                defaultValue={f.value}
                type={f.type}
                onFocus={handleFocus}
                onBlur={handleBlur}
                style={inputStyle}
              />
            </div>
          ))}
        </div>

        <div style={{ marginTop: "28px", display: "flex", gap: "12px" }}>
          <button style={primaryBtn}>Save Changes</button>
          <button style={ghostBtn}>Cancel</button>
        </div>
      </div>
    </div>
  );
};

export default PersonalSetting;

// ─── Shared helpers (local) ───────────────────────────────────────────────────

function iconBox(color: string): React.CSSProperties {
  return {
    width: 28, height: 28, borderRadius: "8px",
    background: `${color}18`,
    display: "flex", alignItems: "center", justifyContent: "center",
    flexShrink: 0,
  };
}

interface MetaRowProps {
  items: [string, string][];
}

const MetaRow: React.FC<MetaRowProps> = ({ items }) => (
  <div style={{ display: "flex", gap: "20px", marginTop: "16px" }}>
    {items.map(([k, v]) => (
      <div key={k} style={{ display: "flex", flexDirection: "column", gap: "3px" }}>
        <span style={{ fontSize: "10px", color: "#94a3b8", fontWeight: 600, textTransform: "uppercase", letterSpacing: "0.08em" }}>
          {k}
        </span>
        <span style={{ fontSize: "13px", fontWeight: 600, color: "#374151" }}>{v}</span>
      </div>
    ))}
  </div>
);

const labelStyle: React.CSSProperties = {
  fontSize: "11px", fontWeight: 600, color: "#94a3b8",
  letterSpacing: "0.08em", textTransform: "uppercase",
};

const inputStyle: React.CSSProperties = {
  padding: "10px 14px",
  border: "1.5px solid #e2e8f0",
  borderRadius: "10px",
  fontSize: "14px",
  color: "#1e293b",
  background: "#f8fafc",
  outline: "none",
  transition: "border 0.2s, box-shadow 0.2s",
  fontFamily: "inherit",
};

const primaryBtn: React.CSSProperties = {
  padding: "10px 24px", borderRadius: "10px", border: "none",
  background: "linear-gradient(135deg, #6366f1, #8b5cf6)",
  color: "#fff", fontWeight: 600, fontSize: "14px",
  cursor: "pointer", letterSpacing: "0.02em",
};

const ghostBtn: React.CSSProperties = {
  padding: "10px 24px", borderRadius: "10px",
  border: "1.5px solid #e2e8f0", background: "#fff",
  color: "#64748b", fontWeight: 600, fontSize: "14px", cursor: "pointer",
};



















import React from "react";

interface Role {
  name: string;
  active: boolean;
  color: string;
}

const roles: Role[] = [
  { name: "Admin",     active: true,  color: "#ef4444" },
  { name: "Developer", active: true,  color: "#6366f1" },
  { name: "Viewer",    active: false, color: "#10b981" },
  { name: "Editor",    active: true,  color: "#f59e0b" },
];

const permissions: string[] = [
  "Read", "Write", "Delete", "Manage Users", "View Reports",
];

const ACCENT = "#f59e0b";

const RoleManagement: React.FC = () => (
  <div className="settings-content-anim">
    {/* Page Details */}
    <div className="settings-section-card">
      <div className="settings-section-title">
        <div style={iconBox(ACCENT)}>
          <i className="pi pi-shield" style={{ color: ACCENT, fontSize: "13px" }} />
        </div>
        Page Details
      </div>
      <p style={{ fontSize: "13px", color: "#64748b", lineHeight: 1.6 }}>
        Control access levels, assign roles, and manage user permissions from this panel.
      </p>
      <MetaRow items={[["Last Updated", "1 day ago"], ["Status", "Active"], ["Roles", "4"]]} />
    </div>

    {/* Roles & Permissions */}
    <div className="settings-section-card">
      <div className="settings-section-title">
        <div style={iconBox(ACCENT)}>
          <i className="pi pi-list" style={{ color: ACCENT, fontSize: "13px" }} />
        </div>
        Role Management
      </div>

      <p style={{ fontSize: "13px", color: "#64748b", marginBottom: "16px" }}>
        Assigned Roles
      </p>
      <div style={{ display: "flex", gap: "10px", flexWrap: "wrap", marginBottom: "28px" }}>
        {roles.map((r) => (
          <div
            key={r.name}
            style={{
              display: "flex", alignItems: "center", gap: "8px",
              padding: "8px 16px", borderRadius: "999px",
              border: `1.5px solid ${r.active ? r.color : "#e2e8f0"}`,
              background: r.active ? `${r.color}15` : "#f8fafc",
            }}
          >
            <div style={{ width: 8, height: 8, borderRadius: "50%", background: r.active ? r.color : "#cbd5e1" }} />
            <span style={{ fontSize: "13px", fontWeight: 600, color: r.active ? r.color : "#94a3b8" }}>
              {r.name}
            </span>
          </div>
        ))}
      </div>

      <p style={{ fontSize: "13px", color: "#64748b", marginBottom: "14px" }}>Permissions</p>
      <div style={{ display: "grid", gridTemplateColumns: "1fr 1fr", gap: "10px" }}>
        {permissions.map((p) => (
          <div
            key={p}
            style={{
              display: "flex", alignItems: "center", gap: "10px",
              padding: "12px 16px", borderRadius: "10px",
              background: "#f8fafc", border: "1.5px solid #e2e8f0",
            }}
          >
            <i className="pi pi-check-circle" style={{ color: "#10b981", fontSize: "16px" }} />
            <span style={{ fontSize: "13px", fontWeight: 500, color: "#374151" }}>{p}</span>
          </div>
        ))}
      </div>

      <div style={{ marginTop: "24px", display: "flex", gap: "12px" }}>
        <button style={primaryBtn(ACCENT)}>Save Changes</button>
        <button style={ghostBtn}>Cancel</button>
      </div>
    </div>
  </div>
);

export default RoleManagement;

// ─── Shared helpers ───────────────────────────────────────────────────────────

function iconBox(color: string): React.CSSProperties {
  return {
    width: 28, height: 28, borderRadius: "8px",
    background: `${color}18`,
    display: "flex", alignItems: "center", justifyContent: "center",
    flexShrink: 0,
  };
}

interface MetaRowProps {
  items: [string, string][];
}

const MetaRow: React.FC<MetaRowProps> = ({ items }) => (
  <div style={{ display: "flex", gap: "20px", marginTop: "16px" }}>
    {items.map(([k, v]) => (
      <div key={k} style={{ display: "flex", flexDirection: "column", gap: "3px" }}>
        <span style={{ fontSize: "10px", color: "#94a3b8", fontWeight: 600, textTransform: "uppercase", letterSpacing: "0.08em" }}>
          {k}
        </span>
        <span style={{ fontSize: "13px", fontWeight: 600, color: "#374151" }}>{v}</span>
      </div>
    ))}
  </div>
);

function primaryBtn(color: string): React.CSSProperties {
  return {
    padding: "10px 24px", borderRadius: "10px", border: "none",
    background: `linear-gradient(135deg, ${color}, ${color}cc)`,
    color: "#fff", fontWeight: 600, fontSize: "14px",
    cursor: "pointer", letterSpacing: "0.02em",
  };
}

