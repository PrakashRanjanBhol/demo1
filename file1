// ─── Sub-components ───────────────────────────────────────────────────────────

interface PersonalContentProps {
  data: PersonalData;
}

const PersonalContent: React.FC<PersonalContentProps> = ({ data }) => {
  const handleFocus = (e: React.FocusEvent<HTMLInputElement>) => {
    e.target.style.borderColor = "#6366f1";
  };
  const handleBlur = (e: React.FocusEvent<HTMLInputElement>) => {
    e.target.style.borderColor = "#e2e8f0";
  };

  return (
    <div>
      <div style={{ display: "grid", gridTemplateColumns: "1fr 1fr", gap: "20px" }}>
        {data.fields.map((f, i) => (
          <div key={i} style={{ display: "flex", flexDirection: "column", gap: "6px" }}>
            <label
              style={{
                fontSize: "11px",
                fontWeight: 600,
                color: "#94a3b8",
                letterSpacing: "0.08em",
                textTransform: "uppercase",
              }}
            >
              {f.label}
            </label>
            <input
              defaultValue={f.value}
              type={f.type}
              onFocus={handleFocus}
              onBlur={handleBlur}
              style={{
                padding: "10px 14px",
                border: "1.5px solid #e2e8f0",
                borderRadius: "10px",
                fontSize: "14px",
                color: "#1e293b",
                background: "#f8fafc",
                outline: "none",
                transition: "border 0.2s",
                fontFamily: "inherit",
              }}
            />
          </div>
        ))}
      </div>
      <div style={{ marginTop: "28px", display: "flex", gap: "12px" }}>
        <button
          style={{
            padding: "10px 24px",
            borderRadius: "10px",
            border: "none",
            background: "linear-gradient(135deg, #6366f1, #8b5cf6)",
            color: "#fff",
            fontWeight: 600,
            fontSize: "14px",
            cursor: "pointer",
            letterSpacing: "0.02em",
          }}
        >
          Save Changes
        </button>
        <button
          style={{
            padding: "10px 24px",
            borderRadius: "10px",
            border: "1.5px solid #e2e8f0",
            background: "#fff",
            color: "#64748b",
            fontWeight: 600,
            fontSize: "14px",
            cursor: "pointer",
          }}
        >
          Cancel
        </button>
      </div>
    </div>
  );
};

interface RoleContentProps {
  data: RoleData;
}

const RoleContent: React.FC<RoleContentProps> = ({ data }) => (
  <div>
    <p style={{ fontSize: "13px", color: "#64748b", marginBottom: "20px" }}>Assigned Roles</p>
    <div style={{ display: "flex", gap: "10px", flexWrap: "wrap", marginBottom: "28px" }}>
      {data.roles.map((r, i) => (
        <div
          key={i}
          style={{
            display: "flex",
            alignItems: "center",
            gap: "8px",
            padding: "8px 16px",
            borderRadius: "999px",
            border: `1.5px solid ${r.active ? r.color : "#e2e8f0"}`,
            background: r.active ? `${r.color}15` : "#f8fafc",
          }}
        >
          <div
            style={{
              width: 8,
              height: 8,
              borderRadius: "50%",
              background: r.active ? r.color : "#cbd5e1",
            }}
          />
          <span style={{ fontSize: "13px", fontWeight: 600, color: r.active ? r.color : "#94a3b8" }}>
            {r.name}
          </span>
        </div>
      ))}
    </div>
    <p style={{ fontSize: "13px", color: "#64748b", marginBottom: "14px" }}>Permissions</p>
    <div style={{ display: "grid", gridTemplateColumns: "1fr 1fr", gap: "10px" }}>
      {data.permissions.map((p, i) => (
        <div
          key={i}
          style={{
            display: "flex",
            alignItems: "center",
            gap: "10px",
            padding: "12px 16px",
            borderRadius: "10px",
            background: "#f8fafc",
            border: "1.5px solid #e2e8f0",
          }}
        >
          <i className="pi pi-check-circle" style={{ color: "#10b981", fontSize: "16px" }} />
          <span style={{ fontSize: "13px", fontWeight: 500, color: "#374151" }}>{p}</span>
        </div>
      ))}
    </div>
  </div>
);

