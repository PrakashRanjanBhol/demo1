    position: relative;
    z-index: 1;
    white-space: nowrap;
}

/* Tab Indicator */
.tab-indicator {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--primary-color);
    border-radius: 3px 3px 0 0;
    transform: scaleX(0);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Active Tab */
.mode-tab.active {
    background: linear-gradient(
        135deg,
        rgba(139, 92, 246, 0.12),
        rgba(167, 139, 250, 0.12)
    );
    color: var(--primary-color);
    font-weight: 600;
    box-shadow: 
        0 2px 8px rgba(139, 92, 246, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.5);
}

.mode-tab.active svg {
    stroke: var(--primary-color);
    transform: scale(1.1);
}

.mode-tab.active .tab-indicator {
    transform: scaleX(1);
}

/* Hover State */
.mode-tab:not(.active):not([disabled]):hover {
    background: rgba(139, 92, 246, 0.06);
    color: var(--text-color);
    transform: translateY(-1px);
}

.mode-tab:not(.active):not([disabled]):hover svg {
    stroke: var(--primary-color);
    transform: scale(1.05);
}

/* Disabled Tab */
.mode-tab[disabled] {
    opacity: 0.4;
    cursor: not-allowed;
    pointer-events: none;
}

/* Active Disabled Tab */
.mode-tab.active[disabled] {
    opacity: 0.6;
}

