// ADD TO upload-generate.component.ts

/**
 * Get the sequential index/number for an uploaded file
 * Files are numbered from 1 based on upload order
 */
getFileIndex(fileWithStatus: FileWithStatus): number {
  const index = this.uploadedFilesWithStatus.findIndex(f => f === fileWithStatus);
  return index + 1; // Convert to 1-based index
}

// If using getUploadedFilesOnly() for filtering:
getFileIndexFiltered(fileWithStatus: FileWithStatus): number {
  const uploadedFiles = this.getUploadedFilesOnly();
  const index = uploadedFiles.findIndex(f => f === fileWithStatus);
  return index + 1; // Convert to 1-based index
}








