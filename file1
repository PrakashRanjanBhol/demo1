<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Live Preview Badge</title>
</head>
<body style="background: #0d1117; color: #fff; font-family: sans-serif;">

<script>
// --- Create the live preview container ---
const livePreview = document.createElement("div");
livePreview.className = "live-preview";
livePreview.style.display = "inline-flex";
livePreview.style.alignItems = "center";
livePreview.style.gap = "6px";
livePreview.style.padding = "6px 12px";
livePreview.style.background = "linear-gradient(135deg, #007bff, #00d4ff)";
livePreview.style.color = "#fff";
livePreview.style.borderRadius = "20px";
livePreview.style.fontSize = "0.9rem";
livePreview.style.fontWeight = "500";
livePreview.style.cursor = "pointer";
livePreview.style.transition = "transform 0.2s ease, box-shadow 0.2s ease";
livePreview.style.margin = "20px"; // optional spacing

// --- Hover effects (JS alternative to :hover) ---
livePreview.addEventListener("mouseenter", () => {
  livePreview.style.transform = "translateY(-2px)";
  livePreview.style.boxShadow = "0 4px 10px rgba(0, 0, 0, 0.25)";
});
livePreview.addEventListener("mouseleave", () => {
  livePreview.style.transform = "none";
  livePreview.style.boxShadow = "none";
});

// --- Create the 👁️ icon ---
const icon = document.createElement("span");
icon.className = "icon";
icon.textContent = "👁️";
icon.style.fontSize = "1rem";

// --- Create the text ---
const text = document.createElement("span");
text.className = "text";
text.textContent = "See Live Preview";

// --- Combine elements ---
livePreview.appendChild(icon);
livePreview.appendChild(text);

// --- Add to DOM (e.g., at the end of body) ---
document.body.appendChild(livePreview);

// Optional: Add click action
livePreview.addEventListener("click", () => {
  alert("Opening live preview...");
});
</script>

</body>
</html>
