            <div class="keyword-chip" 
                 *ngFor="let keyword of getDetailKeywordsArray(); let i = index"
                 [style.background]="getChipBackground(i)" 
                 [style.border-color]="getChipBorderColor(i)">
                <span class="chip-text">{{ keyword }}</span>
                <button class="chip-remove-btn" 
                        (click)="removeDetailKeyword(keyword)"
                        title="Remove keyword">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <p class="no-keywords-message" *ngIf="getDetailKeywordsArray().length === 0">
                No keywords available
            </p>
        </div>
    </div>

    <!-- ASSESSMENT QUESTIONS Content -->
