    <div class="content-layout">
        <!-- Upload Section (Left - 50%) -->
        <!-- Upload Section (Now contains all three columns) -->
        <div class="upload-column">
            <section class="upload-section">
                <div class="upload-content">
                    <!-- Three-way Split: Upload (Left) + History (Middle) + Workspace (Right) -->
                    <div class="split-three-columns">

                        <!-- LEFT THIRD: Upload & Generate -->
                        <div class="upload-third">
                            <div class="section-header-inline">
                                <h3 class="section-inline-title">Upload & Generate</h3>
                            </div>

                            <!-- Mode Toggle Tabs -->
                            <div class="mode-toggle-tabs">
                                <button class="mode-tab" [class.active]="uploadMode === 'new'"
                                    (click)="uploadMode = 'new'; currentStep = 1">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round"
