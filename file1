        ps_session_id: 3,
        is_new: false
      },
      {
        session_id: 'yzabcdef',
        created_date: '2024-12-16 18:12:00',
        count: 5,
        first_prompt: 'Help me analyze this dataset using pandas and create visualizations with matplotlib',
        ps_session_id: 4,
        is_new: false
      },
      {
        session_id: 'ghijklmn',
        created_date: '2024-12-16 15:28:00',
