/* ========================================
   Ticket Card Base Styles
   ======================================== */

.ticket-card {
  background: var(--sdlc-suite-ticket-list-bg);
  border: 1px solid var(--sdlc-suite-ticket-list-border);
  border-radius: 0.5rem;
  padding: 1rem;
  margin-bottom: 0.75rem;
  cursor: pointer;
  transition: all 0.2s ease;
  animation: fadeInUp 0.4s ease-out;
  animation-fill-mode: both;
}

.ticket-card:hover {
  border-color: var(--sdlc-suite-ticket-list-hover-border);
  box-shadow: 0 0.125rem 0.75rem var(--sdlc-suite-ticket-list-shadow-hover);
  transform: translateY(-0.125rem);
  background: var(--sdlc-suite-ticket-list-hover-bg);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(1.25rem);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Card Header */
.ticket-card-header {
