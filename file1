import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';

interface Workflow {
  id: string;
  name: string;
  description: string;
  icon: string;
  active?: boolean;
}

@Component({
  selector: 'app-workflow-sidebar',
  standalone: true,
  imports: [CommonModule, FormsModule],
  templateUrl: './workflow-sidebar.component.html',
  styleUrls: ['./workflow-sidebar.component.css']
})
export class WorkflowSidebarComponent {
  searchTerm: string = '';
  selectedWorkflowId: string = 'data-sync';

  workflows: Workflow[] = [
    {
      id: 'data-sync',
      name: 'Data Sync Workflow',
      description: 'Sync data across platforms',
      icon: 'sync',
      active: true
    },
    {
      id: 'email-automation',
      name: 'Email Automation',
      description: 'Automated email responses',
      icon: 'email'
    },
    {
      id: 'report-generator',
      name: 'Report Generator',
      description: 'Generate weekly reports',
      icon: 'document'
    },
    {
      id: 'slack-notifier',
      name: 'Slack Notifier',
      description: 'Send notifications to Slack',
      icon: 'notification'
    }
  ];

  get filteredWorkflows(): Workflow[] {
    if (!this.searchTerm) {
      return this.workflows;
    }

    const term = this.searchTerm.toLowerCase();
    return this.workflows.filter(workflow =>
      workflow.name.toLowerCase().includes(term) ||
      workflow.description.toLowerCase().includes(term)
    );
  }

  createWorkflow(): void {
    alert('Create New Workflow\n\nThis will open the workflow creation interface.');
    // In production: this.router.navigate(['/workflow/new']);
  }

  importWorkflow(): void {
    alert('Import Workflow\n\nThis will open the workflow import dialog.');
    // In production: trigger file upload dialog or redirect to import page
  }

  refreshWorkflows(): void {
    alert('Refreshing Workflows\n\nThis will reload the workflow list from n8n.');
    // In production: this.workflowService.refreshWorkflows().subscribe();
  }

  selectWorkflow(workflowId: string): void {
    this.selectedWorkflowId = workflowId;
    console.log(`Selected workflow: ${workflowId}`);
    alert(`Executing workflow: ${workflowId}\n\nIn production, this will redirect to n8n workflow execution.`);
    // In production: window.open(`https://your-n8n-instance.com/workflow/${workflowId}`, '_blank');
  }

  runWorkflow(event: Event, workflowId: string): void {
    event.stopPropagation();
    console.log(`Running workflow: ${workflowId}`);
    alert(`Executing workflow: ${workflowId}\n\nRedirecting to n8n...`);
    // In production: window.open(`https://your-n8n-instance.com/workflow/${workflowId}/execute`, '_blank');
  }

  getIconPath(iconType: string): string {
    const icons: { [key: string]: string } = {
      sync: 'M23 4 23 10 17 10 M1 20 1 14 7 14 M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15',
      email: 'M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z M22,6 12,13 2,6',
      document: 'M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z M14 2 14 8 20 8 M16 13 8 13 M16 17 8 17 M10 9 9 9 8 9',
      notification: 'M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9 M13.73 21a2 2 0 0 1-3.46 0'
    };
    return icons[iconType] || icons.sync;
  }
}












<div class="app-container">
  <div class="sidebar">
    <div class="sidebar-header">
      <div class="header-content">
        <div class="header-text">
          <h2>Workflow Agents</h2>
          <p>Select and execute workflows</p>
        </div>
        <div class="header-actions">
          <button class="action-btn" (click)="createWorkflow()" title="Create Workflow">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
          </button>
          <button class="action-btn" (click)="importWorkflow()" title="Import Workflow">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
          </button>
          <button class="action-btn" (click)="refreshWorkflows()" title="Refresh Workflows">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round">
              <polyline points="23 4 23 10 17 10"></polyline>
              <polyline points="1 20 1 14 7 14"></polyline>
              <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <div class="search-container">
      <input type="text" class="search-input" placeholder="Search workflows..." [(ngModel)]="searchTerm">
    </div>

    <div class="workflows-container">
      <div class="workflow-section">
        <div class="section-title">Workflows</div>

        <div *ngFor="let workflow of filteredWorkflows" class="workflow-item"
          [class.active]="selectedWorkflowId === workflow.id" (click)="selectWorkflow(workflow.id)">
          <div class="workflow-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
              stroke-linejoin="round">
              <path [attr.d]="getIconPath(workflow.icon)"></path>
            </svg>
          </div>
          <div class="workflow-info">
            <div class="workflow-name">{{ workflow.name }}</div>
            <div class="workflow-description">{{ workflow.description }}</div>
          </div>
          <div class="run-btn" (click)="runWorkflow($event, workflow.id)">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <polygon points="5 3 19 12 5 21 5 3"></polygon>
            </svg>
            <span>Run</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="main-content">
    <h1>Workflow Execution Dashboard</h1>
    <p>Select a workflow from the sidebar to execute or manage it.</p>
  </div>
</div>













