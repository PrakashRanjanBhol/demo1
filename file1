export class WorkflowSidebarComponent implements OnInit {
  // ... existing properties ...

  selectedFunctionName: string | null = null;
  deletingFunctionName: string | null = null;
  isDeletingInProgress: boolean = false;

  // ... existing methods ...

  // Update delete function method
  deleteFunction(functionName: string, event: Event): void {
    event.stopPropagation();
    
    // Check if deletion is already in progress
    if (this.isDeletingInProgress) {
      alert('Please wait for the current deletion to complete.');
      return;
    }
    
    this.deletingFunctionName = functionName;
    console.log('Delete mode activated for:', functionName);
  }

  // ... rest of existing methods ...
}
