/**
 * Get selected detail item safely
 */
getSelectedDetailItem(): ResultItem | null {
  return this.selectedDetailItem;
}

/**
 * Check if selected detail item exists
 */
hasSelectedDetailItem(): boolean {
  return this.selectedDetailItem !== null;
}

/**
 * Get keywords array for detail item safely
 */
getDetailKeywordsArray(): string[] {
  if (!this.selectedDetailItem) {
    return [];
  }
  return this.getKeywordsArray(this.selectedDetailItem);
}

/**
 * Get assessment questions for detail item safely
 */
getDetailAssessmentQuestions(): AssessmentQuestion[] {
  if (!this.selectedDetailItem || this.selectedDetailItem.type !== 'questions') {
    return [];
  }
  return this.selectedDetailItem.assessmentQuestions || [];
}

/**
 * Remove keyword from detail item
 */
removeDetailKeyword(keyword: string): void {
  if (!this.selectedDetailItem) {
    return;
  }
  this.removeKeyword(this.selectedDetailItem.id, keyword);
}










<div class="detail-sidebar-content">
    <!-- SUMMARY Content -->
    <div *ngIf="selectedDetailItem?.type === 'summary'" class="detail-markdown-wrapper">
        <div class="markdown-content" [innerHTML]="selectedItemContent"></div>
    </div>

    <!-- KEYWORDS Content -->
    <div *ngIf="selectedDetailItem?.type === 'keywords'" class="detail-keywords-wrapper">
