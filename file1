import React, { useState } from 'react';
import styles from './ChatImageGrid.module.css';
import { Dialog } from 'primereact/dialog';
import { Image } from 'primereact/image';  // supports preview with zoom :contentReference[oaicite:1]{index=1}

const ChatImageGrid = ({ images }) => {
  const [visible, setVisible] = useState(false);
  const [current, setCurrent] = useState(null);

  const previewLimit = 4;
  const extraCount = images.length - previewLimit;

  return (
    <div className={styles.container}>
      <div className={styles.grid}>
        {images.slice(0, previewLimit).map((img, idx) => (
          <Image
            key={idx}
            src={`data:image/jpeg;base64,${img.base64Image}`}
            alt={img.fileName || `img-${idx}`}
            preview
            zoomSrc={`data:image/jpeg;base64,${img.base64Image}`}
            className={styles.thumb}
            onClick={() => {
              setCurrent(idx);
              setVisible(true);
            }}
          />
        ))}
        {extraCount > 0 && (
          <button className={styles.moreBtn} onClick={() => setVisible(true)}>
            +{extraCount} more
          </button>
        )}
      </div>

      <Dialog
        header={current !== null ? images[current].fileName : 'Images'}
        visible={visible}
        onHide={() => setVisible(false)}
        style={{ width: '70vw', backgroundColor: '#181818', color: '#eee' }}
        breakpoints={{ '960px': '90vw' }}
      >
        <div className={styles.dialogGrid}>
          {images.map((img, idx) => (
            <div key={idx} className={styles.dialogItem}>
              <Image
                src={`data:image/jpeg;base64,${img.base64Image}`}
                alt={img.fileName}
                preview
                zoomSrc={`data:image/jpeg;base64,${img.base64Image}`}
                className={styles.dialogImage}
              />
              <div className={styles.caption}>
                <strong>{img.fileName}</strong>
              </div>
            </div>
          ))}
        </div>
      </Dialog>
    </div>
  );
};

export default ChatImageGrid;



.container {
  display: flex;
  flex-direction: column;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 80px);
  grid-template-rows: repeat(2, 80px);
  gap: 8px;
}

.thumb {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 6px;
  border: 1px solid #333;
  cursor: pointer;
}

.moreBtn {
  background: #333;
  color: #ddd;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 0.85rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s;
}

.moreBtn:hover {
  background: #444;
}

.dialogGrid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  gap: 1rem;
  padding: 1rem;
  background-color: #181818;
}

.dialogItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #eee;
}

.dialogImage {
  width: 100%;
  max-width: 200px;
  object-fit: scale-down;
  cursor: zoom-in;
}

.caption {
  margin-top: 0.5rem;
  font-size: 0.9rem;
  text-align: center;
}
