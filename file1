// ✅ ADD these cache properties
private _hasFavorites: boolean = false;
private _favoriteKeysCache: string = '';





// ❌ REMOVE old method like:
// hasFavorites(): boolean {
//   return Object.keys(this.favoriteRepositories).some(key => 
//     this.favoriteRepositories[key].length > 0
//   );
// }

// ✅ REPLACE with this cached getter:
get hasFavorites(): boolean {
  // Create cache key from project keys and their repo counts
  const keys = Object.keys(this.favoriteRepositories);
  const cacheKey = keys.map(k => `${k}:${this.favoriteRepositories[k].length}`).join('|');
  
  // Only recalculate if structure changed
  if (this._favoriteKeysCache !== cacheKey) {
    this._favoriteKeysCache = cacheKey;
    this._hasFavorites = keys.some(key => this.favoriteRepositories[key].length > 0);
  }
  
  return this._hasFavorites;
}
