export class WorkflowSidebarComponent implements OnInit {
  // ... existing properties ...

  selectedFunctionName: string | null = null;
  deletingFunctionName: string | null = null; // Add this property

  // ... existing methods ...

  // Remove viewFunction method and update editFunction
  editFunction(functionName: string, event: Event): void {
    event.stopPropagation();
    const func = this.functions.find(f => f.function_name === functionName);
    console.log('Edit function:', functionName);
    console.log('Function code:', func?.function_code);
    // In production: open editor modal to edit function code
  }

  // Add delete function method
  deleteFunction(functionName: string, event: Event): void {
    event.stopPropagation();
    this.deletingFunctionName = functionName;
    console.log('Delete mode activated for:', functionName);
  }

  // Add confirm delete method
  confirmDeleteFunction(functionName: string, event: Event): void {
    event.stopPropagation();
    
    // Remove function from array
    this.functions = this.functions.filter(f => f.function_name !== functionName);
    
    // Clear deleting state
    this.deletingFunctionName = null;
    
    // Clear selection if this function was selected
    if (this.selectedFunctionName === functionName) {
      this.selectedFunctionName = null;
    }
    
    console.log('Function deleted:', functionName);
    // In production: make API call to delete function
  }

  // Add cancel delete method
  cancelDeleteFunction(event: Event): void {
    event.stopPropagation();
    this.deletingFunctionName = null;
    console.log('Delete cancelled');
  }

  // Add method to check if function is in delete mode
  isFunctionDeleting(functionName: string): boolean {
    return this.deletingFunctionName === functionName;
  }

  // ... rest of existing methods ...
}












<div>
  <div *ngFor="let func of getFilteredFunctions()" class="function-item"
    (click)="!isFunctionDeleting(func.function_name) && selectFunction(func.function_name)">
    <div class="function-checkbox" *ngIf="!isFunctionDeleting(func.function_name)">
      <input type="checkbox" [checked]="isFunctionSelected(func.function_name)"
        (click)="$event.stopPropagation()" (change)="selectFunction(func.function_name)">
    </div>
    <div class="function-info">
      <div class="function-name">{{ func.function_name }}</div>
    </div>
    
    <!-- Normal mode: Edit and Delete icons -->
    <div class="function-actions" *ngIf="!isFunctionDeleting(func.function_name)">
      <button class="function-action-btn" (click)="editFunction(func.function_name, $event)"
        title="Edit Function">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
          stroke-linejoin="round">
          <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
          <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
        </svg>
      </button>
      <button class="function-action-btn delete-btn" (click)="deleteFunction(func.function_name, $event)"
        title="Delete Function">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
          stroke-linejoin="round">
          <polyline points="3 6 5 6 21 6"></polyline>
          <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
          <line x1="10" y1="11" x2="10" y2="17"></line>
          <line x1="14" y1="11" x2="14" y2="17"></line>
        </svg>
      </button>
    </div>

    <!-- Delete confirmation mode: Confirm and Cancel buttons -->
    <div class="function-delete-actions" *ngIf="isFunctionDeleting(func.function_name)">
      <button class="confirm-delete-btn" (click)="confirmDeleteFunction(func.function_name, $event)"
        title="Confirm Delete">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
          stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        Confirm
      </button>
      <button class="cancel-delete-btn" (click)="cancelDeleteFunction($event)" title="Cancel Delete">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
          stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
        Cancel
      </button>
    </div>
  </div>
</div>
















