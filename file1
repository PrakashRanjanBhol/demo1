// Update the selectAgent method:
selectAgent(agentId: number): void {
  this.selectedAgentId = this.selectedAgentId === agentId ? null : agentId;
}





<!-- Replace the agent-card div with: -->
<div 
  *ngFor="let agent of filteredAgents"
  class="agent-card"
  [class.active]="selectedAgentId === agent.id"
  (click)="selectAgent(agent.id)"
>
  <div class="agent-header">
    <input 
      type="checkbox" 
      class="agent-checkbox"
      [checked]="selectedAgentId === agent.id"
      (click)="$event.stopPropagation()"
    >
    <div class="agent-icon">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" [attr.d]="agent.icon"></path>
      </svg>
    </div>
    <div class="agent-name">{{ agent.name }}</div>
  </div>
  <div class="agent-description">{{ agent.description }}</div>
</div>












/* Add these new styles: */
.agent-checkbox {
  width: 16px;
  height: 16px;
  margin-right: 10px;
  cursor: pointer;
  accent-color: #667eea;
  flex-shrink: 0;
}

/* Update .agent-description to account for checkbox: */
.agent-description {
    font-size: 12px;
    color: var(--adk-agents-text-secondary);
    line-height: 1.5;
    margin-left: 68px; /* Changed from 42px to 68px */
}
