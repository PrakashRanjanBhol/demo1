<!-- File Header -->
<ng-container *ngIf="activeView === 'file' && selectedFile">
  <div class="breadcrumb animate-in">
    <svg class="breadcrumb-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
