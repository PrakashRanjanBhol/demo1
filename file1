  /* Blockquotes with decorative border + quotation marks */
.regular-text blockquote {
    margin: 2rem 0;
    padding: 2rem 2.5rem;
    position: relative;
    font-style: italic;
    color: var(--text-secondary);
    background: var(--bg-blockquote);
    border: 1px solid var(--border-secondary);
    border-left: 6px solid var(--accent-blockquote);
    border-radius: 12px;
    line-height: 1.8;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
}

/* Opening quote */
.regular-text blockquote::before {
    content: "“";
    font-size: 4rem;
    font-weight: bold;
    color: var(--accent-blockquote);
    position: absolute;
    top: 5px;
    left: 15px;
    opacity: 0.25;
    font-family: Georgia, serif;
}

/* Closing quote */
.regular-text blockquote::after {
    content: "”";
    font-size: 4rem;
    font-weight: bold;
    color: var(--accent-blockquote);
    position: absolute;
    bottom: -10px;
    right: 20px;
    opacity: 0.25;
    font-family: Georgia, serif;
}
